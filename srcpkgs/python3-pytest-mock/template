maintainer="nox"
pkgname="python3-pytest-mock"
version=3.9.0
revision=2
short_desc="Thin-wrapper around mock for easier use with py.test (Python3)"
depends="python3-pytest"
checkdepends="python3-pytest"
hostmakedepends="python3-setuptools"
homepage="https://github.com/pytest-dev/pytest-mock/"
license="MIT"
changelog="https://github.com/pytest-dev/pytest-mock/raw/main/CHANGELOG.rst"
distfiles="$PYPI_SITE/p/pytest-mock/pytest-mock-$version.tar.gz"
checksum="c899a0dcc8a5f22930acd020b500abd5f956911f326864a3b979e4866e14da82"
build_style="python3-module"

# pytest-mock requires pytest-mock to be installed so it'll always fail
# during packaging
make_check="no"

pre_build() {
  vsed \
    -i \
    -e '/setup_requires=/d' \
    -e "s|use_scm_version=.*|version='$version',|" \
    setup.py
}

post_install() {
  vlicense LICENSE
}

