maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="fann"
version=2.2.0
revision=2
short_desc="A free open source neural network library"
homepage="http://leenissen.dk/fann/"
license="LGPL-2.1-or-later"
distfiles="https://github.com/libfann/fann/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="f31c92c1589996f97d855939b37293478ac03d24b4e1c08ff21e0bd093449c3c"
build_style="cmake"

fann-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

