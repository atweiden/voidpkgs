maintainer="nox"
pkgname="dqlite"
version=1.13.0
revision=2
short_desc="Distributed SQLite database using the Raft algorithm"
makedepends+=" raft-devel"
makedepends+=" sqlite-devel"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" pkg-config"
homepage="https://github.com/canonical/dqlite"
license="custom:LGPL-3.0-only-linking-exception"
distfiles="https://github.com/canonical/dqlite/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="14334a72389322d047576697f112da4cd6e1a5257d652d6162f195f2855fcd12"
build_style="gnu-configure"

pre_configure() {
  autoreconf -i
}

post_install() {
  vlicense LICENSE
}

dqlite-devel_package() {
  unset depends
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

