maintainer="nox"
pkgname="dqlite"
version=1.11.1
revision=1
short_desc="Distributed SQLite database using the Raft algorithm"
makedepends+=" raft-devel"
makedepends+=" sqlite-devel"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" pkg-config"
homepage="https://github.com/canonical/dqlite"
license="custom:LGPL-3.0-only-linking-exception"
distfiles="https://github.com/canonical/dqlite/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="f900b81b7ba66ba654c734f7fc9f01caf462408f3751f5357019db0c18d438b5"
build_style="gnu-configure"

pre_configure() {
  autoreconf -i
}

post_install() {
  vlicense LICENSE
}

dqlite-devel_package() {
  unset depends
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

