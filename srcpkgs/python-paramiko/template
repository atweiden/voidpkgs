maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="python-paramiko"
version=2.4.3
revision=2
short_desc="Python2 SSH2 protocol library"
archs="noarch"
depends+=" python-bcrypt"
depends+=" python-cryptography"
depends+=" python-pyasn1"
depends+=" python-pynacl"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="http://www.paramiko.org/"
license="LGPL-2.1-or-later"
distfiles="$PYPI_SITE/p/paramiko/${pkgname#*-}-$version.tar.gz"
checksum="c6de454b3be8d35100d95d62b8073e429ed35326d574649f173c0acf7d72b2eb"
wrksrc="${pkgname#*-}-$version"
build_style="python-module"
pycompile_module="paramiko"

python3-paramiko_package() {
  unset depends
  archs="noarch"
  pycompile_module="paramiko"
  depends+=" python3-bcrypt"
  depends+=" python3-cryptography"
  depends+=" python3-pyasn1"
  depends+=" python3-pynacl"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
  }
}

