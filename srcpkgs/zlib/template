maintainer="nox"
pkgname="zlib"
version=1.3
revision=1
short_desc="Compression/decompression Library"
homepage="https://www.zlib.net"
license="Zlib"
changelog="https://www.zlib.net/ChangeLog.txt"
distfiles="https://www.zlib.net/fossils/$pkgname-$version.tar.gz"
checksum="ff0ba4c292013dbc27530b3a81e1f9a813cd39de01ca5e0f8bf355702efa593e"
build_style="configure"
configure_args+=" --prefix=/usr"
configure_args+=" --shared"
bootstrap="yes"

zlib-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share
  }
}

