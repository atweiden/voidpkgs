maintainer="nox"
pkgname="zlib"
version=1.2.13
revision=1
short_desc="Compression/decompression Library"
homepage="https://www.zlib.net"
license="Zlib"
changelog="https://www.zlib.net/ChangeLog.txt"
distfiles="https://www.zlib.net/fossils/$pkgname-$version.tar.gz"
checksum="b3a24de97a8fdbc835b9833169501030b8977031bcb54b3b3ac13740f846ab30"
build_style="configure"
configure_args+=" --prefix=/usr"
configure_args+=" --shared"
bootstrap="yes"

zlib-devel_package() {
  depends="zlib>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share
  }
}

