maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="wget"
version=1.19.5
revision=1
short_desc="The GNU wget download utility"
depends="ca-certificates"
makedepends+=" libidn-devel"
makedepends+=" libpsl-devel"
makedepends+=" libuuid-devel"
makedepends+=" pcre-devel"
makedepends+=" $(vopt_if gnutls gnutls-devel)"
makedepends+=" $(vopt_if ssl libressl-devel)"
checkdepends+=" perl-HTTP-Daemon"
checkdepends+=" perl-IO-Socket-SSL"
hostmakedepends+=" perl"
hostmakedepends+=" pkg-config"
homepage="http://www.gnu.org/software/wget/wget.html"
license="GPL-3.0-or-later"
#changelog="https://git.savannah.gnu.org/cgit/wget.git/plain/NEWS"
distfiles="$GNU_SITE/wget/wget-$version.tar.gz"
checksum="b39212abe1a73f2b28f4c6cb223c738559caac91d6e416a6d91d4b9d55c9faee"
conf_files="/etc/wgetrc"
build_style="gnu-configure"
configure_args+=" $(vopt_if ssl --with-ssl=openssl)"
configure_args+=" $(vopt_if gnutls --with-ssl=gnutls)"
build_options+=" gnutls"
build_options+=" ssl"
build_options_default="ssl"
vopt_conflict gnutls ssl

post_install() {
  echo "ca_certificate=/etc/ssl/certs/ca-certificates.crt" >> "$DESTDIR/etc/wgetrc"
}

