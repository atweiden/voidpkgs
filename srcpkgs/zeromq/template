maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="zeromq"
version=4.3.0
revision=1
short_desc="The Intelligent Transport Layer"
makedepends="libsodium-devel"
hostmakedepends+=" asciidoc"
hostmakedepends+=" pkg-config"
hostmakedepends+=" xmlto"
homepage="http://www.zeromq.org"
license="LGPL-3.0-or-later"
distfiles="https://github.com/zeromq/libzmq/releases/download/v$version/$pkgname-$version.tar.gz"
checksum="8e9c3af6dc5a8540b356697081303be392ade3f014615028b3c896d0148397fd"
build_style="gnu-configure"
configure_args="--with-libsodium"

zeromq-devel_package() {
  depends="$sourcepkg-${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove usr/share/man/man3
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

