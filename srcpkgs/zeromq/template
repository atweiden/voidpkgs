maintainer="nox"
pkgname="zeromq"
version=4.3.3
revision=1
short_desc="Intelligent Transport Layer"
makedepends="libsodium-devel"
hostmakedepends+=" asciidoc"
hostmakedepends+=" pkg-config"
hostmakedepends+=" xmlto"
homepage="http://www.zeromq.org"
license="LGPL-3.0-or-later"
distfiles="https://github.com/zeromq/libzmq/releases/download/v$version/$pkgname-$version.tar.gz"
checksum="9d9285db37ae942ed0780c016da87060497877af45094ff9e1a1ca736e3875a2"
build_style="gnu-configure"
configure_args="--with-libsodium"

zeromq-devel_package() {
  depends="$sourcepkg-${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove usr/share/man/man3
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

