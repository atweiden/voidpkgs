revision=1
short_desc="Tmux layout generator and command executor"
archs="noarch"
depends+=" bash"
depends+=" coreutils"
depends+=" openssh"
depends+=" sed"
depends+=" tmux"
homepage="https://github.com/tjhop/tmuxer"
license="MIT"
distfiles="https://github.com/tjhop/tmuxer/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
