maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="python-more-itertools"
version=6.0.0
revision=1
short_desc="More Python2 routines for operating on itertables"
noarch="yes"
depends="python-six"
checkdepends="python3-six"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="https://github.com/erikrose/more-itertools"
license="MIT"
distfiles="https://github.com/erikrose/more-itertools/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="532245b8736afd5fefc5cc9515b4df6acc7130e7bdf326c667150ca03fe9cddf"
wrksrc="${pkgname#*-}-$version"
build_style="python-module"
pycompile_module="more_itertools"

do_check() {
  python3 setup.py test
}

post_install() {
  vlicense LICENSE
}

python3-more-itertools_package() {
  noarch="yes"
  pycompile_module="more_itertools"
  short_desc="${short_desc/Python2/Python3}"
  depends="python3-six"
  pkg_install() {
    vmove "usr/lib/python3*"
    vlicense LICENSE
  }
}

