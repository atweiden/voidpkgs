maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libev"
version=4.31
revision=1
short_desc="High-performance event loop loosely modelled after libevent"
homepage="http://software.schmorp.de/pkg/libev.html"
license="GPL-2.0-or-later, BSD-2-Clause"
distfiles="http://dist.schmorp.de/libev/$pkgname-$version.tar.gz"
checksum="ed855d2b52118e32c0c1a6a32bd18c97f9e6711ca511f5ee12de3b9eccc66e5a"
build_style="gnu-configure"

post_install() {
  vlicense LICENSE
  # rm to avoid conflict with libevent
  rm -f "$DESTDIR/usr/include/event.h"
}

libev-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share/man
  }
}

