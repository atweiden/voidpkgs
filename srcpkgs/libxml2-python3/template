post_patch() {
  if [[ -n "$CROSS_BUILD" ]]; then
    vsed \
      -i \
      -e "s:/usr/include:$XBPS_CROSS_BASE/usr/include:" \
      setup.py
  fi
}

post_install() {
  vlicense ../COPYING
}

