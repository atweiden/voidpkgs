maintainer="nox"
pkgname="snappy"
version=1.1.8
revision=1
short_desc="Fast compressor/decompressor library"
makedepends+=" lzo-devel"
makedepends+=" zlib-devel"
homepage="https://google.github.io/snappy"
license="BSD-3-Clause"
distfiles="https://github.com/google/snappy/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="16b677f07832a612b0836178db7f374e414f94657c138e6993cbfc5dcc58651f"
build_style="cmake"
configure_args="-DBUILD_SHARED_LIBS=1"

post_install() {
  vlicense COPYING
}

snappy-devel_package() {
  depends="$sourcepkg-${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/cmake
    vmove "usr/lib/*.so"
  }
}

