maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="dcrd"
version=1.4.0pre
revision=1
_gitrev="13b69e2c84b3b495d2b277d15bc6f3b1138fc6b3"
short_desc="Decred daemon written in Go"
hostmakedepends="git"
tags="decred"
homepage="https://github.com/decred/dcrd"
license="ISC"
distfiles="https://github.com/decred/dcrd/archive/$_gitrev.tar.gz>$pkgname-$version.tar.gz"
checksum="0be44ec37978be0c1fe042fa8e25a3b45c4cb3ce264c07e2d62f64aa2f9fed2e"
wrksrc="$pkgname-$_gitrev"
build_style="go"
go_import_path="github.com/decred/dcrd"

do_build() {
  go_package="${go_package:-$go_import_path}"
  export GO111MODULE="on"
  go get -x -tags "$go_build_tags" -ldflags "$go_ldflags" "$go_package"
  go install . ./cmd/...
}

pre_install() {
  # prepend dcr to unqualified binaries
  for _bin in $(find "$GOPATH/bin"  \
                        -mindepth 1 \
                        -maxdepth 1 \
                        -type f ! -name "dcr*" -printf '%f\n'); do
    mv "$GOPATH/bin/$_bin" "$GOPATH/bin/dcr$_bin"
  done
}

post_install() {
  vlicense "$GOSRCPATH/LICENSE"
  vdoc "$GOSRCPATH/CHANGES"
  vdoc "$GOSRCPATH/README.md"
  vdoc "$GOSRCPATH/cmd/dcrctl/sample-dcrctl.conf"
  vcopy "$GOSRCPATH/docs" "usr/share/doc/$pkgname"
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
