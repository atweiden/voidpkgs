maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="dcrd"
version=1.4.0rc3
revision=1
short_desc="Decred daemon written in Go"
hostmakedepends="git"
tags="decred"
homepage="https://github.com/decred/dcrd"
license="ISC"
distfiles="https://github.com/decred/dcrd/archive/release-v${version/rc3/-rc3}.tar.gz>$pkgname-$version.tar.gz"
checksum="108e32437c8bcf5fd1ea2ad6b481a8b5991fbf13291b889ccedadd25616bcbe4"
wrksrc="$pkgname-release-v${version/rc3/-rc3}"
build_style="go"
go_import_path="github.com/decred/dcrd"

post_build() {
  go install . ./cmd/...
}

pre_install() {
  # prepend dcr to unqualified binaries
  for _bin in $(find "$GOPATH/bin"  \
                        -mindepth 1 \
                        -maxdepth 1 \
                        -type f ! -name "dcr*" -printf '%f\n'); do
    mv "$GOPATH/bin/$_bin" "$GOPATH/bin/dcr$_bin"
  done
}

post_install() {
  vlicense LICENSE
  vdoc CHANGES
  vdoc README.md
  vdoc cmd/dcrctl/sample-dcrctl.conf
  vcopy docs "usr/share/doc/$pkgname"
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
