maintainer="nox"
pkgname="babeltrace"
version=1.5.8
revision=1
short_desc="Open source trace format converter"
makedepends+=" glib-devel"
makedepends+=" libelf"
makedepends+=" libuuid-devel"
makedepends+=" popt-devel"
hostmakedepends="pkg-config"
homepage="http://diamon.org/babeltrace"
license="MIT, GPL-2.0-or-later, LGPL-2.1-or-later"
distfiles="https://www.efficios.com/files/babeltrace/$pkgname-$version.tar.bz2"
checksum="9ff143e4d1d7f1902b05542ac8f1747fb2d7e0ca31c6fa39ccae5765e11d6fc2"
build_style="gnu-configure"

if [[ -n "$CROSS_BUILD" ]]; then
  # configure_args+=" ac_cv_lib_elf_elf_version=0.170"
  configure_args+=" --disable-debug-info"
fi

post_install() {
  vlicense mit-license.txt
}

babeltrace-devel_package() {
  short_desc+=" - development files"
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
    vmove "usr/lib/*.a"
  }
}

