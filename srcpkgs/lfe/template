maintainer="nox"
pkgname="lfe"
version=1.3
revision=1
short_desc="Lisp flavoured erlang"
archs="noarch"
depends="erlang"
hostmakedepends="erlang"
homepage="http://lfe.io/"
license="Apache-2.0"
distfiles="https://github.com/rvirding/lfe/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="1946c0df595ae49ac33fe583f359812dec6349da6acf43c1458534de3267036b"

do_build() {
  make
}

do_install() {
  for b in lfe lfec lfescript; do
    vbin "bin/$b"
  done
  for m in doc/man/*; do
    vman "$m"
  done
  for f in doc/{*.txt,*.md}; do
    vdoc "$f"
  done
  vmkdir usr/lib/erlang/lib/lfe/ebin
  vcopy ebin/* usr/lib/erlang/lib/lfe/ebin
  vlicense LICENSE
}

