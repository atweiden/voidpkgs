maintainer="nox"
pkgname="tiff"
version=4.5.1
revision=1
short_desc="Library and tools for reading and writing TIFF data files"
makedepends+=" jbigkit-devel"
makedepends+=" libjpeg-turbo-devel"
makedepends+=" liblzma-devel"
makedepends+=" libzstd-devel"
makedepends+=" zlib-devel"
homepage="http://www.simplesystems.org/libtiff/"
license="libtiff"
distfiles="https://download.osgeo.org/libtiff/$pkgname-$version.tar.gz"
checksum="d7f38b6788e4a8f5da7940c5ac9424f494d8a79eba53d555f4a507167dca5e2b"
build_style="gnu-configure"
configure_args+=" --enable-cxx"
configure_args+=" --without-x"
if [[ -n "$XBPS_CHECK_PKGS" ]]; then
  configure_args+=" --enable-tests"
else
  configure_args+=" --disable-tests"
fi

post_install() {
  for f in "$DESTDIR/usr/share/man/man3"/*.3tiff; do
    mv "$f" "${f%tiff}"
  done
  vlicense LICENSE.md
}

tiff-devel_package() {
  unset depends
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share/man/man3
    vmove usr/share/doc
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
