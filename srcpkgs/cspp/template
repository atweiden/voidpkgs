maintainer="nox"
pkgname="cspp"
version=2.0.0
revision=2
_gitrev="8a22691aa3768d2adbedfcb45059e3951bac1a03"
short_desc="DiceMix Light and CoinShuffle++ client for Decred"
makedepends+=" flintlib-devel"
makedepends+=" mpfr-devel"
tags="decred"
homepage="https://github.com/decred/cspp"
license="ISC"
distfiles="https://github.com/decred/cspp/archive/$_gitrev.tar.gz>$pkgname-$version.tar.gz"
checksum="899cb6aa57654640a98cebaaf3881d3bc250704e4f32bcb2aed2378848516cc6"
build_style="go"
go_import_path="decred.org/cspp"
_gh_import_path="github.com/decred/cspp"
go_package+=" $go_import_path"
go_package+=" $_gh_import_path/cmd/csppserver"
go_package+=" $_gh_import_path/cmd/csppsolver"
go_package+=" $_gh_import_path/cmd/report2csv"
go_build_tags+=" netgo"
go_build_tags+=" osusergo"
go_ldflags="-buildid="
if [[ "$XBPS_TARGET_LIBC" == "musl" ]]; then
  go_ldflags+=" -extldflags=-static-pie"
  go_ldflags+=" -linkmode=external"
fi

# XXX: -buildmode=pie is unverified on *-musl, and non-x86_64 or aarch64
export GOFLAGS="-trimpath -buildmode=pie -mod=readonly -modcacherw"

pre_install() {
  # prepend cspp to unqualified binaries
  for _bin in $(find "$GOPATH/bin"  \
                        -mindepth 1 \
                        -maxdepth 1 \
                        -type f ! -name "cspp*" -printf '%f\n'); do
    mv "$GOPATH/bin/$_bin" "$GOPATH/bin/cspp$_bin"
  done
}

post_install() {
  vlicense LICENSE
  vdoc README.md
}

