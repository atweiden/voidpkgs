maintainer="nox"
pkgname="lmdb"
version=0.9.29
revision=1
short_desc="Lightning Memory-Mapped Database Manager"
homepage="http://symas.com/mdb/"
license="OLDAP-2.8"
distfiles="https://github.com/LMDB/lmdb/archive/LMDB_$version.tar.gz>$pkgname-$version.tar.gz"
checksum="22054926b426c66d8f2bc22071365df6e35f3aacf19ad943bc6167d4cae3bebb"

do_build() {
  cd libraries/liblmdb
  make \
    "$makejobs" \
    CC="$CC" \
    XCFLAGS="$CFLAGS"
}

do_install() {
  cd libraries/liblmdb
  make \
    CC="$CC" \
    DESTDIR="$DESTDIR" \
    prefix="/usr" \
    install

  vlicense LICENSE
  vlicense COPYRIGHT
}

lmdb-devel_package() {
  short_desc+=" - development files"
  depends="lmdb>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
