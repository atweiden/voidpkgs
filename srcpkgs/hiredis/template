maintainer="nox"
pkgname="hiredis"
version=0.14.1
revision=1
short_desc="Minimalistic C client for Redis"
checkdepends="redis"
homepage="https://github.com/redis/hiredis"
license="BSD-3-Clause"
distfiles="https://github.com/redis/hiredis/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="2663b2aed9fd430507e30fc5e63274ee40cdd1a296026e22eafd7d99b01c8913"
build_style="gnu-makefile"

post_install() {
  vlicense COPYING
}

hiredis-devel_package() {
  depends="$sourcepkg-${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

