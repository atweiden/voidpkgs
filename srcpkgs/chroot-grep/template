maintainer="nox"
pkgname="chroot-grep"
version=3.7
revision=1
short_desc="GNU grep utility - for use with xbps-src"
homepage="http://www.gnu.org/software/grep/"
license="GPL-3.0-or-later"
distfiles="$GNU_SITE/grep/${pkgname#chroot-}-$version.tar.xz"
checksum="5c10da312460aec721984d5d83246d24520ec438dd48d7ab5a05dbc0d6d6823c"
wrksrc="grep-$version"
build_style="gnu-configure"
configure_args+=" --disable-nls"
configure_args+=" --disable-perl-regexp"
configure_args+=" ac_cv_path_GREP=grep"
# infinite loop in hash-collision-perf without perl
make_check="no"
bootstrap="yes"
provides="grep-${version}_$revision"
conflicts="grep>=0"

if [[ "$XBPS_TARGET_LIBC" == "musl" ]]; then
  export ac_cv_lib_error_at_line="no"
  export ac_cv_header_sys_cdefs_h="no"
fi

post_install() {
  rm -rf "$DESTDIR/usr/share/info"
  rm -rf "$DESTDIR/usr/share/man"
}

