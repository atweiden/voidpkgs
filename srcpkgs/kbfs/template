post_install() {
  vlicense LICENSE
  mv "$DESTDIR/usr/bin/redirector" "$DESTDIR/usr/bin/keybase-redirector"
  # setuid
  chmod 4755 "$DESTDIR/usr/bin/keybase-redirector"
}

