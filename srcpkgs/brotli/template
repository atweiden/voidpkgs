maintainer="nox"
pkgname="brotli"
version=1.0.7
revision=2
short_desc="Generic-purpose lossless compression algorithm"
homepage="https://github.com/google/brotli"
license="MIT"
distfiles="https://github.com/google/brotli/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="4c61bfb0faca87219ea587326c467b95acb25555b53d1a421ffa3c8a9296ee2c"
build_style="cmake"

post_install() {
  vlicense LICENSE
}

brotli-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

