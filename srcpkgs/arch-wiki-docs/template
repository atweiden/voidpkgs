do_build() {
  LANG="en_US.UTF-8" python3 arch-wiki-docs.py \
    --output-directory "build_wiki" \
    --clean \
    --safe-filenames
}

do_install() {
  vmkdir usr/share/doc/arch-wiki-docs/html
  vcopy "build_wiki/*" usr/share/doc/arch-wiki-docs/html
}

