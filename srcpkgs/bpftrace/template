maintainer="nox"
pkgname="bpftrace"
version=0.10.0
revision=1
short_desc="High-level tracing language for Linux enhanced Berkeley Packet Filter"
makedepends+=" bcc-devel"
makedepends+=" clang"
makedepends+=" clang-tools-extra"
makedepends+=" elfutils-devel"
makedepends+=" llvm"
hostmakedepends+=" flex"
hostmakedepends+=" pkg-config"
homepage="https://github.com/iovisor/bpftrace"
license="Apache-2.0"
distfiles="https://github.com/iovisor/bpftrace/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="50ea80c0e337c4aaa260911e013b92ae09bdd5a062b23eb748290409bc2844db"
build_style="cmake"
# needs root to run
configure_args="-DBUILD_TESTING=OFF"

if [[ "$XBPS_TARGET_WORDSIZE" != 64 ]]; then
  broken="Only 64 bit targets are supported. $XBPS_TARGET_MACHINE is $XBPS_TARGET_WORDSIZE bit."
fi

post_install() {
  # clashes with bcc-tools
  rm -rf "$DESTDIR/usr/share/man"
}

