maintainer="nox"
pkgname="opam"
version=2.1.0
revision=1
short_desc="OCaml package manager"
depends+=" bubblewrap"
depends+=" curl"
depends+=" patch"
depends+=" unzip"
makedepends+=" curl"
makedepends+=" ncurses-devel"
makedepends+=" ocaml"
makedepends+=" ocaml-findlib"
makedepends+=" tar"
checkdepends+=" $depends"
checkdepends+=" git"
checkdepends+=" rsync"
homepage="http://opam.ocamlpro.com"
license="LGPL-3.0-only"
distfiles="https://github.com/ocaml/opam/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="456df1988dcad8a5ee99f4fe1f8791edc04df93225dbeb3d51bf87c5f47769a8"
build_style="gnu-configure"
configure_args="--docdir=/usr/share/doc/$pkgname"
make_build_args+=" lib-ext"
make_build_args+=" all"
make_check_target="tests"
disable_parallel_build="yes"
nocross="yes"

post_install() {
  rm -rf "$DESTDIR/usr/doc"
}

