case "$XBPS_TARGET_MACHINE" in
  x86_64*|i386*)
    _omit="i386|x86_64"
    ;;
  aarch64*)
    _omit="aarch64"
    ;;
  armv*)
    _omit="arm"
    ;;
  mips*)
    _omit="${XBPS_TARGET_MACHINE%-*}"
    ;;
  *)
    _omit="${XBPS_TARGET_MACHINE%-*}"
    ;;
esac

for _fmt in $_fmts; do
  eval "case $_fmt in $_omit) magic= ;; *) magic=\"\$_${_fmt}_magic\" mask=\"\$_${_fmt}_mask\" ;; esac"
  if [[ -n "$magic" ]]; then
    binfmts+="/usr/bin/qemu-$_fmt-static --magic $magic --mask $mask --offset 0 --credential yes
"
  fi
done

binfmts="${binfmts%?}"

post_extract() {
  sed \
    -i \
    -e 's/__u64/unsigned long/' \
    linux-user/host/aarch64/hostdep.h
}

do_configure() {
  ./configure \
    --disable-fdt \
    --disable-kvm \
    --disable-seccomp \
    --disable-system \
    --disable-virtfs \
    --disable-vnc-png \
    --enable-linux-user \
    --libexecdir="/usr/libexec" \
    --prefix="/usr" \
    --static \
    --sysconfdir="/etc"
}

do_build() {
  make \
    "$makejobs" \
    LDFLAGS="-static -lrt -luuid"
}

do_install() {
  make \
    DESTDIR="$DESTDIR" \
    install
  for f in io \
           img \
           nbd; do
    rm -f "$DESTDIR/usr/bin/qemu-$f"
  done
  for f in "$DESTDIR/usr/bin"/*; do
    mv "$f" "$f-static"
  done
  rm -rf "$DESTDIR/etc"
  rm -rf "$DESTDIR/usr/libexec"
  rm -rf "$DESTDIR/usr/share"
}

