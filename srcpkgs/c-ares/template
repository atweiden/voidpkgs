maintainer="nox"
pkgname="c-ares"
version=1.19.0
revision=1
short_desc="Library for asynchronous DNS requests"
checkdepends="iana-etc"
homepage="https://c-ares.haxx.se/"
license="MIT"
changelog="https://c-ares.haxx.se/changelog.html"
distfiles="https://c-ares.haxx.se/download/$pkgname-$version.tar.gz"
checksum="bfceba37e23fd531293829002cac0401ef49a6dc55923f7f92236585b7ad1dd3"
build_style="cmake"
configure_args+=" -DCARES_SHARED=ON"
configure_args+=" -DCARES_STATIC=ON"
if [[ -n "$XBPS_CHECK_PKGS" ]]; then
  configure_args+=" -DCARES_BUILD_TESTS=ON"
else
  configure_args+=" -DCARES_BUILD_TESTS=OFF"
fi
# segfaults only on ci
make_check="ci-skip"

post_install() {
  vlicense LICENSE.md LICENSE
}

c-ares-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/lib/cmake
    vmove usr/share/man/man3
  }
}

c-ares-utils_package() {
  short_desc+=" - utilities"
  pkg_install() {
    vmove usr/bin
    vmove usr/share/man/man1
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
