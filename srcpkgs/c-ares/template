maintainer="nox"
pkgname="c-ares"
version=1.21.0
revision=1
short_desc="Library for asynchronous DNS requests"
checkdepends="iana-etc"
homepage="https://c-ares.haxx.se/"
license="MIT"
changelog="https://c-ares.haxx.se/changelog.html"
distfiles="https://c-ares.haxx.se/download/$pkgname-$version.tar.gz"
checksum="cd7aa3af1d3ee780d6437039a7ddb7f1ec029f9c4f7aabb0197e384eb5bc2f2d"
build_style="gnu-configure"
# segfaults only on ci
make_check="ci-skip"

post_install() {
  vlicense LICENSE.md LICENSE
}

c-ares-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/share/man/man3
  }
}

