maintainer="nox"
pkgname="c-ares"
version=1.22.1
revision=1
short_desc="Library for asynchronous DNS requests"
checkdepends="iana-etc"
homepage="https://c-ares.haxx.se/"
license="MIT"
changelog="https://c-ares.haxx.se/changelog.html"
distfiles="https://c-ares.haxx.se/download/$pkgname-$version.tar.gz"
checksum="f67c180deb799c670d9dda995a18ce06f6c7320b6c6363ff8fa85b77d0da9db8"
build_style="gnu-configure"
# segfaults only on ci
make_check="ci-skip"

post_install() {
  vlicense LICENSE.md LICENSE
}

c-ares-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/share/man/man3
  }
}

