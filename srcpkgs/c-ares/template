maintainer="nox"
pkgname="c-ares"
version=1.22.0
revision=1
short_desc="Library for asynchronous DNS requests"
checkdepends="iana-etc"
homepage="https://c-ares.haxx.se/"
license="MIT"
changelog="https://c-ares.haxx.se/changelog.html"
distfiles="https://c-ares.haxx.se/download/$pkgname-$version.tar.gz"
checksum="ad2e205088083317147c9f9eab5f24b82c3d50927c381a7c963deeb1182dbc21"
build_style="gnu-configure"
# segfaults only on ci
make_check="ci-skip"

post_install() {
  vlicense LICENSE.md LICENSE
}

c-ares-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/share/man/man3
  }
}

