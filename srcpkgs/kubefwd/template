maintainer="nox"
pkgname="kubefwd"
version=1.22.4
revision=2
short_desc="Bulk port forwarding Kubernetes services for local development"
homepage="https://github.com/txn2/kubefwd"
license="Apache-2.0"
distfiles="https://github.com/txn2/kubefwd/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="fa989cd8e31f7c80b9cf52ab1d0c03e38d4a3cf1922bb3c740b9618190f27ff5"
build_style="go"
go_import_path="github.com/txn2/kubefwd/cmd/kubefwd"
go_build_tags="netgo"
go_ldflags+=" -buildid="
go_ldflags+=" -X main.Version=v$version"
if [[ "$XBPS_TARGET_LIBC" == "musl" ]]; then
  go_ldflags+=" -extldflags='-fuse-ld=bfd -static'"
  go_ldflags+=" -linkmode=external"
else
  # fix: collect2: fatal error: cannot find 'ld'
  go_ldflags+=" -extldflags=-fuse-ld=bfd"
fi

export GOFLAGS="-trimpath"

post_install() {
  vlicense NOTICE
}

