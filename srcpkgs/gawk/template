maintainer="nox"
pkgname="gawk"
version=5.0.1
revision=1
short_desc="GNU awk utility"
makedepends="readline-devel"
homepage="https://directory.fsf.org/wiki/Gawk"
license="GPL-3.0-or-later"
distfiles="$GNU_SITE/gawk/$pkgname-$version.tar.xz"
checksum="8e4e86f04ed789648b66f757329743a0d6dfb5294c3b91b756a474f1ce05a794"
build_style="gnu-configure"
configure_args="--with-readline"
lib32disabled="yes"
provides="awk-0_1"
alternatives+=" awk:awk:/usr/bin/gawk"
alternatives+=" awk:awk.1:/usr/share/man/man1/gawk.1"

pre_check() {
  vsed \
    -i \
    -e 's/done | more/done/g' \
    test/Makefile
  case "$XBPS_TARGET_MACHINE" in
    *-musl)
      vsed \
        -i \
        -e '/testext/d' \
        test/Makefile
      vsed \
        -i \
        -e '/clos1way6/d' \
        test/Makefile
      ;;
  esac
}

post_install() {
  rm "$DESTDIR/usr/bin/awk"
}

