maintainer="nox"
pkgname="alsa-lib"
version=1.2.6.1
revision=1
short_desc="Advanced Linux Sound Architecture (ALSA) library"
hostmakedepends+=" libtool"
hostmakedepends+=" pkg-config"
homepage="http://www.alsa-project.org"
license="LGPL-2.1-or-later"
distfiles="https://www.alsa-project.org/files/pub/lib/alsa-lib-$version.tar.bz2"
checksum="ad582993d52cdb5fb159a0beab60a6ac57eab0cc1bdf85dc4db6d6197f02333f"
build_style="gnu-configure"

alsa-lib-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
    vmove usr/share/aclocal
  }
}

