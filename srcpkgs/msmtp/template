maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="msmtp"
version=1.6.6
revision=5
short_desc="A mini SMTP client"
makedepends+=" libressl-devel"
makedepends+=" $(vopt_if idn libidn-devel)"
makedepends+=" $(vopt_if sasl gsasl-devel)"
hostmakedepends="pkg-config"
homepage="http://msmtp.sourceforge.net"
license="GPL-3"
distfiles="$SOURCEFORGE_SITE/msmtp/$pkgname-$version.tar.xz"
checksum="da15db1f62bd0201fce5310adb89c86188be91cd745b7cb3b62b81a501e7fb5e"
build_style="gnu-configure"
build_options+=" idn"
build_options+=" sasl"
build_options_default+=" idn"
build_options_default+=" sasl"
configure_args+=" --with-tls=openssl"
configure_args+=" $(vopt_with idn libidn)"
configure_args+=" $(vopt_with sasl libgsasl)"

post_install() {
  vsconf doc/msmtprc-system.example
  vsconf doc/msmtprc-user.example
}

