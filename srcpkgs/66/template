maintainer="nox"
pkgname="66"
version=0.2.4.0
revision=1
short_desc="Small tools built around s6 and s6-rc programs"
depends="s6-portable-utils"
makedepends+=" execline-devel"
makedepends+=" oblibs-devel"
makedepends+=" procps-ng-devel"
makedepends+=" s6-devel"
makedepends+=" s6-rc-devel"
makedepends+=" skalibs-devel"
hostmakedepends+=" pkg-config"
hostmakedepends+=" scdoc"
homepage="http://web.obarun.org/software/"
license="ISC"
changelog="https://framagit.org/Obarun/66/raw/master/NEWS"
distfiles="https://framagit.org/Obarun/66/-/archive/v$version/$pkgname-v$version.tar.bz2"
checksum="f9eed5f7f1db8dd7a72d16def09a07a526a81b3bfbe9b96be254804b71b07840"
conf_files+=" /etc/66/init"
conf_files+=" /etc/66/init.conf"
wrksrc="$pkgname-v$version"
build_style="configure"
configure_args+=" --prefix=/usr"
configure_args+=" --with-lib=$XBPS_CROSS_BASE/usr/lib"
configure_args+=" --with-sysdeps=$XBPS_CROSS_BASE/usr/lib/skalibs/sysdeps"
make_dirs+=" /etc/66/conf 0755 root root"
make_dirs+=" /etc/66/service 0755 root root"
make_dirs+=" /usr/share/66/service 0755 root root"
make_dirs+=" /var/lib/66 0755 root root"
make_dirs+=" /var/log/66 0755 root root"


pre_build() {
  make man
}

post_install() {
  vlicense COPYING
  for i in doc/html/*.html; do
    vdoc "$i"
  done
  vdoc README
  for i in doc/man/*.{1,5,8} ; do
    vman "$i"
  done
}

66-doc_package() {
  archs="noarch"
  short_desc+=" - documentation"
  depends="$sourcepkg-${version}_$revision"
  pkg_install() {
    vmove usr/share/doc
    vmove usr/share/man
  }
}

66-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg-${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove usr/lib
  }
}

