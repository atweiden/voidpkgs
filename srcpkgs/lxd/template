maintainer="nox"
pkgname="lxd"
version=5.9
revision=1
short_desc="Next generation system container manager"
depends+=" acl"
depends+=" acl-progs"
depends+=" attr-progs"
depends+=" dnsmasq"
depends+=" iptables"
depends+=" lxc"
depends+=" rsync"
depends+=" squashfs-tools"
depends+=" xz"
makedepends+=" acl-devel"
makedepends+=" dqlite-devel"
makedepends+=" eudev-libudev-devel"
makedepends+=" lxc-devel"
hostmakedepends+=" git"
hostmakedepends+=" pkg-config"
homepage="https://linuxcontainers.org/lxd"
license="Apache-2.0"
changelog="https://github.com/lxc/lxd/releases"
distfiles="https://linuxcontainers.org/downloads/lxd/$pkgname-$version.tar.gz"
checksum="a24cf7fbe3e5527a34deda7e8e92f17c05a51498723821f69b146d1e8e58117f"
build_style="go"
go_import_path="github.com/lxc/lxd"
go_package+=" $go_import_path/fuidshift"
go_package+=" $go_import_path/lxc"
go_package+=" $go_import_path/lxc-to-lxd"
go_package+=" $go_import_path/lxd"
go_package+=" $go_import_path/lxd-benchmark"
go_package+=" $go_import_path/lxd-user"
go_build_tags+=" libsqlite3"
go_build_tags+=" netgo"
go_ldflags+=" -buildid="
go_ldflags+=" -extldflags=-static"
system_groups="lxd"

# whitelist dqlite LDFLAGS
export CGO_LDFLAGS_ALLOW='-Wl,-z,now'
export GOFLAGS="-trimpath"

post_build() {
  # these need special tags and/or LDFLAGS
  CGO_LDFLAGS="$CGO_LDFLAGS -static" \
    go install \
      -p "$XBPS_MAKEJOBS" \
      -mod="vendor" \
      -x \
      -tags "agent" \
      -ldflags "$go_ldflags" \
      "$go_import_path/lxd-agent"
  go install \
    -p "$XBPS_MAKEJOBS" \
    -mod="vendor" \
    -x \
    -tags "netgo" \
    -ldflags "$go_ldflags" \
    "$go_import_path/lxd-migrate"
}

post_install() {
  vinstall scripts/bash/lxd-client 644 /usr/share/bash-completion/completions lxd
  vsv lxd
}

