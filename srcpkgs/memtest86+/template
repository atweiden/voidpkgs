do_install() {
  vinstall "memtest$XBPS_TARGET_WORDSIZE.bin" 755 boot memtest.bin
  vinstall "memtest$XBPS_TARGET_WORDSIZE.efi" 755 boot memtest.efi
  vinstall "$FILESDIR/20_memtest86+" 755 etc/grub.d
}

