maintainer="nox"
pkgname="janet"
version=1.8.0
revision=1
short_desc="Dynamic Lisp dialect and bytecode VM"
homepage="https://janet-lang.org/"
license="MIT"
distfiles="https://github.com/janet-lang/janet/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="e02ae5c7b4579a23e3f30636c16d248273ed119467a076d18c9362e858eb9812"
patch_args="-Np1"
build_style="meson"

post_install() {
  vlicense LICENSE
}

janet-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

