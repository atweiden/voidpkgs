maintainer="nox"
pkgname="janet"
version=1.11.0
revision=1
short_desc="Dynamic Lisp dialect and bytecode VM"
homepage="https://janet-lang.org/"
license="MIT"
distfiles="https://github.com/janet-lang/janet/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="da5019bbaa5e7964518e576df43a46ac0a0cd2b27b5aeaf3ece95746c8e34678"
patch_args="-Np1"
build_style="meson"

post_install() {
  vlicense LICENSE
}

janet-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

