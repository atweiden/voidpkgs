maintainer="nox"
pkgname="janet"
version=1.10.0
revision=1
short_desc="Dynamic Lisp dialect and bytecode VM"
homepage="https://janet-lang.org/"
license="MIT"
distfiles="https://github.com/janet-lang/janet/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="b12b2609ab69a2e681446e44368e3b72bdad15b550471365fd8580e2265d3389"
patch_args="-Np1"
build_style="meson"

post_install() {
  vlicense LICENSE
}

janet-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

