maintainer="nox"
pkgname="janet"
version=1.13.1
revision=1
short_desc="Dynamic Lisp dialect and bytecode VM"
homepage="https://janet-lang.org/"
license="MIT"
distfiles="https://github.com/janet-lang/janet/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="7d369b72a1fc649f7e5c254e2b746eb36885970504f6d9d3441507ca2d716644"
build_style="meson"

post_install() {
  vlicense LICENSE
}

janet-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

