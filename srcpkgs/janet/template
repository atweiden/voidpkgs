maintainer="nox"
pkgname="janet"
version=1.21.2
revision=1
short_desc="Dynamic Lisp dialect and bytecode VM"
homepage="https://janet-lang.org/"
license="MIT"
changelog="https://github.com/janet-lang/janet/raw/master/CHANGELOG.md"
distfiles="https://github.com/janet-lang/janet/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="52db8d18f93351256d0731810e8bea95516db8142f51eeb31664f7884bf63088"
build_style="meson"
# breaks jpm
configure_args="-Db_lto=false"

post_install() {
  vlicense LICENSE
}

janet-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

