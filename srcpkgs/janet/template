maintainer="nox"
pkgname="janet"
version=1.11.3
revision=1
short_desc="Dynamic Lisp dialect and bytecode VM"
homepage="https://janet-lang.org/"
license="MIT"
distfiles="https://github.com/janet-lang/janet/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="60b389b5fcc5969760ec802fa5faf6383e272c769aef4a94e377cfd8376f4a8c"
patch_args="-Np1"
build_style="meson"

post_install() {
  vlicense LICENSE
}

janet-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

