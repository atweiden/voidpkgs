maintainer="nox"
pkgname="libcbor"
version=0.7.0
revision=1
short_desc="Library for parsing and generating CBOR, a binary data format"
homepage="https://github.com/PJK/libcbor"
license="MIT"
distfiles="https://github.com/PJK/libcbor/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="fb731afe0a9980581d85e4b8d4ef128b175f782d92e0cd898935f3d26dd3dde7"
build_style="cmake"
make_build_args="cbor_shared"

post_install() {
  vlicense LICENSE.md
}

libcbor-devel_package() {
  depends="libcbor>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
  }
}

