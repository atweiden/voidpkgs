maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="fzf"
version=0.17.5
revision=1
short_desc="Command-line fuzzy finder"
hostmakedepends="git"
homepage="https://github.com/junegunn/fzf"
license="MIT"
changelog="https://github.com/junegunn/fzf/raw/master/CHANGELOG.md"
distfiles="https://github.com/junegunn/$pkgname/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="de3b39758e01b19bbc04ee0d5107e14052d3a32ce8f40d4a63d0ed311394f7ee"
build_style="go"
go_import_path="github.com/junegunn/fzf"

post_install() {
  cd "$wrksrc"

  # license
  vlicense LICENSE

  # man page
  vman man/man1/fzf.1
  vman man/man1/fzf-tmux.1

  # documentation
  vdoc README.md
  vdoc install
  vdoc uninstall

  # script
  vbin bin/fzf-tmux

  # completion
  vinstall shell/completion.bash 644 usr/share/bash-completion/completions fzf
  vinstall shell/completion.zsh 644 usr/share/zsh/site-functions _fzf

  # key binding
  vdoc shell/key-bindings.bash
  vdoc shell/key-bindings.fish
  vdoc shell/key-bindings.zsh
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
