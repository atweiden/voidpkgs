maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="fzf"
version=0.17.4
revision=2
short_desc="Command-line fuzzy finder"
hostmakedepends="git"
homepage="https://github.com/junegunn/fzf"
license="MIT"
changelog="https://raw.githubusercontent.com/junegunn/fzf/master/CHANGELOG.md"
distfiles="https://codeload.github.com/junegunn/$pkgname/tar.gz/$version>$pkgname-$version.tar.gz"
checksum="a4b009638266b116f422d159cd1e09df64112e6ae3490964db2cd46636981ff0"
build_style="go"
go_import_path="github.com/junegunn/fzf"

post_install() {
  cd "$wrksrc"

  # license
  vlicense LICENSE

  # man page
  vman man/man1/fzf.1
  vman man/man1/fzf-tmux.1

  # documentation
  vdoc README.md
  vdoc install
  vdoc uninstall

  # script
  vbin bin/fzf-tmux

  # completion
  vinstall shell/completion.bash 644 usr/share/bash-completion/completions fzf
  vinstall shell/completion.zsh 644 usr/share/zsh/site-functions _fzf

  # key binding
  vdoc shell/key-bindings.bash
  vdoc shell/key-bindings.fish
  vdoc shell/key-bindings.zsh
}

# vim: set filetype=sh foldmethod=marker foldlevel=0:
