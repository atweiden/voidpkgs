maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="xxHash"
version=0.7.1
revision=1
short_desc="Fast non-cryptographic hashing algorithm"
license="BSD-2-Clause, GPL-2.0-or-later"
homepage="https://cyan4973.github.io/xxHash/"
distfiles="https://github.com/Cyan4973/xxHash/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="afa29766cfc0448ff4a1fd9f2c47e02c48d50be5b79749925d15d545008c3f81"
build_style="gnu-makefile"
make_use_env="yes"
make_build_target="all"
make_check_target="test"

post_install() {
  vlicense LICENSE
}

libxxHash_package() {
  short_desc+=" - library"
  pkg_install() {
    vmove "usr/lib/*.so.*"
  }
}

xxHash-devel_package() {
  short_desc+=" - development files"
  depends="libxxHash>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

