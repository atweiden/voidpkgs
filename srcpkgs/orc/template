maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="orc"
version=0.4.29
revision=2
short_desc="Oild Runtime Compiler"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" pkg-config"
homepage="https://cgit.freedesktop.org/gstreamer/orc"
license="BSD-2-Clause"
distfiles="http://gstreamer.freedesktop.org/src/orc/$pkgname-$version.tar.xz"
checksum="4f8901f9144b5ec17dffdb33548b5f4c7f8049b0d1023be3462cdd64ec5a3ab2"
build_style="gnu-configure"
configure_args="--disable-static"

pre_configure() {
  NOCONFIGURE=1 ./autogen.sh
}

post_install() {
  vlicense COPYING
}

orc-devel_package() {
  depends="orc>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
    vmove usr/share/aclocal
    vmove usr/share/gtk-doc
  }
}

