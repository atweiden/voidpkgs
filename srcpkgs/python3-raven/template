build_style="python3-module"
conflicts="python-raven>=0"

post_install() {
  # use system ca-certificates
  rm -f "$DESTDIR/$py3_sitelib/raven/data/cacert.pem"
  ln -sf /etc/ssl/cert.pem "$DESTDIR/$py3_sitelib/raven/data/cacert.pem"
  vlicense LICENSE
}

