maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="mpfr"
version=4.0.2
revision=1
short_desc="Library for multiple-precision floating-point computations"
makedepends="gmp-devel"
homepage="http://www.mpfr.org"
license="LGPL-3.0-or-later"
distfiles="http://www.mpfr.org/$pkgname-$version/$pkgname-$version.tar.xz"
checksum="1d3be708604eae0e42d578ba93b390c2a145f17743a744d8f3f8c2ad5855a38a"
build_style="gnu-configure"
configure_args="--enable-thread-safe"
bootstrap="yes"

mpfr-devel_package() {
  depends+=" $makedepends"
  depends+=" mpfr>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/share
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

