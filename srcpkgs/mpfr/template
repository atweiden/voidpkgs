maintainer="nox"
pkgname="mpfr"
version=4.1.1
revision=1
short_desc="Library for multiple-precision floating-point computations"
makedepends="gmp-devel"
homepage="http://www.mpfr.org"
license="LGPL-3.0-or-later"
changelog="https://www.mpfr.org/mpfr-current/#changes"
distfiles="http://www.mpfr.org/$pkgname-$version/$pkgname-$version.tar.xz"
checksum="ffd195bd567dbaffc3b98b23fd00aad0537680c9896171e44fe3ff79e28ac33d"
build_style="gnu-configure"
configure_args="--enable-thread-safe"
bootstrap="yes"

mpfr-devel_package() {
  unset depends
  depends+=" $makedepends"
  depends+=" mpfr>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/share
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

