revision=2
short_desc="Terminal bandwidth utilization tool"
homepage="https://github.com/imsnif/bandwhich"
license="MIT"
distfiles="https://github.com/imsnif/bandwhich/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="4bbf05be32439049edd50bd1e4d5a2a95b0be8d36782e4100732f0cc9f19ba12"
build_style="cargo"
# cba for now
make_check="no"

post_patch() {
  # We're patching in Cargo.toml without patching in Cargo.lock, so the
  # lockfile is out of date after patching. Aside of that, we need
  # to update some transitive dependencies to fix the build (socket2,
  # failure and linked-hash-map), which is also done by just regenerating
  # Cargo.lock.
  cargo generate-lockfile
}

post_install() {
  vlicense LICENSE.md
}

