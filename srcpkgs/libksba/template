maintainer="nox"
pkgname="libksba"
version=1.6.3
revision=1
short_desc="CMS and X.509 access library"
makedepends="libgpg-error-devel"
homepage="https://www.gnupg.org/related_software/libksba/index.html"
license="GPL-2.0-or-later,LGPL-3.0-or-later"
distfiles="ftp://ftp.gnupg.org/gcrypt/libksba/$pkgname-$version.tar.bz2"
checksum="3f72c68db30971ebbf14367527719423f0a4d5f8103fc9f4a1c01a9fa440de5c"
build_style="gnu-configure"

libksba-devel_package() {
  unset depends
  depends+=" $sourcepkg>=${version}_$revision"
  depends+=" libgpg-error-devel"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/bin/ksba-config
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove usr/share/aclocal
    vmove "usr/lib/*.so"
  }
}

