maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="numactl"
version=2.0.12
revision=1
short_desc="Simple NUMA policy support"
archs+=" i686*"
archs+=" ppc64*"
archs+=" x86_64*"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
homepage="https://github.com/numactl/numactl"
license="LGPL-2.1-only"
distfiles="https://github.com/numactl/numactl/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="7c3e819c2bdeb883de68bafe88776a01356f7ef565e75ba866c4b49a087c6bdf"
build_style="gnu-configure"

if [[ "$XBPS_TARGET_MACHINE" == "i686" ]]; then
  # XXX
  nopie="yes"
fi

pre_configure() {
  autoreconf -fi
}

post_install() {
  rm -r "$DESTDIR/usr/share/man/man2"
}

libnuma_package() {
  short_desc+=" - runtime library"
  pkg_install() {
    vmove "usr/lib/*.so.*"
  }
}

libnuma-devel_package() {
  depends="libnuma>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share/man/man3
    vmove usr/lib/pkgconfig
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
