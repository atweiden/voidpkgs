maintainer="nox"
pkgname="ctags"
version=5.9.20211010.0
revision=1
short_desc="Generates an index file of language objects found in source files"
hostmakedepends+=" automake"
hostmakedepends+=" pkg-config"
hostmakedepends+=" python3-docutils"
homepage="https://ctags.io/"
license="GPL-2.0-only"
distfiles="https://github.com/universal-ctags/ctags/archive/p$version.tar.gz>$pkgname-$version.tar.gz"
checksum="4a847b743629c71e9c4da3b7267cdba83e4a4891064ff33282e67f66360a567e"
wrksrc="ctags-p$version"
build_style="gnu-configure"

pre_configure() {
  ./autogen.sh
}

do_install() {
  make \
    prefix="$DESTDIR/usr" \
    bindir="$DESTDIR/usr/bin" \
    mandir="$DESTDIR/usr/share/man" \
    install
}

