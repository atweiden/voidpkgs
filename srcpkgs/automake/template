make_check_args="$makejobs"

pre_check() {
  # source: http://www.linuxfromscratch.org/lfs/view/development/chapter06/automake.html
  vsed \
    -i \
    -e "s:./configure:LEXLIB=/usr/lib/libfl.a &:" \
    t/lex-{clean,depend}-cxx.sh
}

