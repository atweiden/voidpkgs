maintainer="nox"
pkgname="libusb"
version=1.0.24
revision=2
short_desc="Library which allows userspace access to USB devices"
makedepends="eudev-libudev-devel"
hostmakedepends="pkg-config"
homepage="https://libusb.info"
license="LGPL-2.1-or-later"
distfiles="https://github.com/libusb/libusb/releases/download/v$version/$pkgname-$version.tar.bz2"
checksum="7efd2685f7b327326dcfb85cee426d9b871fd70e22caa15bb68d595ce2a2b12a"
patch_args="-Np0"
build_style="gnu-configure"
disable_parallel_build="yes"

libusb-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg-${version}_$revision"
  pkg_install() {
    vmove /usr/include
    vmove /usr/lib/pkgconfig
    vmove "/usr/lib/*.a"
    vmove "/usr/lib/*.so"
  }
}

