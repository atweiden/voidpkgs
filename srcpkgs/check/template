maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="check"
version=0.12.0
revision=1
short_desc="Unit Testing Framework for C"
homepage="https://libcheck.github.io/check/"
license="LGPL-2.1"
distfiles="https://github.com/libcheck/check/releases/download/$version/$pkgname-$version.tar.gz"
checksum="464201098bee00e90f5c4bdfa94a5d3ead8d641f9025b560a27755a83b824234"
build_style="gnu-configure"

check-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/share/aclocal
  }
}

# REMARKS:
#
# We want the prepared archive to forego texlive in hostmakedepends.

