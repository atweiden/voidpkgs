replaces="libcacard-tools>=0"

libcacard-devel_package() {
  depends+=" $sourcepkg>=${version}_$revision"
  depends+=" libglib-devel"
  depends+=" nss-devel"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
  }
}

