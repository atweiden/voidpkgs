maintainer="nox"
pkgname="pam_netauth"
version=0.3.2
revision=1
short_desc="PAM plugin for NetAuth"
makedepends="pam-devel"
hostmakedepends="git"
tags="netauth"
homepage="https://netauth.org"
license="MIT"
distfiles="https://github.com/NetAuth/pam_netauth/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="ba678c348a56ea073abd36f23c378d677594df2a9033dcccb9281353319250c8"
build_style="go"
go_import_path="github.com/netauth/pam_netauth"

export GOFLAGS="-trimpath"

do_build() {
  go build \
    -x \
    -o pam_netauth.so \
    -buildmode="c-shared" \
    -ldflags "$go_ldflags" \
    "$go_import_path"
}

do_install() {
  vinstall pam_netauth.so 0755 usr/lib/security/
  vlicense LICENSE
}

