maintainer="nox"
pkgname="gmp"
version=6.1.2
revision=1
short_desc="Library for arbitrary precision arithmetic"
makedepends="zlib-devel"
hostmakedepends="m4"
homepage="http://gmplib.org/"
license="LGPL-3"
distfiles="https://gmplib.org/download/gmp/$pkgname-$version.tar.xz"
checksum="87b565e89a9a684fe4ebeeddb8399dce2599f9c9049854ca8c0dfbdea0e21912"
build_style="gnu-configure"
configure_args="--enable-cxx"
bootstrap="yes"
subpackages+=" gmpxx"
subpackages+=" gmpxx-devel"
subpackages+=" gmp-devel"

if [[ -n "$CROSS_BUILD" ]]; then
  hostmakedepends+=" automake"
  hostmakedepends+=" libtool"
  pre_configure() {
    autoreconf -if
  }
fi

gmpxx_package() {
  short_desc+=" - C++ support"
  pkg_install() {
    vmove "usr/lib/libgmpxx.so.*"
  }
}

gmpxx-devel_package() {
  depends="gmpxx-${version}_$revision"
  short_desc+=" - C++ development files"
  pkg_install() {
    vmove usr/include/gmpxx.h
    vmove usr/lib/libgmpxx.a
    vmove usr/lib/libgmpxx.so
  }
}

gmp-devel_package() {
  depends="gmp-${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
