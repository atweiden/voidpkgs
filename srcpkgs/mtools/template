maintainer="nox"
pkgname="mtools"
version=4.0.41
revision=1
short_desc="Collection of utilities to access MS-DOS disks"
makedepends="acl-devel"
homepage="http://www.gnu.org/software/mtools"
license="GPL-3.0-or-later"
distfiles="$GNU_SITE/mtools/$pkgname-$version.tar.bz2"
checksum="2542152264fb3eff7ed70662abf4f4eef8133bc37d0b7a686c240df2b5f80a13"
conf_files="/etc/mtools.conf"
build_style="gnu-configure"

post_extract() {
  vsed \
    -i \
    -e 's/^SAMPLE FILE/#### SAMPLE FILE/g' \
    mtools.conf
}

post_install() {
  vconf mtools.conf
}

