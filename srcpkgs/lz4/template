liblz4_package() {
  short_desc="LZ4 compression library"
  pkg_install() {
    vmove "usr/lib/*.so.*"
  }
}

liblz4-devel_package() {
  short_desc="LZ4 compression library - development files"
  depends="liblz4-${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

