wrksrc="$(basename "$homepage")-$_gitrev"
build_style="rakudo-perl6"

pre_check() {
  # fetch https://github.com/atweiden/txn-examples for testing
  peru \
    --file=.peru.yml \
    --sync-dir="$PWD" \
    sync || return 0
}

post_install() {
  vlicense UNLICENSE
  vdoc README.md
}

