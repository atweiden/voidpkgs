# Template file for 'python-QDarkStyle'
maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="python-QDarkStyle"
version=2.5.4
revision=1
short_desc="A dark stylesheet for Python2 and Qt applications"
noarch="yes"
depends="python"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
changelog="https://raw.githubusercontent.com/ColinDuquesnoy/QDarkStyleSheet/master/CHANGES.md"
homepage="https://github.com/ColinDuquesnoy/QDarkStyleSheet"
license="MIT"
distfiles="$PYPI_SITE/Q/${pkgname#python-}/${pkgname#python-}-$version.tar.gz"
checksum="3eb60922b8c4d9cedecb6897ca4c9f8a259d81bdefe5791976ccdf12432de1f0"
wrksrc="${pkgname#python-}-$version"
build_style="python-module"
pycompile_module="qdarkstyle"

post_install() {
  vlicense LICENSE.md
  vdoc README.md
}

python3-QDarkStyle_package() {
  short_desc="${short_desc/Python2/Python3}"
  noarch="yes"
  depends="python3"
  pycompile_module="qdarkstyle"
  pkg_install() {
    vmove usr/lib/python3*
    vlicense LICENSE.md
    vdoc README.md
  }
}

