maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="python-neovim"
version=0.3.0
revision=1
short_desc="Python2 client for Neovim"
noarch="yes"
depends+=" neovim"
depends+=" python-greenlet"
depends+=" python-msgpack"
depends+=" python-trollius"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="https://github.com/neovim/python-client"
license="Apache-2.0"
distfiles="https://github.com/neovim/python-client/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="be59ad9e9490c444d52c271445da57b97474fa6cb137aa1f02fdbb690dca4707"
wrksrc="python-client-$version"
build_style="python-module"
pycompile_module="neovim"

python3-neovim_package() {
  unset depends
  noarch="yes"
  depends+=" neovim"
  depends+=" python3-greenlet"
  depends+=" python3-msgpack"
  pycompile_module="neovim"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
  }
}

