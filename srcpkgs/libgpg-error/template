maintainer="nox"
pkgname="libgpg-error"
version=1.37
revision=1
short_desc="Library for error values used by GnuPG component"
homepage="https://www.gnupg.org"
license="LGPL-2.1-or-later, GPL-2.0-or-later"
distfiles="https://www.gnupg.org/ftp/gcrypt/libgpg-error/$pkgname-$version.tar.bz2"
checksum="b32d6ff72a73cf79797f7f2d039e95e9c6f92f0c1450215410840ab62aea9763"
build_style="gnu-configure"
# cross-compilation requires `qemu-user-static`, see: upstream
nocross="yes"

post_install() {
  rm -rf "$DESTDIR/usr/share/common-lisp"
}

libgpg-error-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/bin/gpgrt-config
    vmove usr/bin/gpg-error-config
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove usr/share/aclocal
    vmove "usr/lib/*.so"
  }
}

