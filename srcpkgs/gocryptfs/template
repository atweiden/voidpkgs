maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="gocryptfs"
version=1.5
revision=1
short_desc="Encrypted overlay filesystem written in Go"
hostmakedepends+=" bash"
hostmakedepends+=" git"
homepage="https://github.com/rfjakob/gocryptfs"
license="MIT"
distfiles="https://github.com/rfjakob/gocryptfs/releases/download/v$version/${pkgname}_v${version}_src-deps.tar.gz>$pkgname-$version.tar.gz"
checksum="c23602cf6917dd41502ae5e12f7e9400166bdd65349bfe3b40f0766082eab035"
wrksrc="${pkgname}_v${version}_src-deps"
build_style="go"
go_import_path="github.com/rfjakob/gocryptfs"

do_build() {
  "$GOSRCPATH/build-without-openssl.bash"
}

post_install() {
  vlicense "$GOSRCPATH/LICENSE"
  vdoc "$GOSRCPATH/README.md"
  vcopy "$GOSRCPATH/Documentation" "usr/share/doc/$pkgname"
  vcopy "$GOSRCPATH/contrib" "usr/share/doc/$pkgname"
}

