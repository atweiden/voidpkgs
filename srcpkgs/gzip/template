maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="gzip"
version=1.9
revision=1
short_desc="GNU compression utility (replacement for compress)"
homepage="http://www.gnu.org/software/gzip/"
license="GPL-3"
distfiles="$GNU_SITE/$pkgname/$pkgname-$version.tar.xz"
checksum="ae506144fc198bd8f81f1f4ad19ce63d5a2d65e42333255977cf1dcf1479089a"
build_style="gnu-configure"
bootstrap="yes"

case "$XBPS_TARGET_MACHINE" in
  *-musl)
    configure_args+=" DEFS=NO_ASM"
    configure_args+=" gl_cv_func_fflush_stdin=yes"
    ;;
esac

pre_check() {
  # help-version test is known to fail
  sed \
    -i \
    -e '1721,1727d;1447d' \
    tests/Makefile
}

