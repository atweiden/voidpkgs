build_style="python-module"
pycompile_module="cryptography_vectors"

post_install() {
  vlicense LICENSE
  vlicense LICENSE.BSD
}

python3-cryptography_vectors_package() {
  pycompile_module="cryptography_vectors"
  short_desc="${short_desc/python/python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
    vlicense LICENSE
    vlicense LICENSE.BSD
  }
}

