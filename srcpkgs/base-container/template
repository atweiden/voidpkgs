maintainer="nox"
pkgname="base-container"
version=0.3
revision=2
short_desc="Void Linux base system meta for minimal containers/chroots"
depends+=" base-files"
depends+=" coreutils"
depends+=" findutils"
depends+=" diffutils"
depends+=" dash"
depends+=" grep"
depends+=" gzip"
depends+=" sed"
depends+=" gawk"
depends+=" util-linux"
depends+=" which"
depends+=" tar"
depends+=" shadow"
depends+=" procps-ng"
depends+=" iana-etc"
depends+=" xbps"
depends+=" nvi"
depends+=" tzdata"
depends+=" runit-void"
depends+=" removed-packages"
case "$XBPS_TARGET_MACHINE" in
  *-musl)
    depends+=" musl"
    ;;
  *)
    depends+=" glibc-locales"
    ;;
esac
homepage="https://www.voidlinux.org/"
license="Public Domain"
build_style="meta"

base-minimal_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" (transitional dummy package)"
  build_style="meta"
}

