maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libbitcoin-consensus"
version=3.5.0
revision=1
short_desc="Bitcoin Consensus Library"
makedepends+=" boost-devel"
makedepends+=" libsecp256k1-devel"
hostmakedepends+=" autoconf"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" m4"
hostmakedepends+=" pkg-config"
tags="libbitcoin"
homepage="https://github.com/libbitcoin/libbitcoin-consensus"
license="AGPL-3.0-or-later"
distfiles="https://github.com/libbitcoin/$pkgname/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="bb29761d4275a9c993151707557008b23572a3d9adecc0e36a3075cfb101dd1e"
build_style="gnu-configure"
# XXX BOOST_UNIT_TEST_FRAMEWORK_LIB="-lboost_unit_test_framework"
configure_args+=" ax_cv_boost_unit_test_framework=no"
configure_args+=" --with-gnu-ld"
if [[ -n "$CROSS_BUILD" ]]; then
  configure_args+=" --host=$XBPS_CROSS_TRIPLET"
  configure_args+=" --with-boost=$XBPS_CROSS_BASE/usr"
  configure_args+=" --with-boost-libdir=$XBPS_CROSS_BASE/usr/lib"
fi

pre_configure() {
  ./autogen.sh
}

post_install() {
  vlicense COPYING
  vdoc README.md
}

libbitcoin-consensus-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

