do_check() {
  PYTHONPATH="src" python2 -m pytest
}

post_install() {
  vlicense LICENSE.rst
  # these files are valid only on Python 3.6+
  rm -f "$DESTDIR/$py2_sitelib/jinja2/asyncsupport.py"
  rm -f "$DESTDIR/$py2_sitelib/jinja2/asyncfilters.py"
}

