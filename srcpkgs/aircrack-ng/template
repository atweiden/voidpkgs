pre_configure() {
  # does runtime detection, this actually breaks build
  CFLAGS="${CFLAGS/-mno-altivec/}"
  CXXFLAGS="${CXXFLAGS/-mno-altivec/}"

  NOCONFIGURE=1 ./autogen.sh
}

post_install() {
  vlicense LICENSE.OpenSSL
}

