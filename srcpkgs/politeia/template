  vdoc politeiawww/cmd/politeiawww_dataload/sample-politeiawww_dataload.conf
  vdoc politeiawww/cmd/politeiawwwcli/sample-politeiawwwcli.conf
  vcopy examples "usr/share/doc/$pkgname"
}

