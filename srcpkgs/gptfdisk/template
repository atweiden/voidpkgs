maintainer="nox"
pkgname="gptfdisk"
version=1.0.8
revision=1
short_desc="GPT fdisk text-mode partitioning tool"
makedepends+=" libuuid-devel"
makedepends+=" ncurses-devel"
makedepends+=" popt-devel"
homepage="http://www.rodsbooks.com/gdisk/"
license="GPL-2.0-or-later"
distfiles="$SOURCEFORGE_SITE/gptfdisk/$pkgname-$version.tar.gz"
checksum="95d19856f004dabc4b8c342b2612e8d0a9eebdd52004297188369f152e9dc6df"
build_style="gnu-makefile"
make_check_target="test"

pre_build() {
  vsed \
    -i \
    -e 's#<ncursesw/ncurses.h>#<ncurses.h>#' \
    gptcurses.cc
}

do_install() {
  for f in cgdisk \
           fixparts \
           gdisk \
           sgdisk; do
    vbin "$f"
    if [[ -r "$f.8" ]]; then
      vman "$f.8"
    fi
  done
}

