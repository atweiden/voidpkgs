maintainer="nox"
pkgname="gptfdisk"
version=1.0.5
revision=1
short_desc="GPT fdisk text-mode partitioning tool"
makedepends+=" icu-devel"
makedepends+=" libuuid-devel"
makedepends+=" ncurses-devel"
makedepends+=" popt-devel"
homepage="http://www.rodsbooks.com/gdisk/"
license="GPL-2.0-or-later"
distfiles="$SOURCEFORGE_SITE/gptfdisk/$pkgname-$version.tar.gz"
checksum="0e7d3987cd0488ecaf4b48761bc97f40b1dc089e5ff53c4b37abe30bc67dcb2f"
build_style="gnu-makefile"

pre_build() {
  sed \
    -i \
    -e 's#<ncursesw/ncurses.h>#<ncurses.h>#' \
    gptcurses.cc
}

do_install() {
  for f in cgdisk \
           fixparts \
           gdisk \
           sgdisk; do
    vbin "$f"
    if [[ -r "$f.8" ]]; then
      vman "$f.8"
    fi
  done
}

