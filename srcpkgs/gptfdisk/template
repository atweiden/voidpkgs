maintainer="nox"
pkgname="gptfdisk"
version=1.0.9
revision=2
short_desc="GPT fdisk text-mode partitioning tool"
makedepends+=" libuuid-devel"
makedepends+=" ncurses-devel"
makedepends+=" popt-devel"
homepage="https://www.rodsbooks.com/gdisk/"
license="GPL-2.0-or-later"
distfiles="$SOURCEFORGE_SITE/gptfdisk/$pkgname-$version.tar.gz"
checksum="dafead2693faeb8e8b97832b23407f6ed5b3219bc1784f482dd855774e2d50c2"
build_style="gnu-makefile"
make_check_target="test"

pre_build() {
  vsed \
    -i \
    -e 's#<ncursesw/ncurses.h>#<ncurses.h>#' \
    gptcurses.cc
}

do_install() {
  for f in cgdisk \
           fixparts \
           gdisk \
           sgdisk; do
    vbin "$f"
    if [[ -r "$f.8" ]]; then
      vman "$f.8"
    fi
  done
}

