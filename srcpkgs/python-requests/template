maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="python-requests"
version=2.22.0
revision=2
short_desc="Python2 HTTP library for human beings"
archs="noarch"
depends+=" ca-certificates"
depends+=" python-chardet"
depends+=" python-idna"
depends+=" python-urllib3"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="http://python-requests.org/"
license="Apache-2.0"
distfiles="$PYPI_SITE/r/requests/${pkgname#*-}-$version.tar.gz"
checksum="11e007a8a2aa0323f5a921e9e6a2d7e4e67d9877e85773fba9ba6419025cbeb4"
wrksrc="${pkgname#*-}-$version"
build_style="python-module"
pycompile_module="requests"

pre_build() {
  vsed \
    -i \
    -e '/certifi/d' \
    setup.py
}

python3-requests_package() {
  unset depends
  archs="noarch"
  pycompile_module="requests"
  depends+=" ca-certificates"
  depends+=" python3-chardet"
  depends+=" python3-idna"
  depends+=" python3-urllib3"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
  }
}

