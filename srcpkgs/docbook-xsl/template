# keep in sync with docbook-xsl-ns
maintainer="nox"
pkgname="docbook-xsl"
version=1.79.1
revision=7
short_desc="Docbook XSL modular stylesheet"
archs="noarch"
depends+=" docbook-xml>=4.2"
depends+=" xmlcatmgr"
homepage="http://docbook.sourceforge.net/"
license="MIT"
distfiles="$SOURCEFORGE_SITE/docbook/$pkgname-$version.tar.bz2"
checksum="725f452e12b296956e8bfb876ccece71eeecdd14b94f667f3ed9091761a4a968"
wrksrc="$pkgname-nons-$version"
xml_entries="nextCatalog /usr/share/xsl/docbook/catalog.xml --"
reverts="1.79.2_1"

do_install() {
  local xslmods
  xslmods+=" assembly"
  xslmods+=" common"
  xslmods+=" eclipse"
  xslmods+=" epub"
  xslmods+=" epub3"
  xslmods+=" fo"
  xslmods+=" highlighting"
  xslmods+=" html"
  xslmods+=" htmlhelp"
  xslmods+=" images"
  xslmods+=" javahelp"
  xslmods+=" lib"
  xslmods+=" manpages"
  xslmods+=" params"
  xslmods+=" profiling"
  xslmods+=" roundtrip"
  xslmods+=" slides"
  xslmods+=" template"
  xslmods+=" website"
  xslmods+=" xhtml"
  xslmods+=" xhtml-1_1"
  xslmods+=" xhtml5"

  vinstall catalog.xml 644 usr/share/xsl/docbook
  vinstall VERSION 644 usr/share/xsl/docbook
  vinstall VERSION.xsl 644 usr/share/xsl/docbook

  for dir in $xslmods; do
    vmkdir "usr/share/xsl/docbook/$dir"
    cp -a "$dir"/* "$DESTDIR/usr/share/xsl/docbook/$dir/"
  done
}

post_install() {
  vlicense COPYING
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
