maintainer="nox"
pkgname="tzutils"
version=2020a
revision=1
short_desc="Time zone and daylight-saving time utilities"
homepage="https://www.iana.org/time-zones"
license="Public Domain, BSD-3-Clause"
distfiles="https://github.com/eggert/tz/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="9d41f0789dfaa9f6793f25d483888e41871d40291e8369ee991496b49194b533"
wrksrc="tz-$version"

do_build() {
  make \
    CC="$CC" \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS" \
    TZDIR="/usr/share/zoneinfo"
}

do_install() {
  vbin zic
  vbin zdump
  vbin tzselect
  vman zic.8
  vman zdump.8
  vman tzselect.8
}

post_install() {
  vlicense LICENSE
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
