maintainer="nox"
pkgname="tzutils"
version=2022a
revision=1
short_desc="Time zone and daylight-saving time utilities"
homepage="https://www.iana.org/time-zones"
license="Public Domain, BSD-3-Clause"
distfiles="https://github.com/eggert/tz/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="e9d82a851a15bb5db2cbaae2c3fc633743ad9edc069e3738c5e8908978064ed8"
wrksrc="tz-$version"
bootstrap="yes"

do_build() {
  echo "$version" > version
  make \
    CC="$CC" \
    CFLAGS="$CFLAGS" \
    KSHELL="/bin/sh" \
    LDFLAGS="$LDFLAGS" \
    TZDIR="/usr/share/zoneinfo"
}

do_check() {
  make check
}

do_install() {
  vbin zic
  vbin zdump
  vbin tzselect
  vman zic.8
  vman zdump.8
  vman tzselect.8
  vlicense LICENSE
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
