maintainer="nox"
pkgname="tzutils"
version=2022b
revision=1
short_desc="Time zone and daylight-saving time utilities"
if [[ -n "$CROSS_BUILD" ]]; then
  hostmakedepends="tzutils"
fi
homepage="https://www.iana.org/time-zones"
license="Public Domain"
distfiles="https://www.iana.org/time-zones/repository/releases/tzdb-$version.tar.lz"
checksum="ac7e86da284b303244c457337ff5a4d17a4617a25777c87946668a1705f7b7ec"
wrksrc="tzdb-$version"
bootstrap="yes"

if [[ "$XBPS_TARGET_WORDSIZE" == 32 ]]; then
  # enforce 64-bit time_t for Y2038
  CFLAGS="-Dtime_tz=int64_t"
  license+=", BSD-3-Clause"
fi

do_build() {
  touch version
  make \
    CC="$CC" \
    CFLAGS="$CFLAGS" \
    KSHELL="/bin/sh" \
    LDFLAGS="$LDFLAGS"
  sed \
    -n '/Copyright/,/SUCH DAMAGE/p' \
    strftime.c \
    > strftime.license
}

do_check() {
  make check
}

do_install() {
  local zic
  if [[ -n "$CROSS_BUILD" ]]; then
    zic="zic=/usr/bin/zic"
  fi
  make \
    install \
    DESTDIR="$DESTDIR" \
    ZICDIR="/usr/bin" \
    $zic \
    ZFLAGS="-b fat"
  rm -rf "$DESTDIR"/{etc,usr/lib,usr/share/man/man3}
  # backward compatible links
  ln -s ../zoneinfo-posix "$DESTDIR/usr/share/zoneinfo/posix"
  ln -s ../zoneinfo-leaps "$DESTDIR/usr/share/zoneinfo/right"
  if [[ "$XBPS_TARGET_WORDSIZE" == 32 ]]; then
    vlicense strftime.license
  fi
}

tzdata_package() {
  short_desc="Time zone and daylight-saving time data"
  pkg_install() {
    vmove usr/share/man/man5
    vmove "usr/share/zoneinfo*"
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
