maintainer="nox"
pkgname="tzutils"
version=2019c
revision=1
short_desc="Time zone and daylight-saving time utilities"
homepage="https://www.iana.org/time-zones"
license="Public Domain, BSD-3-Clause"
distfiles="https://github.com/eggert/tz/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="38b1f7c7a050daa14fb07f6b72cdde1fc895fece40758d4d55736847041ad9e2"
wrksrc="tz-$version"

do_build() {
  make \
    CC="$CC" \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS" \
    TZDIR="/usr/share/zoneinfo"
}

do_install() {
  vbin zic
  vbin zdump
  vbin tzselect
  vman zic.8
  vman zdump.8
  vman tzselect.8
}

post_install() {
  vlicense LICENSE
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
