maintainer="nox"
pkgname="scdoc"
version=1.11.0
revision=1
short_desc="Tool for generating roff manual pages"
if [[ -n "$CROSS_BUILD" ]]; then
  hostmakedepends+=" scdoc"
fi
homepage="https://git.sr.ht/~sircmpwn/scdoc"
license="MIT"
distfiles="https://git.sr.ht/~sircmpwn/scdoc/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="8ac3e7e08fdfab0d75a312b1abcb6eafbd9114a5deaafbaba0fe5ec7e880929d"
build_style="gnu-makefile"
make_build_args="PREFIX=/usr"

pre_build() {
  if [[ -n "$CROSS_BUILD" ]]; then
    vsed \
      -i \
      -e "s|^HOST_SCDOC=.*|HOST_SCDOC=/usr/bin/scdoc|g" \
      Makefile
  fi
  vsed \
    -i \
    -e "s/\" VERSION \"/ $version/g" \
    src/main.c
}

post_install() {
  vlicense COPYING
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
