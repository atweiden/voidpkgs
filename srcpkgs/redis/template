maintainer="nox"
pkgname="redis"
version=6.0.6
revision=1
short_desc="Advanced key-value store"
makedepends+=" jemalloc-devel"
makedepends+=" libatomic-devel"
checkdepends+=" procps-ng"
checkdepends+=" tcl-devel"
homepage="https://redis.io"
license="BSD-3-Clause"
changelog="https://github.com/antirez/redis/raw/5.0/00-RELEASENOTES"
distfiles="http://download.redis.io/releases/$pkgname-$version.tar.gz"
checksum="12ad49b163af5ef39466e8d2f7d212a58172116e5b441eebecb4e6ca22363d94"
conf_files="/etc/redis/redis.conf"
system_accounts="redis"
redis_homedir="/var/lib/redis"
make_dirs="/var/lib/redis 0700 redis redis"

do_configure() {
  vsed \
    -i \
    -e "s|^# bind 127.0.0.1|bind 127.0.0.1|" \
    -e "s|^dir .*|dir $redis_homedir|" \
    -e "s|^pidfile .*|pidfile /run/redis/redis.pid|" \
    redis.conf
  vsed \
    -i \
    -e "s|^FINAL_LIBS=.*|& -latomic|" \
    src/Makefile
}

do_build() {
  case "$XBPS_TARGET_MACHINE" in
    *-musl)
      _malloc="none"
      ;;
    *)
      _malloc="jemalloc"
      ;;
  esac
  make \
    CC="$CC" \
    CFLAGS="$CFLAGS" \
    LDFLAGS="$LDFLAGS" \
    V=1 \
    MALLOC="$_malloc" \
    "$makejobs"
}

do_check() {
  make test
}

do_install() {
  make \
    INSTALL_BIN="$DESTDIR/usr/bin" \
    PREFIX="/usr" \
    install
  vlicense COPYING
  vinstall redis.conf 644 etc/redis
  vsv redis
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
