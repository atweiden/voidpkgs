maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="xbps"
version=0.55
revision=1
short_desc="XBPS package system utilities"
depends+=" ca-certificates"
depends+=" xbps-triggers"
makedepends+=" libarchive-devel"
makedepends+=" libressl-devel"
makedepends+=" zlib-devel"
checkdepends="kyua"
hostmakedepends="pkg-config"
homepage="https://github.com/void-linux/xbps"
license="BSD-2-Clause"
changelog="https://github.com/void-linux/xbps/blob/master/NEWS"
distfiles="https://github.com/void-linux/xbps/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="982620ec3c207a8b935ebb3b50f81ce553e53a5da291be2719609adf0a5f48d2"
build_style="configure"
make_dirs="/etc/xbps.d 0755 root root"
bootstrap="yes"

if [[ -n "$CHROOT_READY" ]]; then
  makedepends+=" atf-devel"
  xbps-tests_package() {
    short_desc+=" - Kyua testsuite"
    pkg_install() {
      vmove usr/tests
    }
  }
fi

do_configure() {
  ./configure \
    --prefix="/usr" \
    --sysconfdir="/etc" \
    ${CHROOT_READY:+--enable-tests}
}

post_install() {
  case "$XBPS_TARGET_MACHINE" in
    aarch64*)
      # XXX different repo location
      echo "repository=https://alpha.de.repo.voidlinux.org/current/aarch64" > \
        "$DESTDIR/usr/share/xbps.d/00-repository-main.conf"
      ;;
    *-musl)
      # XXX different repo location
      echo "repository=https://alpha.de.repo.voidlinux.org/current/musl" > \
        "$DESTDIR/usr/share/xbps.d/00-repository-main.conf"
      ;;
    *)
      echo "repository=https://alpha.de.repo.voidlinux.org/current" > \
        "$DESTDIR/usr/share/xbps.d/00-repository-main.conf"
      ;;
  esac
  vlicense LICENSE
  vlicense LICENSE.3RDPARTY
}

libxbps_package() {
  short_desc+=" - runtime library"
  pkg_install() {
    vmove "usr/lib/*.so.*"
  }
}

libxbps-devel_package() {
  unset depends
  short_desc+=" - runtime library - development files"
  depends+=" libarchive-devel"
  depends+=" libxbps>=${version}_$revision"
  depends+=" zlib-devel"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
