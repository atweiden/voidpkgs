maintainer="nox"
pkgname="libgit2"
version=0.28.4
revision=1
short_desc="Git linkable library"
makedepends+=" http-parser-devel"
makedepends+=" libressl-devel"
makedepends+=" libssh2-devel"
makedepends+=" libuv-devel"
makedepends+=" zlib-devel"
hostmakedepends+=" git"
hostmakedepends+=" pkg-config"
hostmakedepends+=" python3"
homepage="https://libgit2.org"
license="custom:GPL-2.0-or-later WITH GCC-exception-2.0"
distfiles="https://github.com/libgit2/libgit2/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="30f3877469d09f2e4a21be933b4e2800560d16646028dd800744dc5f7fb0c749"
build_style="cmake"
configure_args="-DTHREADSAFE=ON"

case "$XBPS_TARGET_MACHINE" in
  *-musl)
    # don't use qsort_r, see src/util.c
    CFLAGS="-D__ANDROID_API__"
    ;;
esac

post_install() {
  vlicense COPYING
}

libgit2-devel_package() {
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
  }
}

