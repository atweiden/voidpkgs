maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libgit2"
version=0.27.8
revision=1
short_desc="Git linkable library"
makedepends+=" http-parser-devel"
makedepends+=" libressl-devel"
makedepends+=" libssh2-devel"
makedepends+=" libuv-devel"
makedepends+=" zlib-devel"
hostmakedepends+=" git"
hostmakedepends+=" pkg-config"
hostmakedepends+=" python"
homepage="https://libgit2.org"
license="GPL-2.0-or-later WITH GCC-exception-2.0"
distfiles="https://github.com/libgit2/libgit2/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="8313873d49dc01e8b880ec334d7430ae67496a89aaa8c6e7bbd3affb47a00c76"
build_style="cmake"
configure_args="-DTHREADSAFE=ON"

case "$XBPS_TARGET_MACHINE" in
  *-musl)
    # don't use qsort_r, see src/util.c
    CFLAGS="-D__ANDROID_API__"
    ;;
esac

libgit2-devel_package() {
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
  }
}

