maintainer="nox"
pkgname="dkms"
version=2.8.2
revision=1
short_desc="Dynamic Kernel Modules System"
depends+=" bash"
depends+=" coreutils"
depends+=" gcc"
depends+=" kmod"
depends+=" linux-headers"
depends+=" make"
if [[ -n "$CROSS_BUILD" ]]; then
  depends+=" flex"
  depends+=" gmp-devel"
  depends+=" libada-devel"
  depends+=" libmpc-devel"
  depends+=" libressl-devel"
fi
homepage="https://github.com/dell/dkms"
license="GPL-2.0-or-later"
distfiles="https://github.com/dell/dkms/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="0259375991acd0c5a844f43bd62cd29989a79bce9ab81bc91cac2cb3a3308c4c"
conf_files="/etc/dkms/framework.conf"

do_install() {
  # we are only interested in the bare minimum
  vbin dkms
  vman dkms.8
  vinstall dkms_dbversion 644 var/lib/dkms
  vinstall dkms.bash-completion 644 usr/share/bash-completion/completions dkms
  vinstall dkms_framework.conf 644 etc/dkms framework.conf
  # kernel hooks
  vinstall "$FILESDIR/kernel.d/dkms.postinst" 750 etc/kernel.d/post-install 10-dkms
  vinstall "$FILESDIR/kernel.d/dkms.prerm" 750 etc/kernel.d/pre-remove 10-dkms
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
