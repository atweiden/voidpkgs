maintainer="nox"
pkgname="nethogs"
version=0.8.5
revision=1
short_desc="Small net top tool grouping bandwidth by process"
makedepends+=" libpcap-devel"
makedepends+=" ncurses-devel"
homepage="https://github.com/raboof/nethogs"
license="GPL-1"
distfiles="https://github.com/raboof/nethogs/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="6a9392726feca43228b3f0265379154946ef0544c2ca2cac59ec35a24f469dcc"

do_build() {
  sed \
    -i \
    -e 's,all: decpcap_test test nethogs,all: nethogs,' \
    Makefile
  make \
    CC="$CC" \
    CFLAGS="$CFLAGS" \
    CXX="$CXX" \
    CXXFLAGS="$CXXFLAGS" \
    "$makejobs"
}

do_install() {
  vbin src/nethogs
  vman doc/nethogs.8
}

