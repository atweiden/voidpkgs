maintainer="nox"
pkgname="ocaml-findlib"
version=1.9.1
revision=2
short_desc="OCaml package manager"
makedepends+=" ncurses-devel"
makedepends+=" ocaml"
makedepends+=" ocamlbuild"
homepage="http://projects.camlcity.org/projects/findlib.html"
license="MIT"
distfiles="http://download.camlcity.org/download/${pkgname#ocaml-}-$version.tar.gz"
checksum="2b42b8bd54488d64c4bf3cb7054b4b37bd30c1dc12bd431ea1e4d7ad8a980fe2"
wrksrc="findlib-$version"
build_style="configure"
configure_args+=" -config /etc/findlib.conf"
configure_args+=" -mandir /usr/share/man"
configure_args+=" -sitelib /usr/lib/ocaml"
make_build_args+=" all"
make_build_args+=" opt"
nocross="yes"
nopie="yes"
disable_parallel_build="yes"

do_install() {
  make prefix="$DESTDIR" install
  vbin src/findlib/ocamlfind_opt
}

post_install() {
  vlicense LICENSE
}

