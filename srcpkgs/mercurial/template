maintainer="nox"
pkgname="mercurial"
version=5.4
revision=1
short_desc="Fast, lightweight source control management system"
depends+=" ca-certificates"
depends+=" python3"
makedepends="python3-devel"
checkdepends+=" iana-etc"
checkdepends+=" tar"
checkdepends+=" unzip"
checkdepends+=" which"
checkdepends+=" xz"
hostmakedepends+=" python3"
hostmakedepends+=" python3-devel"
hostmakedepends+=" python3-setuptools"
homepage="https://www.mercurial-scm.org/"
license="GPL-2.0-or-later"
distfiles="https://www.mercurial-scm.org/release/$pkgname-$version.tar.gz"
checksum="1df8d1978aefcbb65dc51e3666a452583f47aeaf3c5682e4c00a3b23cd805d6a"
build_style="python3-module"

do_check() {
  cd tests
  rm test-doctest.py
  rm test-hghave.t
  rm test-https.t
  rm test-merge-tools.t
  rm test-persistent-nodemap.t
  python3 run-tests.py "$makejobs"
}

post_install() {
  for i in doc/*.1 \
           doc/*.5 \
           doc/*.8; do
    vman "$i"
  done
  vinstall contrib/bash_completion 644 \
    usr/share/bash-completion/completions hg
  vinstall contrib/zsh_completion 644 \
    usr/share/zsh/site-functions _hg
}

