}

python3-sphinxcontrib-websupport_package() {
  noarch="yes"
  depends="python3-sphinxcontrib"
  pycompile_module="sphinxcontrib/websupport"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
    vlicense LICENSE
  }
}

