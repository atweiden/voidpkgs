maintainer="nox"
pkgname="delta"
version=0.4.3
revision=1
short_desc="Syntax-highlighting pager for git"
makedepends="oniguruma-devel"
hostmakedepends+=" clang"
hostmakedepends+=" llvm"
homepage="https://github.com/dandavison/delta"
license="MIT"
distfiles="https://github.com/dandavison/delta/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="78ee36ec30194fe261ccb585111b67adae5166e79170f9636e54cbf5427da54a"
build_style="cargo"

pre_build() {
  export CFLAGS_${RUST_BUILD//-/_}="$CFLAGS_host"
  export CC_${RUST_BUILD//-/_}="$BUILD_CC"
}

post_install() {
  vlicense LICENSE
}

