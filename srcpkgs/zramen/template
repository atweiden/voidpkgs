maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="zramen"
version=0.0.2
revision=1
short_desc="Manage zram swap space"
noarch="yes"
depends+=" virtual?awk"
depends+=" bash"
depends+=" bc"
depends+=" coreutils"
depends+=" grep"
depends+=" kmod"
depends+=" util-linux"
homepage="https://github.com/atweiden/zramen"
license="Unlicense"
distfiles="https://github.com/atweiden/zramen/releases/download/$version/$pkgname-$version.tar.gz"
checksum="4f0add7a9a59ebab613c3719b730eb2236bc9c7784d25bc8efa128aa68200a13"

do_install() {
  vbin zramen
}

post_install() {
  vlicense UNLICENSE
  vdoc README.md
  vmkdir etc/sv
  vcopy sv/zramen etc/sv
  chmod 644 "$PKGDESTDIR/etc/sv/zramen/conf"
  chmod 755 "$PKGDESTDIR/etc/sv/zramen/run"
  chmod 755 "$PKGDESTDIR/etc/sv/zramen/control/d"
  ln -s /run/runit/supervise.zramen "$PKGDESTDIR/etc/sv/zramen/supervise"
}

