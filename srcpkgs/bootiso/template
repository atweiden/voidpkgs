maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="bootiso"
version=3.2.2
revision=1
short_desc="Create a USB bootable device from an ISO image easily and securely"
noarch="yes"
depends+=" bash"
depends+=" coreutils"
depends+=" curl"
depends+=" dosfstools"
depends+=" e2fsprogs"
depends+=" eudev"
depends+=" exfat-utils"
depends+=" f2fs-tools"
depends+=" file"
depends+=" findutils"
depends+=" gawk"
depends+=" grep"
depends+=" mtools"
depends+=" ntfs-3g"
depends+=" parted"
depends+=" rsync"
depends+=" syslinux"
depends+=" tar"
depends+=" util-linux"
depends+=" wimlib"
homepage="https://github.com/jsamr/bootiso"
license="MIT"
changelog="https://github.com/jsamr/bootiso/raw/master/changelog.md"
distfiles="https://github.com/jsamr/bootiso/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="50d3d4ce855db8b3328e4f7bbe677de2531a341276cc2b546e5fefc9f593a9f9"

case "$XBPS_TARGET_MACHINE" in
  i686*|x86_64*)
    ;;
  *)
    broken="requires syslinux which is not available on $XBPS_TARGET_MACHINE"
    ;;
esac

do_install() {
  vbin bootiso
}

post_install() {
  vlicense LICENSE
  vdoc changelog.md
  vdoc readme.md
  vcopy images/ "usr/share/doc/$pkgname"
}

