maintainer="nox"
pkgname="libsndfile"
version=1.0.28
revision=3
short_desc="C library for reading and writing files containing sampled sound"
makedepends+=" alsa-lib-devel"
makedepends+=" libflac-devel"
makedepends+=" libvorbis-devel"
makedepends+=" sqlite-devel"
hostmakedepends+=" pkg-config"
hostmakedepends+=" python"
homepage="http://www.mega-nerd.com/libsndfile"
license="LGPL-2.1-or-later"
distfiles="http://www.mega-nerd.com/libsndfile/files/$pkgname-$version.tar.gz"
checksum="1ff33929f042fa333aed1e8923aa628c3ee9e1eb85512686c55092d1e5a9dfa9"
build_style="gnu-configure"

libsndfile-progs_package() {
  short_desc+=" - bundled cmdline apps"
  pkg_install() {
    vmove usr/bin
    vmove usr/share/man
  }
}

libsndfile-devel_package() {
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share/doc
  }
}

