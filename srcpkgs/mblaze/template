post_install() {
  vbin contrib/mencrypt
  vbin contrib/menter
  vbin contrib/mgpg
  vbin contrib/mp7m
  vbin contrib/mraw
  vbin contrib/mrecode
  vbin contrib/msign
  vbin contrib/mverify
  vbin contrib/mvi
  vlicense COPYING
}

