maintainer="nox"
pkgname="libvterm"
version=0.1.1
revision=1
short_desc="Abstract VT220/xterm/ECMA-48 emulation library"
hostmakedepends+=" libtool"
hostmakedepends+=" perl"
hostmakedepends+=" pkg-config"
homepage="http://www.leonerd.org.uk/code/libvterm"
license="MIT"
distfiles="https://launchpad.net/libvterm/trunk/v${version%.*}/+download/$pkgname-$version.tar.gz"
checksum="9bb88e7c67ea0ac5a0f8d1df3f432d3865e5ff36a778e9a2b34a58aba857b5d8"
build_style="gnu-makefile"
make_install_target+=" install-inc"
make_install_target+=" install-lib"

post_extract() {
  if [[ -n "$CROSS_BUILD" ]]; then
    cp /usr/bin/libtool .
    sed \
      -i \
      -e "s,CCLD=.*,CCLD=$CC,g;s,CC=.*,CC=$CC,g" \
      libtool
    sed \
      -i \
      -e "s,libtool,./libtool,g" \
      Makefile
  fi
}

post_install() {
  vlicense LICENSE
}

libvterm-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

