maintainer="nox"
pkgname="libvterm"
version=0.3
revision=1
short_desc="Abstract VT220/xterm/ECMA-48 emulation library"
hostmakedepends+=" libtool"
hostmakedepends+=" perl"
hostmakedepends+=" pkg-config"
homepage="https://www.leonerd.org.uk/code/libvterm"
license="MIT"
distfiles="https://www.leonerd.org.uk/code/libvterm/$pkgname-$version.tar.gz"
checksum="61eb0d6628c52bdf02900dfd4468aa86a1a7125228bab8a67328981887483358"
build_style="gnu-makefile"
make_install_target+=" install-inc"
make_install_target+=" install-lib"

post_extract() {
  if [[ -n "$CROSS_BUILD" ]]; then
    cp /usr/bin/libtool .
    sed \
      -i \
      -e "s,CCLD=.*,CCLD=$CC,g;s,CC=.*,CC=$CC,g" \
      libtool
    sed \
      -i \
      -e "s,libtool,./libtool,g" \
      Makefile
  fi
}

post_install() {
  vlicense LICENSE
}

libvterm-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

