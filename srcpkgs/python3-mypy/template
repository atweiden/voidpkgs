post_install() {
  make -C docs man
  vman docs/build/man/mypy.1
  vlicense LICENSE

  rm -r "$DESTDIR/$py3_sitelib/mypy/test"
  rm -r "$DESTDIR/$py3_sitelib/mypyc/test"
  rm -r "$DESTDIR/$py3_sitelib/mypyc/test-data"
}

