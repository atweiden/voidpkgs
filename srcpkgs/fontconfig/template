maintainer="nox"
pkgname="fontconfig"
version=2.13.1
revision=3
short_desc="Library for configuring and customizing font access"
makedepends+=" expat-devel"
makedepends+=" freetype-devel"
makedepends+=" libuuid-devel"
hostmakedepends+=" gperf"
hostmakedepends+=" pkg-config"
homepage="http://www.fontconfig.org"
license="MIT"
distfiles="$FREEDESKTOP_SITE/fontconfig/release/$pkgname-$version.tar.bz2"
checksum="f655dd2a986d7aa97e052261b36aa67b0a64989496361eca8d604e6414006741"
conf_files="/etc/fonts/fonts.conf"
build_style="gnu-configure"
configure_args+=" --enable-docs"
configure_args+=" --enable-static"
configure_args+=" --with-cache-dir=/var/cache/$pkgname"

pre_build() {
  # trick to regenerate hash functions :-)
  rm -f src/fcobjshash.h
}

post_install() {
  if [[ -n "$CROSS_BUILD" ]]; then
    sed \
      -i \
      -e 's,\(Cflags: -I${includedir}\).*,\1,g' \
      "$DESTDIR/usr/lib/pkgconfig/fontconfig.pc"
  fi
  vlicense COPYING
}

fontconfig-devel_package() {
  unset depends
  short_desc+=" - development files"
  depends+=" expat-devel"
  depends+=" fontconfig-${version}_$revision"
  depends+=" freetype-devel"
  depends+=" libuuid-devel"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove usr/share/man/man3
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share/gettext
  }
}

fontconfig-doc_package() {
  short_desc+=" - documentation"
  pkg_install() {
    vmove usr/share/doc
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
