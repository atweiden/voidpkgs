wrksrc="${pkgname#raku-}-$_gitrev"
build_style="raku-dist"

pre_check() {
  # fetch https://github.com/atweiden/txn-examples for testing
  peru \
    --file=".peru.yml" \
    --sync-dir="$PWD" \
    sync
}

post_install() {
  vlicense UNLICENSE
  vdoc README.md
}

