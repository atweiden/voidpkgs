maintainer="nox"
pkgname="expat"
version=2.6.1
revision=1
short_desc="XML parser library written in C"
homepage="https://libexpat.github.io/"
license="MIT"
changelog="https://github.com/libexpat/libexpat/raw/master/expat/Changes"
distfiles="https://github.com/libexpat/libexpat/releases/download/R_${version//./_}/expat-$version.tar.xz"
checksum="0c00d2760ad12efef6e26efc8b363c8eb28eb8c8de719e46d5bb67b40ba904a3"
build_style="gnu-configure"

post_install() {
  vlicense COPYING
}

expat-devel_package() {
  depends="expat>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/cmake
    vmove usr/lib/pkgconfig
  }
}

xmlwf_package() {
  short_desc+=" - xmlwf utility"
  pkg_install() {
    vmove usr/bin
    vmove usr/share
  }
}

