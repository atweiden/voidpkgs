maintainer="nox"
pkgname="ocaml-num"
version=1.3
revision=3
short_desc="OCaml legacy Num library for arbitrary-precision integers"
makedepends+=" ocaml"
makedepends+=" ocaml-findlib"
homepage="https://github.com/ocaml/num"
license="LGPL-2.1"
distfiles="https://github.com/ocaml/num/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="4f79c30e81ea9553c5b2c5b5b57bb19968ccad1e85256b3c446b5df58f33e94d"
wrksrc="num-$version"
build_style="gnu-makefile"
make_install_target="findlib-install"
nocross="yes"

pre_install() {
  export OCAMLFIND_DESTDIR="$DESTDIR/usr/lib/ocaml"
  vmkdir /usr/lib/ocaml/stublibs
}
post_install() {
  vlicense LICENSE
}

