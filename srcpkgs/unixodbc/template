maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="unixodbc"
version=2.3.7
revision=1
short_desc="Basic ODBC tools"
makedepends+=" libltdl-devel"
makedepends+=" readline-devel"
homepage="http://www.unixodbc.org"
license="GPL-2.0-only, LGPL-2.1-or-later"
distfiles="ftp://ftp.unixodbc.org/pub/unixODBC/unixODBC-$version.tar.gz"
checksum="45f169ba1f454a72b8fcbb82abd832630a3bf93baa84731cf2949f449e1e3e77"
conf_files+=" /etc/odbc.ini"
conf_files+=" /etc/odbcinst.ini"
wrksrc="unixODBC-$version"
build_style="gnu-configure"

libodbc_package() {
  short_desc="ODBC library for Unix"
  pkg_install() {
    vmove "usr/lib/*.so.*"
  }
}

unixodbc-devel_package() {
  short_desc="ODBC library for Unix - development files"
  depends="libodbc-${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

