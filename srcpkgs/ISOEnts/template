create_wrksrc="yes"
sgml_entries="CATALOG /usr/share/sgml/iso8879/catalog --"

do_install() {
  vmkdir usr/share/sgml/iso8879
  vcopy "*" usr/share/sgml/iso8879
  vinstall "$FILESDIR/catalog" 644 usr/share/sgml/iso8879
}

