maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="nilfs-utils"
version=2.2.7
revision=1
short_desc="A log-structured file system for Linux - userspace utils"
makedepends+=" libmount-devel"
makedepends+=" libuuid-devel"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
homepage="http://nilfs.sourceforge.net/"
license="GPL-2, LGPL-2.1"
distfiles="http://nilfs.sourceforge.net/download/$pkgname-$version.tar.bz2"
checksum="2cf651c47f65ae1387758d90b0c51e744e2ecce0b1d77e8be9998929f74ac005"
conf_files="/etc/nilfs_cleanerd.conf"
build_style="gnu-configure"
configure_args="--enable-libmount"
make_install_args="sbindir=/usr/bin"

pre_configure() {
  autoreconf -fi
}

post_install() {
  mv "$DESTDIR/sbin"/* "$DESTDIR/usr/bin/"
}

libnilfs_package() {
  short_desc="A log-structured file system for Linux - userspace runtime libraries"
  pkg_install() {
    vmove "usr/lib/*.so.*"
  }
}

nilfs-utils-devel_package() {
  depends+=" $makedepends"
  depends+=" libnilfs>=${version}_$revision"
  short_desc="A log-structured file system for Linux - userspace development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

