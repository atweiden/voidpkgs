maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="file"
version=5.37
revision=2
short_desc="File type identification utility"
makedepends="zlib-devel"
homepage="http://www.darwinsys.com/file/"
license="BSD-2-Clause"
distfiles="ftp://ftp.astron.com/pub/file/$pkgname-$version.tar.gz"
checksum="e9c13967f7dd339a3c241b7710ba093560b9a33013491318e88e6b8b57bae07f"
build_style="gnu-configure"
configure_args="--enable-static"
bootstrap="yes"

if [[ -n "$CROSS_BUILD" ]]; then
  # XXX cross compilation needs exactly the same version for the host
  hostmakedepends="file"
fi

post_install() {
  vlicense COPYING
}

libmagic_package() {
  short_desc="File type identification library"
  pkg_install() {
    vmove "usr/lib/*.so.*"
    vmove usr/share/misc
    vmove usr/share/man/man4
  }
}

file-devel_package() {
  depends+=" $makedepends"
  depends+=" libmagic>=${version}_$revision"
  short_desc="File type identification library - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share/man/man3
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
