wrksrc="Pygments-$version"
build_style="python3-module"
alternatives="pygments:pygmentize:/usr/bin/pygmentize3"

do_check() {
  python3 -m pytest
}

post_install() {
  vlicense LICENSE
  mv "$DESTDIR/usr/bin"/pygmentize{,3}
}

