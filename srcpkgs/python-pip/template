maintainer="nox"
pkgname="python-pip"
version=20.3.1
revision=2
short_desc="PyPA recommended tool for installing PyPI packages (Python2)"
depends="python-setuptools"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="https://pip.pypa.io/"
license="MIT"
changelog="https://github.com/pypa/pip/raw/master/NEWS.rst"
distfiles="$PYPI_SITE/p/pip/pip-$version.tar.gz"
checksum="43f7d3811f05db95809d39515a5111dd05994965d870178a4fe10d5482f9d2e2"
wrksrc="pip-$version"
build_style="python-module"

post_install() {
  vlicense LICENSE.txt
}

python3-pip_package() {
  depends="python3-setuptools"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove usr/bin/pip3
    mv "$PKGDESTDIR/usr/bin"/pip{3,}
    vmove "$py3_lib"
    vlicense LICENSE.txt
  }
}

