maintainer="nox"
pkgname="abseil-cpp"
version=20230802.0
revision=1
short_desc="Abseil common libraries"
hostmakedepends="pkg-config"
homepage="https://abseil.io"
license="Apache-2.0"
changelog="https://github.com/abseil/abseil-cpp/releases"
distfiles="https://github.com/abseil/abseil-cpp/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="59d2976af9d6ecf001a81a35749a6e551a335b949d34918cfade07737b9d93c5"
build_style="cmake"
configure_args+=" -DABSL_PROPAGATE_CXX_STD=ON"
configure_args+=" -DBUILD_SHARED_LIBS=ON"
if [[ -n "$XBPS_TARGET_NO_ATOMIC8" ]]; then
  configure_args+=" -DCMAKE_CXX_STANDARD_LIBRARIES=-latomic"
fi

abseil-cpp-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"

  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove usr/lib/cmake
    vmove "usr/lib/*.so"
  }
}

