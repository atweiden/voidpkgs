maintainer="nox"
pkgname="abseil-cpp"
version=20230125.3
revision=1
short_desc="Abseil common libraries"
hostmakedepends="pkg-config"
homepage="https://abseil.io"
license="Apache-2.0"
distfiles="https://github.com/abseil/abseil-cpp/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="5366d7e7fa7ba0d915014d387b66d0d002c03236448e1ba9ef98122c13b35c36"
build_style="cmake"
configure_args+=" -DABSL_PROPAGATE_CXX_STD=ON"
configure_args+=" -DBUILD_SHARED_LIBS=ON"
if [[ -n "$XBPS_TARGET_NO_ATOMIC8" ]]; then
  configure_args+=" -DCMAKE_CXX_STANDARD_LIBRARIES=-latomic"
fi

abseil-cpp-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"

  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove usr/lib/cmake
    vmove "usr/lib/*.so"
  }
}

