post_patch() {
  rm -f src/_composer
}

do_install() {
  vmkdir usr/share/zsh/site-functions/
  # cheat package includes better one
  rm src/_cheat
  vcopy "src/_*" usr/share/zsh/site-functions/
  vlicense LICENSE
}

