build_style="gnu-configure"
configure_args="ac_cv_so_reuseport_works=yes ac_cv_so_tfo=yes"
system_accounts="_hitch"

post_install() {
  vman hitch.8
  vman hitch.conf.5
  vlicense LICENSE
  vsv hitch
}

