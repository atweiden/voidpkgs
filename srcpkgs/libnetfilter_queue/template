maintainer="nox"
pkgname="libnetfilter_queue"
version=1.0.3
revision=1
short_desc="An API to packets that have been queued by the kernel packet filter"
makedepends+=" libmnl-devel"
makedepends+=" libnfnetlink-devel"
hostmakedepends="pkg-config"
homepage="http://www.netfilter.org/projects/libnetfilter_queue/"
license="GPL-2"
distfiles="http://www.netfilter.org/projects/libnetfilter_queue/files/$pkgname-$version.tar.bz2"
checksum="9859266b349d74c5b1fdd59177d3427b3724cd72a97c49cc2fffe3b55da8e774"
build_style="gnu-configure"

CFLAGS="-D_GNU_SOURCE"

pre_configure() {
  sed \
    -i \
    -e '15i#include <sys/time.h>' \
    include/libnetfilter_queue/libnetfilter_queue.h
  sed \
    -i \
    -e 's/u_int\([0-9]*\)_t/uint\1_t/g' \
    $(find -name '*.[ch]')
}

libnetfilter_queue-devel_package() {
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

