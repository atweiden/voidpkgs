maintainer="nox"
pkgname="nghttp2"
version=1.41.0
revision=1
short_desc="HTTP/2 C Library"
makedepends+=" c-ares-devel"
makedepends+=" jansson-devel"
makedepends+=" libev-devel"
makedepends+=" libevent-devel"
makedepends+=" libressl-devel"
makedepends+=" zlib-devel"
checkdepends="libcppunit-devel"
hostmakedepends="pkg-config"
license="MIT"
homepage="https://nghttp2.org"
distfiles="https://github.com/tatsuhiro-t/nghttp2/releases/download/v$version/$pkgname-$version.tar.xz"
checksum="abc25b8dc601f5b3fefe084ce50fcbdc63e3385621bee0cbfa7b57f9ec3e67c2"
build_style="gnu-configure"
python_version=3

post_install() {
  vlicense COPYING
  rm -rf "$DESTDIR/usr/share/man"
}

nghttp2-devel_package() {
  depends="$sourcepkg-${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

