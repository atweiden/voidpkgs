maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="nghttp2"
version=1.34.0
revision=1
short_desc="HTTP/2 C Library"
makedepends+=" jansson-devel"
makedepends+=" libevent-devel"
makedepends+=" libressl-devel"
makedepends+=" zlib-devel"
hostmakedepends="pkg-config"
license="MIT"
homepage="https://nghttp2.org"
distfiles="https://github.com/tatsuhiro-t/nghttp2/releases/download/v$version/nghttp2-$version.tar.xz"
checksum="ecb0c013141495e24bd6deca022b5a92097a7848a0c17c4e5af1243a97fa622e"
build_style="gnu-configure"
configure_args+=" --without-jemalloc"
configure_args+=" --without-libxml2"
configure_args+=" --without-spdylay"

post_install() {
  vlicense COPYING
  rm -rf "$DESTDIR/usr/share/man"
}

nghttp2-devel_package() {
  depends="$sourcepkg-${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

