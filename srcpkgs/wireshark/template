maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="wireshark"
version=3.0.7
revision=1
short_desc="Network protocol analyzer"
depends="libcap-progs"
makedepends+=" c-ares-devel"
makedepends+=" gnutls-devel"
makedepends+=" libcap-devel"
makedepends+=" libcap-progs"
makedepends+=" libgcrypt-devel"
makedepends+=" libglib-devel"
makedepends+=" liblz4-devel"
makedepends+=" libmaxminddb-devel"
makedepends+=" libnl3-devel"
makedepends+=" libpcap-devel"
makedepends+=" libssh-devel"
makedepends+=" libxml2-devel"
makedepends+=" lua52-devel"
makedepends+=" mit-krb5-devel"
makedepends+=" nghttp2-devel"
makedepends+=" sbc-devel"
makedepends+=" spandsp-devel"
makedepends+=" tiff-devel"
makedepends+=" zlib-devel"
hostmakedepends+=" flex"
hostmakedepends+=" mit-krb5-devel"
hostmakedepends+=" perl"
hostmakedepends+=" pkg-config"
hostmakedepends+=" python3-devel"
homepage="https://www.wireshark.org"
license="GPL-2.0-or-later"
distfiles="https://www.wireshark.org/download/src/$pkgname-$version.tar.xz"
checksum="3b2b279017753398b8d5deb440db5f98a205eea35f9417e5fa2893947e7992f2"
build_style="cmake"
configure_args="-DBUILD_wireshark=OFF"
system_groups="wireshark"

CFLAGS="-I$XBPS_CROSS_BASE/usr/include/lua5.2"
CXXFLAGS="-I$XBPS_CROSS_BASE/usr/include/lua5.2"

post_install() {
  local _include_dir
  _include_dir="usr/include/wireshark"

  rm -f -- "$DESTDIR/usr/bin/lemon"
  rm -f -- "$DESTDIR/usr/lib/wireshark/cmake/UseLemon.cmake"

  # headers
  vmkdir "$_include_dir"
  vcopy ws_symbol_export.h "$_include_dir"
  for i in wiretap \
           wsutil; do
    vmkdir "$_include_dir/$i"
    vcopy "$i/*.h" "$_include_dir/$i"
  done

  chmod 0750 "$DESTDIR/usr/bin/dumpcap"
}

libwireshark_package() {
  short_desc+=" - library"
  pkg_install() {
    vmove "usr/lib/*.so.*"
    vmove usr/lib/wireshark/extcap
    vmove usr/lib/wireshark/plugins
  }
}

libwireshark-devel_package() {
  short_desc+=" - development files"
  depends="libwireshark>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
    vmove usr/lib/wireshark/cmake
  }
}

