maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="jemalloc"
version=5.2.0
revision=1
short_desc="General-purpose scalable concurrent malloc(3) implementation"
homepage="http://jemalloc.net/"
license="BSD-2-Clause"
changelog="https://github.com/jemalloc/jemalloc/raw/master/ChangeLog"
distfiles="https://github.com/jemalloc/jemalloc/releases/download/$version/$pkgname-$version.tar.bz2"
checksum="74be9f44a60d2a99398e706baa921e4efde82bf8fd16e5c0643c375c5851e3b4"
build_style="gnu-configure"
configure_args="je_cv_static_page_shift=12"

post_install() {
  vlicense COPYING
}

jemalloc-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/bin
    vmove usr/share
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

