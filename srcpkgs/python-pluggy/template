maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="python-pluggy"
version=0.7.1
revision=1
short_desc="Minimalist production ready python2 plugin system"
noarch="yes"
depends="python"
checkdepends="python3-pytest"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="https://github.com/pytest-dev/pluggy"
license="MIT"
distfiles="$PYPI_SITE/p/pluggy/${pkgname#*-}-$version.tar.gz"
checksum="95eb8364a4708392bae89035f45341871286a333f749c3141c20573d2b3876e1"
wrksrc="${pkgname#*-}-$version"
build_style="python-module"
pycompile_module="pluggy"

do_check() {
  python3 -m pytest
}

post_install() {
  vlicense LICENSE
}

python3-pluggy_package() {
  noarch="yes"
  pycompile_module="pluggy"
  depends="python3"
  short_desc="${short_desc/python2/python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
    vlicense LICENSE
  }
}

