maintainer="nox"
pkgname="botan"
version=2.19.2
revision=2
short_desc="Crypto library written in C++"
makedepends+=" bzip2-devel"
makedepends+=" liblzma-devel"
makedepends+=" sqlite-devel"
makedepends+=" zlib-devel"
hostmakedepends+=" doxygen"
hostmakedepends+=" python3"
homepage="https://botan.randombit.net/"
license="BSD-2-Clause"
changelog="https://botan.randombit.net/news.html"
distfiles="https://botan.randombit.net/releases/Botan-$version.tar.xz"
checksum="3af5f17615c6b5cd8b832d269fb6cb4d54ec64f9eb09ddbf1add5093941b4d75"
wrksrc="${pkgname^}-$version"
build_style="gnu-makefile"
python_version=3

LDFLAGS="-pthread"

do_configure() {
  local _args
  local _cpu

  _args+=" --cc=gcc"
  _args+=" --enable-shared"
  _args+=" --os=linux"
  _args+=" --prefix=/usr"
  _args+=" --with-bzip2"
  _args+=" --with-doxygen"
  _args+=" --with-lzma"
  _args+=" --with-sqlite3"
  _args+=" --with-zlib"

  case "$XBPS_TARGET_MACHINE" in
    i686*)
      _cpu="i686"
      ;;
    x86_64*)
      _cpu="x86_64"
      ;;
    armv5*)
      _cpu="arm"
      _args+=" --disable-modules=simd"
      ;;
    armv6*)
      _cpu="arm"
      _args+=" --disable-modules=simd"
      ;;
    armv7*)
      _cpu="armv7-a"
      _args+=" --disable-modules=simd"
      ;;
    aarch64*)
      _cpu="armv8-a"
      ;;
    mips*)
      _cpu="mips32"
      ;;
    ppc64le*)
      _cpu="ppc64le"
      ;;
    ppc64*)
      _cpu="ppc64"
      ;;
    ppc*)
      _cpu="ppc"
      ;;
    *)
      _cpu="${XBPS_TARGET_MACHINE%-musl}"
      ;;
  esac

  python3 configure.py \
    --distribution-info="Void Linux botan-${version}_$revision" \
    --cpu="$_cpu" \
    $_args
}

post_install() {
  vlicense license.txt
}

botan-doc_package() {
  short_desc+=" - documentation"
  pkg_install() {
    vmove usr/share/doc
  }
}

botan-devel_package() {
  unset depends
  short_desc+=" - development files"
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

