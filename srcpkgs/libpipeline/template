maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libpipeline"
version=1.5.1
revision=1
short_desc="Pipeline manipulation library"
checkdepends+=" check-devel"
checkdepends+=" pkg-config"
homepage="http://libpipeline.nongnu.org/"
license="GPL-3.0-or-alter"
distfiles="https://download-mirror.savannah.gnu.org/releases/libpipeline/$pkgname-$version.tar.gz"
checksum="d633706b7d845f08b42bc66ddbe845d57e726bf89298e2cee29f09577e2f902f"
build_style="gnu-configure"

libpipeline-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/share
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
  }
}

