maintainer="nox"
pkgname="libpipeline"
version=1.5.2
revision=1
short_desc="Pipeline manipulation library"
checkdepends+=" check-devel"
checkdepends+=" pkg-config"
homepage="http://libpipeline.nongnu.org/"
license="GPL-3.0-or-later"
distfiles="https://download-mirror.savannah.gnu.org/releases/libpipeline/$pkgname-$version.tar.gz"
checksum="fd59c649c1ae9d67604d1644f116ad4d297eaa66f838e3dfab96b41e85b059fb"
build_style="gnu-configure"

libpipeline-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/share
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
  }
}

