post_install() {
  vlicense LICENSE
}

python3-MarkupSafe_package() {
  pycompile_module="markupsafe"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
    vlicense LICENSE
  }
}

