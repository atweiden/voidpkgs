maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="wireguard"
version=0.0.20190406
revision=2
short_desc="Fast, modern, secure VPN tunnel"
depends+=" dkms"
depends+=" wireguard-tools"
makedepends="libmnl-devel"
homepage="https://www.wireguard.com/"
license="GPL-2.0-only"
distfiles="https://git.zx2c4.com/WireGuard/snapshot/WireGuard-$version.tar.xz"
checksum="2f06f3adf70b95e74a7736a22dcf6e9ef623b311a15b7d55b5474e57c3d0415b"
wrksrc="WireGuard-$version"
build_wrksrc="src/tools"
build_style="gnu-makefile"
make_install_args+=" WITH_BASHCOMPLETION=yes"
make_install_args+=" WITH_WGQUICK=yes"
dkms_modules="wireguard $version"

post_extract() {
  sed \
    -i \
    -e 's/^CFLAGS /override &/' \
    "$build_wrksrc/Makefile"
}

post_install() {
  make \
    -C .. \
    DESTDIR="$DESTDIR" \
    DKMSDIR="/usr/src/wireguard-$version/" \
    dkms-install
}

wireguard-tools_package() {
  unset depends
  short_desc+=" - tools"
  depends+=" bash"
  depends+=" iproute2"
  depends+=" iputils"
  depends+=" openresolv"
  conf_files="/etc/sv/wireguard/conf"
  pkg_install() {
    vmove usr/bin/wg
    vmove usr/bin/wg-quick
    vmove usr/share/bash-completion/completions/wg
    vmove usr/share/bash-completion/completions/wg-quick
    vmove usr/share/man/man8/wg.8
    vmove usr/share/man/man8/wg-quick.8
    vsv wireguard
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
