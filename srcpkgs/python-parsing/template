maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="python-parsing"
version=2.2.2
revision=1
short_desc="Python parsing module (Python2)"
noarch="yes"
depends="python"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="https://github.com/pyparsing/pyparsing"
license="MIT"
changelog="https://github.com/pyparsing/pyparsing/raw/master/CHANGES"
distfiles="https://github.com/pyparsing/pyparsing/archive/pyparsing_$version.tar.gz>$pkgname-$version.tar.gz"
checksum="63cdff56a7af7aaf6d66ed0d995c18c5028dc53d0fd9b463972d732bf6d4bac6"
wrksrc="pyparsing-pyparsing_$version"
build_style="python-module"
pycompile_module="pyparsing.py"

do_check() {
  python2 unitTests.py
  python3 unitTests.py
}

post_install() {
  vlicense LICENSE
}

python3-parsing_package() {
  noarch="yes"
  depends="python3"
  pycompile_module="pyparsing.py"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
    vlicense LICENSE
  }
}

