maintainer="nox"
pkgname="libyaml"
version=0.2.4
revision=1
short_desc="Fast YAML 1.1 parser and emitter library"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
homepage="https://pyyaml.org/wiki/LibYAML"
license="MIT"
distfiles="https://github.com/yaml/libyaml/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="02265e0229675aea3a413164b43004045617174bdb2c92bf6782f618f8796b55"
build_style="gnu-configure"

pre_configure() {
  autoreconf -fi
}

post_install() {
  vlicense License
}

libyaml-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

