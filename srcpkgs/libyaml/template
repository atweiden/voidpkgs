maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libyaml"
version=0.2.1
revision=1
short_desc="Fast YAML 1.1 parser and emitter library"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
homepage="http://pyyaml.org/wiki/LibYAML"
license="MIT"
distfiles="https://github.com/yaml/libyaml/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="1d2aeb87f7d317f1496e4c39410d913840714874a354970300f375eec9303dc4"
build_style="gnu-configure"

pre_configure() {
  autoreconf -fi
}

post_install() {
  vlicense LICENSE
}

libyaml-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

