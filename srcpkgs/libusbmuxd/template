maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libusbmuxd"
version=2.0.1
revision=1
short_desc="USB Multiplex Daemon library"
makedepends+=" libusb-devel"
makedepends+=" libplist-devel"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" pkg-config"
homepage="https://marcan.st/blog/iphonelinux/usbmuxd/"
license="LGPL-2.1-only"
distfiles="https://github.com/libimobiledevice/libusbmuxd/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="f93faf3b3a73e283646f4d62b3421aeccf58142266b0eb22b2b13dd4b2362eb8"
patch_args="-Np1"
build_style="gnu-configure"

pre_configure() {
  autoreconf -fi
}

libusbmuxd-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

