maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="squashfs-tools"
version=4.3
revision=6
short_desc="Tool to create and append to squashfs filesystems"
makedepends+=" liblz4-devel"
makedepends+=" liblzma-devel"
makedepends+=" lzo-devel"
makedepends+=" zlib-devel"
homepage="http://squashfs.sf.net/"
license="GPL-2"
distfiles="$SOURCEFORGE_SITE/squashfs/${pkgname%-*}$version.tar.gz"
checksum="0d605512437b1eb800b4736791559295ee5f60177e102e4d4ccd0ee241a5f3f6"
wrksrc="${pkgname%-*}$version"

do_build() {
  make \
    "$makejobs" \
    -C "$pkgname" \
    LZ4_SUPPORT=1 \
    LZMA_XZ_SUPPORT=1 \
    LZO_SUPPORT=1 \
    XZ_SUPPORT=1
}

do_install() {
  vbin "$pkgname/mksquashfs"
  vbin "$pkgname/unsquashfs"
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
