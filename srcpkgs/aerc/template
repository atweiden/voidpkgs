maintainer="nox"
pkgname="aerc"
version=0.7.1
revision=1
short_desc="Pretty good email client"
hostmakedepends+=" git"
hostmakedepends+=" scdoc"
homepage="https://aerc-mail.org/"
license="MIT"
distfiles="https://git.sr.ht/~rjarry/aerc/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="e149236623c103c8526b1f872b4e630e67f15be98ac604c0ea0186054dbef0cc"
build_style="go"
go_ldflags="-s -w -buildid="

export GOFLAGS="-trimpath"

do_configure() {
  :
}

do_build() {
  make \
    "$makejobs" \
    PREFIX="/usr"
}

do_install() {
  make \
    DESTDIR="$DESTDIR" \
    PREFIX="/usr" \
    STRIP="true" \
    install
}

post_install() {
  vlicense LICENSE
}

