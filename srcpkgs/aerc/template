maintainer="nox"
pkgname="aerc"
version=0.2.1
revision=1
short_desc="Terminal email client"
hostmakedepends+=" git"
hostmakedepends+=" scdoc"
homepage="https://aerc-mail.org"
license="MIT"
distfiles="https://git.sr.ht/~sircmpwn/aerc/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="560cee4e284ed35623d28a5e793db79c5e4700296b0aa6ac2c8e92b20ab5c1cf"
build_style="go"

export GOFLAGS="-trimpath"

do_configure() {
  :
}

do_build() {
  make \
    "$makejobs" \
    PREFIX="/usr"
}

do_install() {
  make \
    DESTDIR="$DESTDIR" \
    PREFIX="/usr" \
    STRIP="true" \
    install
}

post_install() {
  vlicense LICENSE
}

