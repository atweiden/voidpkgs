maintainer="nox"
pkgname="aerc"
version=0.6.0
revision=1
short_desc="Pretty good email client"
hostmakedepends+=" git"
hostmakedepends+=" scdoc"
homepage="https://aerc-mail.org/"
license="MIT"
distfiles="https://git.sr.ht/~rjarry/aerc/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="ec4565609938b314f0343d85dfdab1cb0659c07c2845369ff7cf0132c5faed6e"
build_style="go"
go_ldflags="-s -w -buildid="

export GOFLAGS="-trimpath"

do_configure() {
  :
}

do_build() {
  make \
    "$makejobs" \
    PREFIX="/usr"
}

do_install() {
  make \
    DESTDIR="$DESTDIR" \
    PREFIX="/usr" \
    STRIP="true" \
    install
}

post_install() {
  vlicense LICENSE
}

