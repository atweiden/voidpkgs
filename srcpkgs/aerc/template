maintainer="nox"
pkgname="aerc"
version=0.5.1
revision=1
short_desc="Pretty good email client"
hostmakedepends+=" git"
hostmakedepends+=" scdoc"
homepage="https://aerc-mail.org/"
license="MIT"
distfiles="https://git.sr.ht/~sircmpwn/aerc/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="8feb7f87aa210ab7d8b271c34ad39af13f553447994341b3c25e7a659ce37d46"
build_style="go"

export GOFLAGS="-trimpath"

do_configure() {
  :
}

do_build() {
  make \
    "$makejobs" \
    PREFIX="/usr"
}

do_install() {
  make \
    DESTDIR="$DESTDIR" \
    PREFIX="/usr" \
    STRIP="true" \
    install
}

post_install() {
  vlicense LICENSE
}

