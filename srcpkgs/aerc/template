maintainer="nox"
pkgname="aerc"
version=0.4.0
revision=1
short_desc="Pretty good email client"
hostmakedepends+=" git"
hostmakedepends+=" scdoc"
homepage="https://aerc-mail.org/"
license="MIT"
distfiles="https://git.sr.ht/~sircmpwn/aerc/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="d369462cc0f76c33d804e586463e4d35d81fba9396ec08c3d3d0579e26091e17"
build_style="go"

export GOFLAGS="-trimpath"

do_configure() {
  :
}

do_build() {
  make \
    "$makejobs" \
    PREFIX="/usr"
}

do_install() {
  make \
    DESTDIR="$DESTDIR" \
    PREFIX="/usr" \
    STRIP="true" \
    install
}

post_install() {
  vlicense LICENSE
}

