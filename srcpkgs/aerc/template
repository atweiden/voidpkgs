maintainer="nox"
pkgname="aerc"
version=0.16.0
revision=1
short_desc="Pretty good email client"
hostmakedepends="scdoc"
homepage="https://aerc-mail.org/"
license="MIT"
changelog="https://git.sr.ht/~rjarry/aerc/blob/master/CHANGELOG.md"
distfiles="https://git.sr.ht/~rjarry/aerc/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="b81b4f27272df2e370da377438a500c0695d29b8a4c86ff5849d6ddf3433f4db"
build_style="go"
go_import_path="git.sr.ht/~rjarry/aerc"
go_build_tags+=" netgo"
go_build_tags+=" osusergo"
go_ldflags+=" -buildid="
go_ldflags+=" -X main.Version=$version"
if [[ "$XBPS_TARGET_LIBC" == "musl" ]]; then
  go_ldflags+=" -extldflags=-static"
  go_ldflags+=" -linkmode=external"
fi
ignore_elf_dirs="/usr/share/aerc/filters"

pre_build() {
  export GOFLAGS="-trimpath"
}

post_install() {
  make \
    DESTDIR="$DESTDIR" \
    PREFIX="/usr" \
    install
  vlicense LICENSE
}

