maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="oblibs"
version=0.0.1.1
revision=1
short_desc="Obarun library"
makedepends="skalibs-devel"
homepage="https://framagit.org/Obarun/oblibs"
license="ISC"
distfiles="https://framagit.org/Obarun/oblibs/-/archive/v$version/$pkgname-v$version.tar.bz2"
checksum="fbb0eaf9223805124f76c086a2d1a444649d077ef86bc05762776b8c0cfad1b3"
wrksrc="$pkgname-v$version"
build_style="configure"
configure_args+=" --libdir=/usr/lib"
configure_args+=" --prefix=/usr"

post_install() {
  vlicense COPYING
}

oblibs-devel_package() {
  depends+=" $makedepends"
  depends+=" $sourcepkg-${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove "usr/lib/*.a"
    vmove usr/include/oblibs
    vmove "usr/lib/*.so"
  }
}

