  }
}

boost-build_package() {
  archs="noarch"
  conf_files="/etc/site-config.jam"
  short_desc+=" - Boost.Build framework"
  pkg_install() {
    vmove usr/share/boost-build
    vmove etc/site-config.jam
  }
}

boost-devel_package() {
  noverifyrdeps="yes"
  depends+=" boost"
  depends+=" ${subpackages/boost-devel}"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

