maintainer="nox"
pkgname="python3-virtualenv"
version=20.21.0
revision=1
short_desc="Virtual Python environment builder"
depends+=" python3-distlib"
depends+=" python3-filelock"
depends+=" python3-platformdirs"
checkdepends+=" $depends"
checkdepends+=" python3-devel"
checkdepends+=" python3-flaky"
checkdepends+=" python3-packaging"
checkdepends+=" python3-pip"
checkdepends+=" python3-pytest-mock"
hostmakedepends+=" hatchling"
hostmakedepends+=" hatch-vcs"
homepage="https://virtualenv.pypa.io/"
license="MIT"
changelog="https://virtualenv.pypa.io/en/latest/changelog.html"
distfiles="$PYPI_SITE/v/virtualenv/virtualenv-$version.tar.gz"
checksum="f50e3e60f990a0757c9b68333c9fdaa72d7188caa417f96af9e52407831a3b68"
alternatives="virtualenv:virtualenv:/usr/bin/virtualenv3"
build_style="python3-pep517"

do_check() {
  local _skip
  # excluded tests depend on pytest-freezegun, not packaged in void,
  # or python2
  vsed \
    -i \
    -e '/addopts/d' \
    setup.cfg
  _skip="test_periodic_update or test_get_wheel_download_cached or test_py_pyc_missing or test_py_info_setuptools"
  PYTHONPATH="src" python3 -m pytest -k "not ($_skip)"
}

post_install() {
  mv "$DESTDIR/usr/bin/virtualenv" "$DESTDIR/usr/bin/virtualenv3"
  vlicense LICENSE
}

