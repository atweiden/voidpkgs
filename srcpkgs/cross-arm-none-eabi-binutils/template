_triplet="arm-none-eabi"
_pkgname="binutils"

maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="cross-$_triplet-$_pkgname"
version=2.32
revision=1
short_desc="GNU binary utilities"
makedepends="zlib-devel"
hostmakedepends+=" autoconf"
hostmakedepends+=" automake"
hostmakedepends+=" bison"
hostmakedepends+=" flex"
hostmakedepends+=" perl"
homepage="https://www.gnu.org/software/$_pkgname/"
license="GPL-3.0-or-later"
distfiles="$GNU_SITE/$_pkgname/$_pkgname-$version.tar.xz"
checksum="0ab6c55dd86a92ed561972ba15b9b70a8b9f75557f896446c82e8b36e473ee04"
wrksrc="$_pkgname-$version"
build_style="gnu-configure"
configure_args+=" --disable-nls"
configure_args+=" --enable-deterministic-archives"
configure_args+=" --enable-interwork"
configure_args+=" --enable-ld"
configure_args+=" --enable-multilib"
configure_args+=" --enable-plugins"
configure_args+=" --host=$XBPS_CROSS_TRIPLET"
configure_args+=" --prefix=/usr"
configure_args+=" --target=$_triplet"
configure_args+=" --with-gnu-as"
configure_args+=" --with-gnu-ld"
configure_args+=" --with-sysroot=/usr/$_triplet"
configure_args+=" --with-system-zlib"
configure_args+=" --without-isl"
nocross="yes"

post_install() {
  rm -fr "$DESTDIR/usr/share/info"
}

