maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="eudev"
version=3.2.6
revision=2
_gitrev="96c5552c52fc9b5b5f25e8ff7d5fb3e6e518474d"
short_desc="Gentoo's fork of systemd-udev (enhanced userland device daemon)"
makedepends+=" libblkid-devel"
makedepends+=" libkmod-devel"
hostmakedepends+=" automake"
hostmakedepends+=" docbook-xsl"
hostmakedepends+=" gperf"
hostmakedepends+=" libtool"
hostmakedepends+=" libxslt"
hostmakedepends+=" pkg-config"
homepage="https://github.com/gentoo/eudev"
license="GPL-2.0-or-later"
distfiles="https://github.com/gentoo/eudev/archive/$_gitrev.tar.gz>$pkgname-$version.tar.gz"
checksum="8ab63b0d3a87b4aafc767481ea168cdef30b4a24a20b2f29e74e960826bb3b6f"
conf_files="/etc/udev/udev.conf"
wrksrc="eudev-$_gitrev"
patch_args="-Np1"
build_style="gnu-configure"
configure_args+=" --disable-introspection"
configure_args+=" --enable-hwdb"
configure_args+=" --enable-manpages"

# compatible udev version provided
_UDEV_VERSION="220"

pre_configure() {
  autoreconf -fi
}

post_install() {
  vsv udevd
}

eudev-libudev-devel_package() {
  provides="libudev-devel-${_UDEV_VERSION}_$revision"
  depends="eudev-libudev>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share/pkgconfig
  }
}

eudev-libudev_package() {
  provides="libudev-${_UDEV_VERSION}_$revision"
  short_desc+=" - runtime library"
  pkg_install() {
    vmove "usr/lib/*.so.*"
  }
}

