  }

  postgresql13-pltcl_package() {
    depends="$sourcepkg>=${version}_$revision"
    short_desc="PL/Tcl procedural language for PostgreSQL"
    pkg_install() {
      vmove "$_prefix/lib/postgresql/pltcl*"
      for d in $(find "$DESTDIR/$_prefix/share/locale" \
