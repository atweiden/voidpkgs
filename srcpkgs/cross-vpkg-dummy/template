maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="cross-vpkg-dummy"
version=0.30
revision=1
short_desc="Dummy meta-pkg for cross building packages with xbps-src"
depends="base-files>=0.126"
homepage="https://www.voidlinux.org/"
license="Public domain"
build_style="meta"
provides+=" kernel-libc-headers-9999_1"
provides+=" binutils-9999_1"
provides+=" libada-9999_1"
provides+=" libada-devel-9999_1"
provides+=" libgcc-9999_1"
provides+=" libstdc++-9999_1"
provides+=" libstdc++-devel-9999_1"
provides+=" libgfortran-9999_1"
provides+=" libgfortran-devel-9999_1"
provides+=" libgomp-9999_1"
provides+=" libgomp-devel-9999_1"
provides+=" gcc-9999_1"
provides+=" gcc-fortran-9999_1"
provides+=" gcc-ada-9999_1"
conflicts+=" kernel-libc-headers>=0"
conflicts+=" binutils>=0"
conflicts+=" libada>=0"
conflicts+=" libada-devel>=0"
conflicts+=" libgcc>=0"
conflicts+=" libstdc++>=0"
conflicts+=" libstdc++-devel>=0"
conflicts+=" libgfortran>=0"
conflicts+=" libgfortran-devel>=0"
conflicts+=" libgomp>=0"
conflicts+=" libgomp-devel>=0"
conflicts+=" gcc>=0"
conflicts+=" gcc-fortran>=0"
conflicts+=" gcc-ada>=0"
shlib_provides+=" libgcc_s.so.1"
shlib_provides+=" libgnat-8.so"
shlib_provides+=" libgnarl-8.so"
shlib_provides+=" libgomp.so.1"
shlib_provides+=" libstdc++.so.6"
shlib_provides+=" libgfortran.so.5"

case "$XBPS_TARGET_MACHINE" in
  *-musl)
    depends+=" musl-legacy-compat"
    provides+=" musl-9999_1"
    provides+=" musl-devel-9999_1"
    conflicts+=" musl>=0"
    shlib_provides+=" libc.so"
    ;;
  # glibc
  *)
    provides+=" glibc-9999_1"
    provides+=" glibc-devel-9999_1"
    conflicts+=" glibc>=0"
    shlib_provides+=" libc.so.6"
    shlib_provides+=" libm.so.6"
    shlib_provides+=" librt.so.1"
    shlib_provides+=" libpthread.so.0"
    shlib_provides+=" libcrypt.so.1"
    shlib_provides+=" libdl.so.2"
    shlib_provides+=" libresolv.so.2"
    shlib_provides+=" libnsl.so.1"
    shlib_provides+=" libutil.so.1"
    shlib_provides+=" ld-linux.so.2"
    shlib_provides+=" ld-linux.so.3"
    shlib_provides+=" ld-linux-x86_64.so.2"
    shlib_provides+=" ld-linux-armhf.so.3"
    shlib_provides+=" ld-linux-aarch64.so.1"
    shlib_provides+=" ld64.so.2"
    shlib_provides+=" ld.so.1"
    ;;
esac

if [[ -z "$XBPS_CROSS_BUILD" ]]; then
  broken="This package is only meant to be used by xbps-src to cross compile."
fi

