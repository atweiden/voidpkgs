maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="btcwallet"
version=0.7.0alpha
revision=3
_gitrev="ba03278a64bc1a34349f05ebf092947d58e7859a"
short_desc="A secure Bitcoin wallet daemon written in Go"
hostmakedepends="git"
tags="btcsuite"
homepage="https://github.com/btcsuite/btcwallet"
license="ISC"
distfiles="https://github.com/btcsuite/btcwallet/archive/$_gitrev.tar.gz>$pkgname-$version.tar.gz"
checksum="96503eab555d19c7190454375e20187ec88c52e29a1c596fc019d04584b0791b"
wrksrc="$pkgname-$_gitrev"
build_style="go"
go_import_path="github.com/btcsuite/btcwallet"

post_build() {
  go install . ./cmd/...
}

pre_install() {
  # prepend btc to unqualified binaries
  for _bin in $(find "$GOPATH/bin"  \
                        -mindepth 1 \
                        -maxdepth 1 \
                        -type f ! -name "btc*" -printf '%f\n'); do
    mv "$GOPATH/bin/$_bin" "$GOPATH/bin/btc$_bin"
  done
}

post_install() {
  vlicense LICENSE
  vdoc CHANGES
  vdoc README.md
  vdoc sample-btcwallet.conf
  vcopy docs "usr/share/doc/$pkgname"
}

