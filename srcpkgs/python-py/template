maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="python-py"
version=1.6.0
revision=1
short_desc="Python2 development support library"
noarch="yes"
depends="python"
checkdepends="python3-pytest"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="https://github.com/pytest-dev/py"
license="MIT"
changelog="https://github.com/pytest-dev/py/raw/master/CHANGELOG"
distfiles="$PYPI_SITE/p/py/${pkgname#*-}-$version.tar.gz"
checksum="06a30435d058473046be836d3fc4f27167fd84c45b99704f2fb5509ef61f9af1"
wrksrc="${pkgname#*-}-$version"
build_style="python-module"
pycompile_module="py"

do_check() {
  python3 -m pytest
}

post_install() {
  vlicense LICENSE
}

python3-py_package() {
  noarch="yes"
  depends="python3"
  pycompile_module="py"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
    vlicense LICENSE
  }
}

