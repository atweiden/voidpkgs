maintainer="nox"
pkgname="isl15"
version=0.19
revision=3
short_desc="Integer Set Library"
makedepends="gmp-devel"
homepage="https://libisl.sourceforge.io/"
license="MIT"
distfiles="$SOURCEFORGE_SITE/libisl/isl-$version.tar.bz2"
checksum="d59726f34f7852a081fbd3defd1ab2136f174110fc2e0c8d10bb122173fa9ed8"
wrksrc="${pkgname%15}-$version"
build_style="gnu-configure"
bootstrap="yes"

post_install() {
  # remove gdb python files
  rm -f "$DESTDIR/usr/lib"/*.py
  vlicense LICENSE
}

isl15-devel_package() {
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  conflicts="isl-devel>=0"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

