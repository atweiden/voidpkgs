maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libssh"
version=0.8.5
revision=2
short_desc="Multiplatform C library implementing the SSH v2 protocol"
makedepends+=" cmocka-devel"
makedepends+=" libressl-devel"
makedepends+=" zlib-devel"
hostmakedepends+=" pkg-config"
hostmakedepends+=" python3"
homepage="https://www.libssh.org/"
license="LGPL-2.1-or-later"
distfiles="https://git.libssh.org/projects/libssh.git/snapshot/$pkgname-$version.tar.bz2"
checksum="3160293b02d4ef86ca17ac95302f172b2abe3258bbf8c9ee2950f458832c25c3"
build_style="cmake"
configure_args="-DUNIT_TESTING=ON"

case "$XBPS_TARGET_MACHINE" in
  *-musl)
    configure_args="-DHAVE_GLOB=0"
    ;;
esac

libssh-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/lib/cmake
  }
}

