maintainer="nox"
pkgname="libssh"
version=0.9.6
revision=1
short_desc="Multiplatform C library implementing the SSH v2 protocol"
makedepends+=" cmocka-devel"
makedepends+=" openssl-devel"
makedepends+=" zlib-devel"
checkdepends="openssh"
hostmakedepends+=" pkg-config"
hostmakedepends+=" python3"
homepage="https://www.libssh.org/"
license="LGPL-2.1-or-later"
changelog="https://git.libssh.org/projects/libssh.git/plain/ChangeLog?h=stable-${version%.*}"
distfiles="https://www.libssh.org/files/0.8/libssh-$version.tar.xz"
checksum="63ddcb340e0898eb5c874418c1ff421cf90236fcb3fe5166675e79fa8a7511e4"
build_style="cmake"
case "$XBPS_TARGET_MACHINE" in
  *-musl)
    configure_args="-DHAVE_GLOB=0"
    ;;
esac
if [[ "$XBPS_CHECK_PKGS" ]]; then
  configure_args+=" -DUNIT_TESTING=ON"
else
  configure_args+=" -DUNIT_TESTING=OFF"
fi
# some tests fail when running as root
make_check="ci-skip"

libssh-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/lib/cmake
  }
}

