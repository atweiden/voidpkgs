maintainer="nox"
pkgname="cereal"
version=1.3.0
revision=2
short_desc="Header-only C++ serialization library"
homepage="https://uscilab.github.io/cereal"
license="BSD-3-Clause"
distfiles="https://github.com/USCiLab/cereal/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="329ea3e3130b026c03a4acc50e168e7daff4e6e661bc6a7dfec0d77b570851d5"
build_style="cmake"
configure_args="-DSKIP_PORTABILITY_TEST=1 -DTHREAD_SAFE=ON -DWITH_WERROR=OFF"

if [[ -n "$XBPS_TARGET_NO_ATOMIC8" ]]; then
  makedepends+=" libatomic-devel"
  LDFLAGS+=" -latomic"
  configure_args+=" -DCMAKE_CXX_STANDARD_LIBRARIES=-latomic"
fi

post_install() {
  vlicense LICENSE
}

