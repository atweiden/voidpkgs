maintainer="nox"
pkgname="libmd"
version=1.0.4
revision=1
short_desc="Message Digest functions from BSD systems"
homepage="https://www.hadrons.org/software/libmd/"
license="BSD-3-Clause, BSD-2-Clause, ISC, Beerware, custom:Public Domain"
distfiles="https://archive.hadrons.org/software/libmd/$pkgname-$version.tar.xz"
checksum="f51c921042e34beddeded4b75557656559cf5b1f2448033b4c1eec11c07e530f"
build_style="gnu-configure"

post_install() {
  vlicense COPYING
}

libmd-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share
  }
}

