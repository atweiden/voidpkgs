maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="lua"
version=5.3.5
revision=1
short_desc="Powerful, fast, lightweight, embeddable scripting language"
makedepends+=" ncurses-devel"
makedepends+=" readline-devel"
homepage="http://www.lua.org"
license="MIT"
distfiles="http://www.lua.org/ftp/$pkgname-$version.tar.gz"
checksum="0c2eed3f960446e1a3e4b9a1ca2f3ff893b6ce41942cf54d5dd59ab4b3b058ac"
alternatives+=" lua:lua:/usr/bin/lua5.3"
alternatives+=" lua:luac:/usr/bin/luac5.3"
alternatives+=" lua:lua.1:/usr/share/man/man1/lua5.3.1"
alternatives+=" lua:luac.1:/usr/share/man/man1/luac5.3.1"
alternatives+=" lua:lua:/usr/include/lua5.3"
alternatives+=" lua:/usr/include/lua.h:/usr/include/lua5.3/lua.h"
alternatives+=" lua:/usr/include/luaconf.h:/usr/include/lua5.3/luaconf.h"
alternatives+=" lua:/usr/include/lua.hpp:/usr/include/lua5.3/lua.hpp"
alternatives+=" lua:/usr/include/lualib.h:/usr/include/lua5.3/lualib.h"
alternatives+=" lua:/usr/include/lauxlib.h:/usr/include/lua5.3/lauxlib.h"
alternatives+=" lua:lua.pc:/usr/lib/pkgconfig/lua5.3.pc"
alternatives+=" lua:liblua.a:/usr/lib/liblua5.3.a"
alternatives+=" lua:liblua.so:/usr/lib/liblua5.3.so"
alternatives+=" lua:lua:/usr/share/doc/lua5.3"

pre_build() {
  # lua 5.3.4 has wrong release version in its Makefile; fix it
  sed \
    -i \
    -e "s/^R= \$V.4/R= \$V.5/" \
    Makefile
}

do_build() {
  sed \
    -i \
    -r \
    -e '/^LUA_(SO|A|T)=/ s;lua;lua5.3;' \
    -e '/^LUAC_T=/ s;luac;luac5.3;' \
    src/Makefile
  make \
    MYCFLAGS="$CFLAGS -fPIC" \
    MYLDFLAGS="$LDFLAGS" \
    CC="$CC" \
    RANLIB="$RANLIB" \
    INSTALL_DATA="cp -d" \
    LUA_SO="liblua5.3.so" \
    "$makejobs" \
    linux
}

do_install() {
  make \
    INSTALL_DATA="cp -d" \
    INSTALL_INC="$DESTDIR/usr/include/lua5.3" \
    INSTALL_MAN="$DESTDIR/usr/share/man/man1" \
    INSTALL_TOP="$DESTDIR/usr" \
    TO_BIN="lua5.3 luac5.3" \
    TO_LIB="liblua5.3.a liblua5.3.so liblua5.3.so.${version%.*} liblua5.3.so.$version" \
    install

  sed \
    "$FILESDIR/lua.pc" \
    -e "s;%VER%;${version%.*};g;s;%REL%;$version;g" \
    -e "s;llua;llua5.3;" \
    -e "s;/include;/include/lua5.3;" \
    > lua5.3.pc

  vinstall lua5.3.pc 644 usr/lib/pkgconfig

  # install the documentation
  rm -f doc/*.1
  vmkdir usr/share/doc/lua5.3
  cp -R doc/* "$DESTDIR/usr/share/doc/lua5.3"

  vlicense doc/readme.html

  # rename man pages
  mv "$DESTDIR/usr/share/man/man1"/lua{,5.3}.1
  mv "$DESTDIR/usr/share/man/man1"/luac{,5.3}.1
}

lua-devel_package() {
  depends+=" $makedepends"
  depends+=" lua>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/share/doc
  }
}

