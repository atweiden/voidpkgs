maintainer="nox"
pkgname="dcrctl"
version=1.7.7
revision=1
short_desc="Command-line client for interacting with the JSON-RPC servers of dcrd and dcrwallet"
tags="decred"
homepage="https://github.com/decred/dcrctl"
license="ISC"
distfiles="https://github.com/decred/dcrctl/archive/release-v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="6db104bc85f41906566b7f25e4d455e1253bab0c713bbe527bcb6f9fb494ea4d"
build_style="go"
go_import_path="decred.org/dcrctl"
go_build_tags+=" netgo"
go_build_tags+=" osusergo"
go_ldflags+=" -buildid="
go_ldflags+=" -X main.BuildMetadata="
go_ldflags+=" -X main.PreRelease="
if [[ "$XBPS_TARGET_LIBC" == "musl" ]]; then
  go_ldflags+=" -extldflags=-static-pie"
  go_ldflags+=" -linkmode=external"
fi

export CGO_ENABLED=0

# XXX: -buildmode=pie is unverified on *-musl, and non-x86_64 or aarch64
export GOFLAGS="-trimpath -buildmode=pie -mod=readonly -modcacherw"

post_install() {
  vlicense LICENSE
  vdoc README.md
  vdoc sample-dcrctl.conf
}

