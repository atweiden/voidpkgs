# test fails when run as root
make_check="ci-skip"

# fix failing test
pre_check() {
  export USER="void"
}

post_install() {
  vlicense LICENSE
  vman man/just.1
  vcompletion completions/just.bash bash
  vcompletion completions/just.fish fish
  vcompletion completions/just.zsh zsh
}

