maintainer="nox"
pkgname="libfetch"
version=2.34
revision=20
short_desc="File Transfer Library for URLs"
makedepends="libressl-devel"
homepage="http://www.NetBSD.org"
license="BSD-3-Clause"
distfiles="http://distfiles.voidlinux.de/libfetch-$version/$pkgname-$version.tar.xz"
checksum="4e6d4541f213c9ab42ea94d49c2573f0a6f54b04f14668530960f1424b04f722"
build_style="gnu-makefile"

do_build() {
  make CC="$CC"
}

libfetch-devel_package() {
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/share
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

