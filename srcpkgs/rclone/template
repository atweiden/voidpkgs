maintainer="nox"
pkgname="rclone"
version=1.53.4
revision=1
short_desc="Rsync for cloud storage"
homepage="https://rclone.org/"
license="MIT"
changelog="https://github.com/rclone/rclone/raw/master/docs/content/changelog.md"
distfiles="https://github.com/rclone/rclone/releases/download/v$version/$pkgname-v$version.tar.gz"
checksum="68b231a917872b36d73f48b19d2ba98fdaca467e9b433105fa7f4dc3b15f556b"
wrksrc="$pkgname-v$version"
build_style="go"
go_import_path="github.com/rclone/rclone"
go_ldflags="-extldflags=-fuse-ld=bfd"

export GOFLAGS="-trimpath"

pre_build() {
  if [[ -n "$CROSS_BUILD" ]] && [[ "$XBPS_TARGET_LIBC" == "musl" ]]; then
    # XXX: when cross building, the binary has a textrel, which segfaults
    # when launched on musl
    # FIXME: linkers for the musl toolchains should reject textrels
    # entirely
    export CGO_ENABLED=0
  fi
}

post_install() {
  vlicense COPYING
  vman rclone.1
}

