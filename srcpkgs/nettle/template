maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="nettle"
version=3.4
revision=1
short_desc="A low-level cryptographic library"
makedepends="gmp-devel"
hostmakedepends="m4"
homepage="http://www.lysator.liu.se/~nisse/nettle/"
license="GPL-2"
distfiles="$GNU_SITE/nettle/$pkgname-$version.tar.gz"
checksum="ae7a42df026550b85daca8389b6a60ba6313b0567f374392e54918588a411e94"
build_style="gnu-configure"
configure_args="--enable-shared"

nettle-devel_package() {
  depends+=" $sourcepkg>=${version}_$revision"
  depends+=" gmp-devel"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/share/info
  }
}

nettle-tools_package() {
  short_desc+=" - bundled tools"
  pkg_install() {
    vmove usr/bin
  }
}

