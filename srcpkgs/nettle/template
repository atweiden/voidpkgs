maintainer="nox"
pkgname="nettle"
version=3.8.1
revision=1
short_desc="Low-level cryptographic library"
makedepends="gmp-devel"
hostmakedepends+=" m4"
hostmakedepends+=" texinfo"
homepage="https://www.lysator.liu.se/~nisse/nettle/"
license="GPL-2.0-or-later, GPL-3.0-or-later"
changelog="https://git.lysator.liu.se/nettle/nettle/-/raw/master/NEWS"
distfiles="$GNU_SITE/nettle/$pkgname-$version.tar.gz"
checksum="364f3e2b77cd7dcde83fd7c45219c834e54b0c75e428b6f894a23d12dd41cbfe"
build_style="gnu-configure"
configure_args="--enable-shared"

nettle-devel_package() {
  unset depends
  depends+=" $sourcepkg>=${version}_$revision"
  depends+=" gmp-devel"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/share/info
  }
}

nettle-tools_package() {
  short_desc+=" - bundled tools"
  pkg_install() {
    vmove usr/bin
  }
}

