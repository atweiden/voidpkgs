maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="nettle"
version=3.4.1
revision=1
short_desc="A low-level cryptographic library"
makedepends="gmp-devel"
hostmakedepends="m4"
homepage="http://www.lysator.liu.se/~nisse/nettle/"
license="GPL-2.0-or-later, GPL-3.0-or-later"
distfiles="$GNU_SITE/nettle/$pkgname-$version.tar.gz"
checksum="f941cf1535cd5d1819be5ccae5babef01f6db611f9b5a777bae9c7604b8a92ad"
build_style="gnu-configure"
configure_args="--enable-shared"

nettle-devel_package() {
  depends+=" $sourcepkg>=${version}_$revision"
  depends+=" gmp-devel"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/share/info
  }
}

nettle-tools_package() {
  short_desc+=" - bundled tools"
  pkg_install() {
    vmove usr/bin
  }
}

