maintainer="nox"
pkgname="nettle"
version=3.5.1
revision=1
short_desc="A low-level cryptographic library"
makedepends="gmp-devel"
hostmakedepends+=" m4"
hostmakedepends+=" texinfo"
homepage="http://www.lysator.liu.se/~nisse/nettle/"
license="GPL-2.0-or-later, GPL-3.0-or-later"
distfiles="$GNU_SITE/nettle/$pkgname-$version.tar.gz"
checksum="75cca1998761b02e16f2db56da52992aef622bf55a3b45ec538bc2eedadc9419"
build_style="gnu-configure"
configure_args="--enable-shared"

nettle-devel_package() {
  depends+=" $sourcepkg>=${version}_$revision"
  depends+=" gmp-devel"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/share/info
  }
}

nettle-tools_package() {
  short_desc+=" - bundled tools"
  pkg_install() {
    vmove usr/bin
  }
}

