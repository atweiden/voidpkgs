maintainer="nox"
pkgname="base-chroot"
version=0.66
revision=2
short_desc="Minimal set of packages required for chroot with xbps-src"
homepage="http://www.voidlinux.org"
license="Public Domain"
case "$XBPS_TARGET_LIBC" in
  musl)
    depends="musl-devel"
    ;;
  *)
    depends+=" glibc-devel"
    depends+=" glibc-locales"
    ;;
esac
depends+=" base-files"
depends+=" binutils"
depends+=" gcc"
depends+=" gcc-ada"
depends+=" libada-devel"
depends+=" patch"
depends+=" sed"
depends+=" findutils"
depends+=" diffutils"
depends+=" make"
depends+=" gzip"
depends+=" coreutils"
depends+=" file"
depends+=" bsdtar"
depends+=" ccache"
depends+=" xbps"
depends+=" mpfr"
depends+=" ncurses"
depends+=" libreadline8"
depends+=" chroot-bash"
depends+=" chroot-grep"
depends+=" chroot-gawk"
depends+=" chroot-distcc"
depends+=" chroot-util-linux"
depends+=" chroot-git"
build_style="meta"
bootstrap="yes"

if [[ "$XBPS_TARGET_LIBC" == musl ]]; then
base-chroot-musl_package() {
  build_style="meta"
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - transitional dummy package"
}
fi # "$XBPS_TARGET_LIBC" = musl

