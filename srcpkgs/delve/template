export GOFLAGS="-trimpath"

case "$XBPS_TARGET_MACHINE" in
  i686*|arm*|ppc*)
    broken="yes"
    ;;
esac

post_install() {
  vlicense LICENSE
  vmkdir "usr/share/doc/$pkgname"
  vcopy "Documentation/*" "usr/share/doc/$pkgname"
}

