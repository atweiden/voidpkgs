maintainer="nox"
pkgname="sdcv"
version=0.5.2
revision=2
short_desc="Console version of Stardict program"
makedepends+=" glib-devel"
makedepends+=" readline-devel"
makedepends+=" zlib-devel"
hostmakedepends="glib-devel"
homepage="https://dushistov.github.io/sdcv/"
license="GPL-2"
distfiles="https://github.com/Dushistov/sdcv/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="ec08dc084a0748d5a89df01a20bbf294f09b0366295cd418000f15d2e043c4f7"
build_style="cmake"

post_extract() {
  rm po/*.po
  sed \
    -i \
    -e '/share\/man\/uk/d' \
    CMakeLists.txt
}

pre_install() {
  mkdir -p build/locale
}

post_install() {
  vdoc README.org
}

