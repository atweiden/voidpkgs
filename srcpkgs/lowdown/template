maintainer="nox"
pkgname="lowdown"
version=0.11.2
revision=1
short_desc="Simple markdown translator"
hostmakedepends="which"
homepage="https://kristaps.bsd.lv/lowdown/"
license="ISC"
changelog="https://kristaps.bsd.lv/lowdown/archive.html"
distfiles="https://kristaps.bsd.lv/lowdown/snapshots/$pkgname-$version.tar.gz"
checksum="6e5cfec293afc24968c0ddd8deb4f57389adba6a8b7bcb221d34c1a44aeef3eb"
build_style="configure"
configure_args+=" MANDIR=/usr/share/man"
configure_args+=" PREFIX=/usr"
make_check_target="regress"
make_install_target+=" install"
make_install_target+=" install_shared"
make_install_target+=" install_static"
shlib_provides="liblowdown.so"

post_install() {
  vlicense LICENSE.md
}

lowdown-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/share/man/man3/*.3"
  }
}

