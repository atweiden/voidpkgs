maintainer="nox"
pkgname="libuv"
version=1.35.0
revision=1
short_desc="Multi-platform support library with a focus on asynchronous I/O"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" pkg-config"
homepage="https://libuv.org/"
license="MIT, CC-BY-SA-4.0"
changelog="https://github.com/libuv/libuv/raw/v1.x/ChangeLog"
distfiles="https://github.com/libuv/libuv/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="ff84a26c79559e511f087aa67925c3b4e0f0aac60cd8039d4d38b292f208ff58"
build_style="gnu-configure"

LDFLAGS="-pthread"

pre_configure() {
  NOCONFIGURE=1 ./autogen.sh
}

post_install() {
  vlicense LICENSE
}

libuv-devel_package() {
  depends="libuv>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

