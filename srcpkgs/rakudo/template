build_style="configure"
configure_script="perl Configure.pl"
configure_args+=" --backends=moar"
configure_args+=" --prefix=/usr"
if [[ -n "$CROSS_BUILD" ]]; then
  configure_args+=" --sdkroot=$XBPS_CROSS_BASE"
  configure_args+=" --sysroot=$XBPS_CROSS_BASE"
fi
make_check_target="test"
make_install_args+=" RAKUDO_LOG_PRECOMP=1"
make_install_args+=" RAKUDO_RERESOLVE_DEPENDENCIES=0"
nocross="yes"
make_dirs+=" /usr/share/perl6/bin 0755 root root"
make_dirs+=" /usr/share/perl6/lib 0755 root root"
make_dirs+=" /usr/share/perl6/resources 0755 root root"
make_dirs+=" /usr/share/perl6/site/bin 0755 root root"
make_dirs+=" /usr/share/perl6/site/dist 0755 root root"
make_dirs+=" /usr/share/perl6/site/precomp 0755 root root"
make_dirs+=" /usr/share/perl6/site/resources 0755 root root"
make_dirs+=" /usr/share/perl6/site/short 0755 root root"
make_dirs+=" /usr/share/perl6/site/sources 0755 root root"
make_dirs+=" /usr/share/perl6/vendor/bin 0755 root root"
make_dirs+=" /usr/share/perl6/vendor/dist 0755 root root"
make_dirs+=" /usr/share/perl6/vendor/precomp 0755 root root"
make_dirs+=" /usr/share/perl6/vendor/resources 0755 root root"
make_dirs+=" /usr/share/perl6/vendor/short 0755 root root"
make_dirs+=" /usr/share/perl6/vendor/sources 0755 root root"
provides="perl6-${version}_$revision"

post_install() {
  vbin tools/install-dist.p6 perl6-install-dist
}

