makedepends+=" libtommath-devel"
makedepends+=" libuv-devel"
makedepends+=" nqp"
hostmakedepends+=" perl"
tags="perl6"
homepage="https://rakudo.org"
license="Artistic-2.0"
changelog="https://github.com/rakudo/rakudo/raw/master/docs/ChangeLog"
