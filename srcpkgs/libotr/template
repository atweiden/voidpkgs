maintainer="nox"
pkgname="libotr"
version=4.1.1
revision=1
short_desc="Off-the-Record Messaging Library and Toolkit"
makedepends="libgcrypt-devel"
homepage="http://www.cypherpunks.ca/otr/"
license="GPL-2, LGPL-2.1"
distfiles="http://www.cypherpunks.ca/otr/$pkgname-$version.tar.gz"
checksum="8b3b182424251067a952fb4e6c7b95a21e644fbb27fbd5f8af2b2ed87ca419f5"
build_style="gnu-configure"

pre_build() {
  sed \
    -i \
    -e '/INCLUDES/s,-I$(includedir),,' \
    toolkit/Makefile
}

libotr-progs_package() {
  short_desc+=" - applications"
  pkg_install() {
    vmove usr/bin
    vmove usr/share/man
  }
}

libotr-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/share/aclocal
  }
}

