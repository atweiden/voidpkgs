maintainer="nox"
pkgname="tmux"
version=3.2
revision=1
short_desc="Terminal Multiplexer"
depends="ncurses-base"
makedepends+=" libevent-devel"
makedepends+=" libutempter-devel"
makedepends+=" ncurses-devel"
hostmakedepends+=" autoconf"
hostmakedepends+=" automake"
hostmakedepends+=" byacc"
hostmakedepends+=" pkg-config"
homepage="https://tmux.github.io"
license="ISC"
changelog="https://github.com/tmux/tmux/raw/master/CHANGES"
distfiles="https://github.com/tmux/tmux/releases/download/$version/$pkgname-$version.tar.gz"
checksum="664d345338c11cbe429d7ff939b92a5191e231a7c1ef42f381cebacb1e08a399"
patch_args="-Np1"
build_style="gnu-configure"
configure_args="--enable-utempter"

pre_configure() {
  autoreconf -fi
}

post_install() {
  vlicense COPYING
  vdoc CHANGES
  vdoc README
  vdoc TODO
  vdoc example_tmux.conf
}

