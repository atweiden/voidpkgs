wrksrc="${pkgname#*-}-$version"
build_style="perl-module"

post_extract() {
  vsed \
    -i \
    -e '/if.*guess_malloc_names/s/.*/if(my $extra_defs=""){/' \
    Makefile.PL
}

pre_check() {
  export TERM="linux"
}

