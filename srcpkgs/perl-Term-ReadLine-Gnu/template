version=1.42
revision=1
short_desc="Perl extension for the GNU readline/history library"
makedepends+=" ncurses-devel"
makedepends+=" perl"
makedepends+=" readline-devel"
hostmakedepends="$makedepends"
homepage="https://metacpan.org/release/Term-ReadLine-Gnu"
