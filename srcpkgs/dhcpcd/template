maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="dhcpcd"
version=8.1.4
revision=1
short_desc="RFC2131 compliant DHCP client"
makedepends="eudev-libudev-devel"
hostmakedepends+=" ntp"
hostmakedepends+=" pkg-config"
homepage="https://roy.marples.name/projects/dhcpcd"
license="BSD-2-Clause"
distfiles="https://roy.marples.name/downloads/dhcpcd/$pkgname-$version.tar.xz"
checksum="27a0d1a37aa1aa23e9d3a906455cf8fd56a83589370dfe9da3c5f3225cc4c13d"
conf_files="/etc/dhcpcd.conf"
build_style="configure"
configure_args+=" --prefix=/usr"
configure_args+=" --rundir=/run"
configure_args+=" --sbindir=/usr/bin"
configure_args+=" --sysconfdir=/etc"
make_check_target="test"
lib32disabled="yes"

post_install() {
  vlicense LICENSE
  vsv dhcpcd
  vsv dhcpcd-eth0
  # enable controlgroup by default, to make dhcpcd-ui work
  vsed \
    -e 's,^#\(controlgroup.*\),\1,' \
    -i "$DESTDIR/etc/dhcpcd.conf"
}

