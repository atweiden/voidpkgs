maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="btcd"
version=0.12.0beta
revision=1
_gitrev="67e573d211ace594f1366b4ce9d39726c4b19bd0"
short_desc="An alternative full node Bitcoin implementation written in Go"
hostmakedepends+=" git"
hostmakedepends+=" glide"
tags="btcsuite"
homepage="https://github.com/btcsuite/btcd"
license="ISC"
distfiles="https://github.com/btcsuite/btcd/archive/$_gitrev.tar.gz>$pkgname-$version.tar.gz"
checksum="51598dd6d9144e238f07b07d75f1efad9314699723714b1201ea6fa9cc75713a"
wrksrc="$pkgname-$_gitrev"
build_style="go"
go_import_path="github.com/btcsuite/btcd"

do_build() {
  cd "$GOSRCPATH"
  glide install
  go install . ./cmd/...
}

pre_install() {
  # prepend btc to unqualified binaries
  for _bin in $(find "$GOPATH/bin"  \
                        -mindepth 1 \
                        -maxdepth 1 \
                        -type f ! -name "btc*" -printf '%f\n'); do
    mv "$GOPATH/bin/$_bin" "$GOPATH/bin/btc$_bin"
  done
}

post_install() {
  vlicense "$GOSRCPATH/LICENSE"
  vdoc "$GOSRCPATH/CHANGES"
  vdoc "$GOSRCPATH/README.md"
  vdoc "$GOSRCPATH/sample-btcd.conf"
  vcopy "$GOSRCPATH/docs" "usr/share/doc/$pkgname"
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
