maintainer="nox"
pkgname="grep"
version=3.5
revision=1
short_desc="GNU grep utility"
makedepends="pcre-devel"
checkdepends="perl"
hostmakedepends="pkg-config"
homepage="https://www.gnu.org/software/grep/"
license="GPL-3.0-or-later"
distfiles="$GNU_SITE/grep/$pkgname-$version.tar.xz"
checksum="b82ac77707c2ab945520c8404c9fa9f890f7791a62cf2103cf6238acad87a44a"
build_style="gnu-configure"

pre_check() {
  case "$XBPS_TARGET_MACHINE" in
    *-musl)
      # disable locale tests that fail on musl
      sed \
        -i \
        -e '/test-localename$(EXEEXT)/d' \
        gnulib-tests/Makefile
      ;;
  esac
}

