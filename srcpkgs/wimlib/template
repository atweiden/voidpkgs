maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="wimlib"
version=1.13.0
revision=1
short_desc="Create, extract, and modify Windows Imaging archives"
makedepends+=" libxml2-devel"
makedepends+=" ntfs-3g-devel"
hostmakedepends="pkg-config"
homepage="https://wimlib.net/"
license="GPL-3.0-or-later"
distfiles="https://wimlib.net/downloads/$pkgname-$version.tar.gz"
checksum="51d92cafaae0180c7a91b50620f86ffbcec6d6aef360d38dd47e274e65d7970b"
build_style="gnu-configure"

wimlib-devel_package() {
  short_desc+=" - development files"
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove "usr/lib/*.so"
    vmove "usr/lib/*.a"
    vmove usr/include
    vmove usr/lib/pkgconfig
  }
}

