maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="dcrwallet"
version=1.4.0rc3
revision=1
short_desc="Decred wallet daemon written in Go"
hostmakedepends="git"
tags="decred"
homepage="https://github.com/decred/dcrwallet"
license="ISC"
distfiles="https://github.com/decred/dcrwallet/archive/release-v${version/rc3/-rc3}.tar.gz>$pkgname-$version.tar.gz"
checksum="33609ee6174813dedb10baca9b697dc346f82b3394516f1e4a073af535d11603"
wrksrc="$pkgname-release-v${version/rc3/-rc3}"
build_style="go"
go_import_path="github.com/decred/dcrwallet"

pre_install() {
  # prepend dcr to unqualified binaries
  for _bin in $(find "$GOPATH/bin"  \
                        -mindepth 1 \
                        -maxdepth 1 \
                        -type f ! -name "dcr*" -printf '%f\n'); do
    mv "$GOPATH/bin/$_bin" "$GOPATH/bin/dcr$_bin"
  done
}

post_install() {
  vlicense LICENSE
  vdoc README.md
  vdoc sample-dcrwallet.conf
  vcopy docs "usr/share/doc/$pkgname"
}

