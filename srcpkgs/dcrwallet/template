maintainer="nox"
pkgname="dcrwallet"
version=1.7.5
revision=1
short_desc="Decred wallet daemon written in Go"
tags="decred"
homepage="https://github.com/decred/dcrwallet"
license="ISC"
distfiles="https://github.com/decred/dcrwallet/archive/release-v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="302ec009d75410afac2b00978a171fe14ab6def63251a1052bee5b54775ad5e2"
build_style="go"
go_import_path="decred.org/dcrwallet/v2"
go_build_tags="netgo"
go_ldflags+=" -buildid="
go_ldflags+=" -X $go_import_path/version.BuildMetadata="
go_ldflags+=" -X $go_import_path/version.PreRelease="
go_ldflags+=" -extldflags=-static"
# objdump: .gnu.version_r invalid entry, private headers incomplete
nopie_files="/usr/bin/dcrpromptsecret"

# XXX: -buildmode=pie is unverified on *-musl, and non-x86_64 or aarch64
export GOFLAGS="-trimpath -buildmode=pie"

pre_install() {
  # prepend dcr to unqualified binaries
  for _bin in $(find "$GOPATH/bin"  \
                        -mindepth 1 \
                        -maxdepth 1 \
                        -type f ! -name "dcr*" -printf '%f\n'); do
    mv "$GOPATH/bin/$_bin" "$GOPATH/bin/dcr$_bin"
  done
}

post_install() {
  vlicense LICENSE
  vdoc README.md
  vdoc sample-dcrwallet.conf
  vcopy docs "usr/share/doc/$pkgname"
}

