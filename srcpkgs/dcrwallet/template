maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="dcrwallet"
version=1.5.0rc2
revision=1
short_desc="Decred wallet daemon written in Go"
hostmakedepends="git"
tags="decred"
homepage="https://github.com/decred/dcrwallet"
license="ISC"
distfiles="https://github.com/decred/dcrwallet/archive/v${version%rc2}-rc2.tar.gz>$pkgname-${version%rc2}-rc2.tar.gz"
checksum="fe6df69c6bce0f5fb9e299bbba9330bc02a650a12a311e379ec4ad8e6083934f"
wrksrc="$pkgname-${version%rc2}-rc2"
build_style="go"
go_import_path="decred.org/dcrwallet"
go_ldflags+=" -X github.com/decred/dcrwallet/version.PreRelease=rc2"
go_ldflags+=" -X github.com/decred/dcrwallet/version.BuildMetadata=release"

export GOFLAGS="-trimpath"

pre_install() {
  # prepend dcr to unqualified binaries
  for _bin in $(find "$GOPATH/bin"  \
                        -mindepth 1 \
                        -maxdepth 1 \
                        -type f ! -name "dcr*" -printf '%f\n'); do
    mv "$GOPATH/bin/$_bin" "$GOPATH/bin/dcr$_bin"
  done
}

post_install() {
  vlicense LICENSE
  vdoc README.md
  vdoc sample-dcrwallet.conf
  vcopy docs "usr/share/doc/$pkgname"
}

