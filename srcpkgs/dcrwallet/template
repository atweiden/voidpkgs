maintainer="nox"
pkgname="dcrwallet"
version=1.7.0rc1
revision=1
short_desc="Decred wallet daemon written in Go"
hostmakedepends="git"
tags="decred"
homepage="https://github.com/decred/dcrwallet"
license="ISC"
distfiles="https://github.com/decred/dcrwallet/archive/release-v${version%r*}-rc1.tar.gz>$pkgname-$version.tar.gz"
checksum="c4f386fa2097802a39b820ccd0f1607da193da1aa2e840b33a279113da26e68c"
wrksrc="$pkgname-release-v${version%r*}-rc1"
build_style="go"
go_import_path="decred.org/dcrwallet/v2"
go_ldflags+=" -s -w -buildid="
go_ldflags+=" -X $go_import_path/version.PreRelease="
go_ldflags+=" -X $go_import_path/version.BuildMetadata="

# XXX: -buildmode=pie is unverified on *-musl, and nonâ€“x86_64 or aarch64
export GOFLAGS="-trimpath -buildmode=pie"

pre_install() {
  # prepend dcr to unqualified binaries
  for _bin in $(find "$GOPATH/bin"  \
                        -mindepth 1 \
                        -maxdepth 1 \
                        -type f ! -name "dcr*" -printf '%f\n'); do
    mv "$GOPATH/bin/$_bin" "$GOPATH/bin/dcr$_bin"
  done
}

post_install() {
  vlicense LICENSE
  vdoc README.md
  vdoc sample-dcrwallet.conf
  vcopy docs "usr/share/doc/$pkgname"
}

