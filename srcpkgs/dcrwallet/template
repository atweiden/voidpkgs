maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="dcrwallet"
version=1.4.0
revision=1
short_desc="Decred wallet daemon written in Go"
hostmakedepends="git"
tags="decred"
homepage="https://github.com/decred/dcrwallet"
license="ISC"
distfiles="https://github.com/decred/dcrwallet/archive/release-v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="f14ba6aa3de2cb3577a6a14e4d08040ef9bb52f865b00c75fad09ae088020be0"
wrksrc="$pkgname-release-v$version"
build_style="go"
go_import_path="github.com/decred/dcrwallet"

post_build() {
  GO111MODULE="on" go install -v . ./cmd/...
}

pre_install() {
  # prepend dcr to unqualified binaries
  for _bin in $(find "$GOPATH/bin"  \
                        -mindepth 1 \
                        -maxdepth 1 \
                        -type f ! -name "dcr*" -printf '%f\n'); do
    mv "$GOPATH/bin/$_bin" "$GOPATH/bin/dcr$_bin"
  done
}

post_install() {
  vlicense LICENSE
  vdoc README.md
  vdoc sample-dcrwallet.conf
  vcopy docs "usr/share/doc/$pkgname"
}

