maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="dcrwallet"
version=1.4.0pre
revision=1
_gitrev="0ebbccfe3f8539b18656e6e1f6547e4011a49746"
short_desc="Decred wallet daemon written in Go"
hostmakedepends="git"
tags="decred"
homepage="https://github.com/decred/dcrwallet"
license="ISC"
distfiles="https://github.com/decred/dcrwallet/archive/$_gitrev.tar.gz>$pkgname-$version.tar.gz"
checksum="3edf852bfabe1bfb55eff9dfa2d1d1cff3ae83cb14fbcc03efaa5cba2c442bd8"
wrksrc="$pkgname-$_gitrev"
build_style="go"
go_import_path="github.com/decred/dcrwallet"

do_build() {
  go_package="${go_package:-$go_import_path}"
  export GO111MODULE="on"
  go get -x -tags "$go_build_tags" -ldflags "$go_ldflags" "$go_package"
  go install
}

pre_install() {
  # prepend dcr to unqualified binaries
  for _bin in $(find "$GOPATH/bin"  \
                        -mindepth 1 \
                        -maxdepth 1 \
                        -type f ! -name "dcr*" -printf '%f\n'); do
    mv "$GOPATH/bin/$_bin" "$GOPATH/bin/dcr$_bin"
  done
}

post_install() {
  vlicense "$GOSRCPATH/LICENSE"
  vdoc "$GOSRCPATH/README.md"
  vdoc "$GOSRCPATH/sample-dcrwallet.conf"
  vcopy "$GOSRCPATH/docs" "usr/share/doc/$pkgname"
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
