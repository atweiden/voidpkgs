maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="p11-kit"
version=0.23.17
revision=1
short_desc="Provides a way to load and enumerate PKCS#11 modules"
makedepends+=" libffi-devel"
makedepends+=" libtasn1-devel"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" pkg-config"
homepage="https://github.com/p11-glue/p11-kit"
license="BSD-3-Clause"
distfiles="https://github.com/p11-glue/p11-kit/releases/download/$version/$pkgname-$version.tar.gz"
checksum="5447b25d66c05f86cce5bc8856f7a074be84c186730e32c74069ca03386d7c1e"
conf_files="/etc/pkcs11/pkcs11.conf"
build_style="gnu-configure"
configure_args="--with-module-path=/usr/lib/pkcs11"

pre_configure() {
  NOCONFIGURE=1 autoreconf -fi
}

post_install() {
  vlicense COPYING
  mv "$DESTDIR/etc/pkcs11/pkcs11.conf.example" "$DESTDIR/etc/pkcs11/pkcs11.conf"
}

p11-kit-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/share/gtk-doc
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
