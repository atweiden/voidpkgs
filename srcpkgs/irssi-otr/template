configure_args+=" --with-gnu-ld"
configure_args+=" --with-irssi-headers=$XBPS_CROSS_BASE/usr/include/irssi"

pre_configure() {
  autoreconf -fi -I "$XBPS_CROSS_BASE/usr/share/aclocal"
}

post_install() {
  vdoc README.md
}

