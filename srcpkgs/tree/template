maintainer="nox"
pkgname="tree"
version=2.0.0
revision=1
short_desc="Resursive directory listing program"
homepage="http://mama.indstate.edu/users/ice/tree"
license="GPL-2.0-or-later"
#distfiles="http://deb.debian.org/debian/pool/main/t/tree/tree_$version.orig.tar.gz>$pkgname-$version.tar.gz"
distfiles="http://mama.indstate.edu/users/ice/tree/src/$pkgname-$version.tgz"
checksum="782cd73179f65cfca7f29326f1511306e49e9b11d5b861daa57e13fd7262889f"
build_style="gnu-makefile"

do_install() {
  sed \
    -i \
    -e 's,install -s,install ,g' \
    Makefile
  make \
    BINDIR="$DESTDIR/usr/bin" \
    MANDIR="$DESTDIR/usr/share/man/man1" \
    install
}

