maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="tree"
version=1.7.0
revision=3
short_desc="Resursive directory listing program"
homepage="http://mama.indstate.edu/users/ice/tree"
license="GPL-2.0-or-later"
distfiles="http://mama.indstate.edu/users/ice/tree/src/$pkgname-$version.tgz"
checksum="6957c20e82561ac4231638996e74f4cfa4e6faabc5a2f511f0b4e3940e8f7b12"
build_style="gnu-makefile"

do_install() {
  sed \
    -i \
    -e 's,install -s,install ,g' \
    Makefile
  make \
    BINDIR="$DESTDIR/usr/bin" \
    MANDIR="$DESTDIR/usr/share/man/man1" \
    install
}

