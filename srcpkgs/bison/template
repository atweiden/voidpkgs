pkgname="bison"
version=3.2.3
revision=1
short_desc="GNU yacc(1) replacement"
depends="m4"
hostmakedepends+=" help2man"
hostmakedepends+=" perl"
hostmakedepends+=" m4"
homepage="http://www.gnu.org/software/bison/bison.html"
license="GPL-3.0-or-later"
distfiles="$GNU_SITE/bison/$pkgname-$version.tar.xz"
