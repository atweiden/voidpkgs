maintainer="nox"
pkgname="libpsl"
version=0.21.2
revision=1
short_desc="Public Suffix List library functions"
makedepends="icu-devel"
hostmakedepends+=" pkg-config"
hostmakedepends+=" python3"
license="MIT"
homepage="https://rockdaboot.github.io/libpsl/"
changelog="https://github.com/rockdaboot/libpsl/raw/master/NEWS"
distfiles="https://github.com/rockdaboot/libpsl/releases/download/$version/$pkgname-$version.tar.gz"
checksum="e35991b6e17001afa2c0ca3b10c357650602b92596209b7492802f3768a6285f"
build_style="gnu-configure"

post_install() {
  vlicense COPYING
}

libpsl-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
    vmove "usr/lib/*.a"
  }
}

