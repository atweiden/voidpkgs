maintainer="nox"
pkgname="libpsl"
version=0.21.1
revision=4
short_desc="Public Suffix List library functions"
makedepends="icu-devel"
hostmakedepends+=" pkg-config"
hostmakedepends+=" python3"
license="MIT"
homepage="https://rockdaboot.github.io/libpsl/"
distfiles="https://github.com/rockdaboot/libpsl/releases/download/$version/$pkgname-$version.tar.gz"
checksum="ac6ce1e1fbd4d0254c4ddb9d37f1fa99dec83619c1253328155206b896210d4c"
build_style="gnu-configure"

post_install() {
  vlicense COPYING
}

libpsl-devel_package() {
  depends="libpsl-${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
    vmove "usr/lib/*.a"
  }
}

