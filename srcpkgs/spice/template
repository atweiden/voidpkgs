maintainer="nox"
pkgname="spice"
version=0.14.3
revision=1
short_desc="Implements the SPICE protocol"
makedepends+=" libcacard-devel"
makedepends+=" libglib-devel"
makedepends+=" libjpeg-turbo-devel"
makedepends+=" libressl-devel"
makedepends+=" libsasl-devel"
makedepends+=" lz4-devel"
makedepends+=" nss-devel"
makedepends+=" pixman-devel"
makedepends+=" spice-protocol"
hostmakedepends+=" pkg-config"
hostmakedepends+=" python"
homepage="http://www.spice-space.org"
license="GPL-2.0-only"
distfiles="http://www.spice-space.org/download/releases/$pkgname-$version.tar.bz2"
checksum="551d4be4a07667cf0543f3c895beb6da8a93ef5a9829f2ae47817be5e616a114"
build_style="gnu-configure"
configure_args+=" --disable-celt051"
configure_args+=" --disable-gstreamer"
configure_args+=" --disable-opengl"
configure_args+=" --disable-static"
configure_args+=" --disable-tunnel"
configure_args+=" --disable-xinerama"
configure_args+=" --enable-lz4"
configure_args+=" --enable-smartcard"
configure_args+=" --with-gnu-ld"
configure_args+=" --with-sasl"

if [[ "$XBPS_TARGET_ENDIAN" != "le" ]]; then
  broken="SPICE server only works on little endian architectures"
fi

post_extract() {
  # detects cpu from triplet
  sed \
    -i \
    -e 's/armv6hl/arm/g' \
    configure
}

spice-devel_package() {
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
  }
}

