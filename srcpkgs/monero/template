maintainer="nox"
pkgname="monero"
version=0.17.3.0
revision=1
# the revision monero uses as a submodule for the specific version
_randomx_gitrev="9efc398c196ef1c50d8e6f5e1f2c5ac02f1f6ceb"
_rapidjson_gitrev="129d19ba7f496df5e33658527a7158c79b99c21c"
_supercop_gitrev="633500ad8c8759995049ccd022107d1fa8a1bbc9"
short_desc="Private, secure, untraceable, decentralised digital currency"
makedepends+=" boost-devel"
makedepends+=" cppzmq"
makedepends+=" czmq-devel"
makedepends+=" expat-devel"
makedepends+=" libldns-devel"
makedepends+=" libsodium-devel"
makedepends+=" libunwind-devel"
makedepends+=" miniupnpc-devel"
makedepends+=" openssl-devel"
makedepends+=" readline-devel"
makedepends+=" unbound-devel"
hostmakedepends="pkg-config"
homepage="https://getmonero.org"
license="BSD-3-Clause"
distfiles+=" https://github.com/monero-project/monero/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
distfiles+=" https://github.com/tevador/RandomX/archive/$_randomx_gitrev.tar.gz"
distfiles+=" https://github.com/Tencent/rapidjson/archive/$_rapidjson_gitrev.tar.gz"
distfiles+=" https://github.com/monero-project/supercop/archive/$_supercop_gitrev.tar.gz"
checksum+=" 23d56d0c366576ff49bd785290a3e6377d4e51156e70ce4bb774b3d70f8cada4"
checksum+=" c7c7a4d91b41a762d2d21ad384d427db5a205078fb4993db6b812918a7b0218d"
checksum+=" 44b007d419ac21b6affec58991e865ee572346ead19b73cf1c3e4e11c7a81273"
checksum+=" b973b9d8269ec4d97c3c3443f0dad96d09f72b1b30e616e0947557adbdbb03f7"
skip_extraction+=" $_randomx_gitrev.tar.gz"
skip_extraction+=" $_rapidjson_gitrev.tar.gz"
skip_extraction+=" $_supercop_gitrev.tar.gz"
conf_files="/etc/monerod.conf"
build_style="cmake"
make_dirs+=" /var/lib/monero 0750 monero monero"
make_dirs+=" /var/log/monero 0755 monero monero"
system_accounts="monero"

if [[ -n "$CROSS_BUILD" ]]; then
  configure_args+=" -DTHREADS_PTHREAD_ARG=OFF"
fi

case "$XBPS_TARGET_MACHINE" in
  armv7*)
    configure_args+=" -DARCH=armv7"
    ;;
  armv6*)
    configure_args+=" -DARCH=armv6"
    ;;
  armv5*)
    configure_args+=" -DARCH=armv5"
    ;;
  aarch64*)
    configure_args+=" -DARCH=aarch64"
    ;;
  mips*)
    configure_args+=" -DARCH=mipsr32"
    configure_args+=" -DNO_AES=ON"
    ;;
  ppc64le*)
    configure_args+=" -DARCH=ppc64le"
    ;;
  ppc64*)
    configure_args+=" -DARCH=ppc64"
    ;;
  ppc*)
    configure_args+=" -DARCH=ppc"
    ;;
  *)
    configure_args+=" -DARCH=default"
    ;;
esac

if [[ -n "$XBPS_TARGET_NO_ATOMIC8" ]]; then
  makedepends+=" libatomic-devel"
  CFLAGS+=" -latomic"
fi

case "$XBPS_TARGET_MACHINE" in
  *-musl)
    configure_args+=" -DSTACK_TRACE=OFF"
    ;;
esac

post_extract() {
  bsdtar xzf "$XBPS_SRCDISTDIR/$pkgname-$version/$_randomx_gitrev.tar.gz" \
    --strip-components=1 -C "$wrksrc/external/randomx"
  bsdtar xzf "$XBPS_SRCDISTDIR/$pkgname-$version/$_rapidjson_gitrev.tar.gz" \
    --strip-components=1 -C "$wrksrc/external/rapidjson"
  bsdtar xzf "$XBPS_SRCDISTDIR/$pkgname-$version/$_supercop_gitrev.tar.gz" \
    --strip-components=1 -C "$wrksrc/external/supercop"
}

pre_configure() {
  if [[ -n "$XBPS_TARGET_NO_ATOMIC8" ]]; then
    sed \
      -i \
      -e '/include(version.cmake)/i list(APPEND EXTRA_LIBRARIES libatomic.a)' \
      CMakeLists.txt
  fi
}

pre_build() {
  if [[ -n "$CROSS_BUILD" ]]; then
    # the generate_translations_header binary is executed during the
    # build but is not included in the binary package
    # it thus needs to be built for the host
    CC="$CC_host" \
    CFLAGS="$XBPS_CFLAGS" \
    LDFLAGS="$XBPS_LDFLAGS" \
      ninja -C build "$makejobs" generate_translations_header
  fi
}

post_install() {
  vlicense LICENSE
  vbin build/bin/monero-blockchain-import
  vbin build/bin/monero-blockchain-export
  vinstall utils/conf/monerod.conf 644 etc
  vsv monerod
}

monero-devel_package() {
  short_desc+=" - development files"
  pkg_install() {
    vlicense LICENSE
    vmove usr/include
  }
}

