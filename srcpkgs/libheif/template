maintainer="nox"
pkgname="libheif"
version=1.12.0
revision=3
short_desc="ISO/IEC 23008-12:2017 HEIF file format decoder and encoder"
makedepends+=" libaom-devel"
makedepends+=" libde265-devel"
makedepends+=" libjpeg-turbo-devel"
makedepends+=" libpng-devel"
makedepends+=" x265-devel"
hostmakedepends+=" autoconf"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" pkg-config"
homepage="http://www.libheif.org"
license="LGPL-3.0-or-later"
distfiles="https://github.com/strukturag/libheif/archive/v$version.tar.gz"
checksum="086145b0d990182a033b0011caadb1b642da84f39ab83aa66d005610650b3c65"
build_style="gnu-configure"
configure_args="--disable-option-checking"

pre_configure() {
  ./autogen.sh
}

libheif-devel_package() {
  unset depends
  short_desc+=" - development files"
  depends+=" $sourcepkg>=${version}_$revision"
  depends+=" libaom-devel"
  depends+=" libde265-devel"
  depends+=" x265-devel"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

libheif-tools_package() {
  short_desc+=" - tools"
  pkg_install() {
    vmove usr/bin
    vmove usr/share/man
  }
}

