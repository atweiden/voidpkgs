maintainer="nox"
pkgname="libidn"
version=1.35
revision=1
short_desc="Internationalized string handling library"
hostmakedepends+=" autoconf-archive"
hostmakedepends+=" automake"
hostmakedepends+=" gettext-devel"
hostmakedepends+=" libtool"
hostmakedepends+=" perl"
hostmakedepends+=" pkg-config"
homepage="https://www.gnu.org/software/libidn/"
license="GPL-3.0-or-later, LGPL-2.1-or-later"
distfiles="$GNU_SITE/libidn/$pkgname-$version.tar.gz"
checksum="f11af1005b46b7b15d057d7f107315a1ad46935c7fcdf243c16e46ec14f0fe1e"
build_style="gnu-configure"
configure_args+=" --disable-csharp"
configure_args+=" --disable-java"
configure_args+=" --disable-static"
configure_args+=" --enable-threads=posix"

pre_configure() {
  autoreconf -fi
}

libidn-devel_package() {
  depends="libidn>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove usr/share/man/man3
    vmove usr/share/emacs
    vmove usr/share/info
    vmove "usr/lib/*.so"
  }
}

