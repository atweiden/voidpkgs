maintainer="nox"
pkgname="sqlite"
version=3.32.3
revision=1
_amalgamationver="$(printf "%d%02d%02d00\n" ${version//./ })"
short_desc="SQL Database Engine in a C Library"
makedepends+=" libedit-devel"
makedepends+=" zlib-devel"
homepage="https://sqlite.org/"
license="Public Domain"
changelog="https://www.sqlite.org/releaselog/${version//./_}.html"
distfiles="https://sqlite.org/2020/sqlite-autoconf-$_amalgamationver.tar.gz"
checksum="a31507123c1c2e3a210afec19525fd7b5bb1e19a6a34ae5b998fbd7302568b66"
wrksrc="sqlite-autoconf-$_amalgamationver"
build_style="gnu-configure"
configure_args+=" --enable-dynamic-extensions"
configure_args+=" --enable-fts5"
configure_args+=" --enable-threadsafe"
disable_parallel_build="yes"

# explicitly enable fdatasync
CFLAGS+=" -DHAVE_FDATASYNC"
CFLAGS+=" -DSQLITE_ENABLE_BATCH_ATOMIC_WRITE=1"
CFLAGS+=" -DSQLITE_ENABLE_COLUMN_METADATA"
CFLAGS+=" -DSQLITE_ENABLE_DBSTAT_VTAB"
CFLAGS+=" -DSQLITE_ENABLE_DESERIALIZE"
CFLAGS+=" -DSQLITE_ENABLE_FTS3"
CFLAGS+=" -DSQLITE_ENABLE_FTS3_PARENTHESIS"
CFLAGS+=" -DSQLITE_ENABLE_FTS3_TOKENIZER=1"
CFLAGS+=" -DSQLITE_ENABLE_FTS4"
CFLAGS+=" -DSQLITE_ENABLE_JSON1"
CFLAGS+=" -DSQLITE_ENABLE_UNLOCK_NOTIFY"
CFLAGS+=" -DSQLITE_SECURE_DELETE"

pre_configure() {
  vsed \
    -i \
    -e 's/ -ltinfo//g' \
    configure
}

sqlite-devel_package() {
  depends="sqlite>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
