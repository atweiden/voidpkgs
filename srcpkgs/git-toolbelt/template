maintainer="nox"
pkgname="git-toolbelt"
version=1.4.2
revision=1
short_desc="Helper tools to make everyday life with Git much easier"
archs="noarch"
depends+=" fzf"
depends+=" git"
depends+=" moreutils"
homepage="https://github.com/nvie/git-toolbelt"
license="BSD-3-Clause"
distfiles="https://github.com/nvie/git-toolbelt/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="0a4eb4f4106c5a43de5bd0b3f640e817e0fc001def08586b5929248c80d9bde2"
conflicts="git-extras"

do_install() {
  for f in git-*; do
    vbin "$f"
  done
  vlicense LICENSE
  vdoc README.md
}

