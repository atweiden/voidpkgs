maintainer="nox"
pkgname="git-toolbelt"
version=1.4.1
revision=1
short_desc="Helper tools to make everyday life with Git much easier"
archs="noarch"
depends+=" fzf"
depends+=" git"
depends+=" moreutils"
homepage="https://github.com/nvie/git-toolbelt"
license="BSD-3-Clause"
distfiles="https://github.com/nvie/git-toolbelt/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="a0a727b86374d9b7f67d146c36314224f2f1f907c30463480d6c5f41afe054e0"
conflicts="git-extras"

do_install() {
  for f in git-*; do
    vbin "$f"
  done
  vlicense LICENSE
  vdoc README.md
}

