maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="python-six"
version=1.12.0
revision=2
short_desc="Python 2 and 3 compatibility utilities (Python2)"
archs="noarch"
depends="python"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="https://github.com/benjaminp/six"
license="MIT"
distfiles="$PYPI_SITE/s/six/${pkgname#*-}-$version.tar.gz"
checksum="d16a0141ec1a18405cd4ce8b4613101da75da0e9a7aec5bdd4fa804d0e0eba73"
wrksrc="${pkgname#*-}-$version"
build_style="python-module"
pycompile_module="six.py"

post_install() {
  vlicense LICENSE
}

python3-six_package() {
  archs="noarch"
  depends="python3"
  pycompile_module="six.py"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
    vlicense LICENSE
  }
}

