maintainer="nox"
pkgname="python-six"
version=1.16.0
revision=2
short_desc="Python 2 and 3 compatibility utilities (Python2)"
depends="python"
checkdepends="python3-pytest"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="https://github.com/benjaminp/six"
license="MIT"
changelog="https://github.com/benjaminp/six/raw/master/CHANGES"
distfiles="$PYPI_SITE/s/six/${pkgname#*-}-$version.tar.gz"
checksum="1e61c37477a1626458e36f7b1d82aa5c9b094fa4802892072e49de9c60c4c926"
wrksrc="${pkgname#*-}-$version"
build_style="python-module"

do_check() {
  python3 -m pytest
}

post_install() {
  vlicense LICENSE
}

python3-six_package() {
  depends="python3"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
    vlicense LICENSE
  }
}

