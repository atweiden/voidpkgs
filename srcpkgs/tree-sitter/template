maintainer="nox"
pkgname="tree-sitter"
version=0.18.2
revision=1
short_desc="Parser generator tool and incremental parsing library"
homepage="https://tree-sitter.github.io"
license="MIT"
distfiles="https://github.com/tree-sitter/tree-sitter/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="feedb3e77f7869baf3b242c586aa5be4277a049c6e0bc366ee5c6aeb4ba3da39"
build_style="gnu-makefile"

post_install() {
  vlicense LICENSE
}

tree-sitter-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

