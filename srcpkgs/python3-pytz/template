maintainer="nox"
pkgname="python3-pytz"
version=2023.4
revision=1
short_desc="Python3 timezone library"
depends+=" python3"
depends+=" tzdata"
checkdepends="python3-pytest"
hostmakedepends="python3-setuptools"
homepage="https://pythonhosted.org/pytz/"
license="MIT"
distfiles="$PYPI_SITE/p/pytz/pytz-$version.tar.gz"
checksum="31d4583c4ed539cd037956140d695e42c033a19e984bfce9964a3f7d59bc2b40"
build_style="python3-module"

post_install() {
  # use system tz database
  rm -rf "$DESTDIR/$py3_sitelib/pytz/zoneinfo"
  ln -sf /usr/share/zoneinfo "$DESTDIR/$py3_sitelib/pytz/zoneinfo"
  vlicense LICENSE.txt LICENSE
}

