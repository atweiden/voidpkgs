maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="iwd"
version=0.18
revision=1
short_desc="Internet Wireless Daemon by Intel that aims to replace wpa_supplicant"
depends="dbus"
makedepends+=" dbus-devel"
makedepends+=" ell-devel"
makedepends+=" readline-devel"
checkdepends="python3"
hostmakedepends+=" asciidoc"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" pkg-config"
homepage="https://iwd.wiki.kernel.org/"
license="LGPL-2.1-or-later"
distfiles="$KERNEL_SITE/network/wireless/iwd-$version.tar.xz"
checksum="2d70cc4889692ec1fb5e2cdbe7469d7d2b35cbecca0d293a78438fbb58e63d3a"
build_style="gnu-configure"
configure_args+=" --disable-systemd-service"
configure_args+=" --enable-dbus-policy"
configure_args+=" --enable-docs"
configure_args+=" --enable-external-ell"
configure_args+=" --enable-pie"
configure_args+=" --enable-wired"
make_dirs+=" /etc/iwd 755 root root"
make_dirs+=" /var/lib/iwd 0600 root root"

pre_configure() {
  autoreconf -fi
}

post_install() {
  vsconf doc/main.conf
  vsv iwd
}

