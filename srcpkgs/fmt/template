maintainer="nox"
pkgname="fmt"
version=7.1.3
revision=1
short_desc="Modern formatting library"
homepage="https://github.com/fmtlib/fmt"
license="BSD-2-Clause"
distfiles="https://github.com/fmtlib/fmt/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="5cae7072042b3043e12d53d50ef404bbb76949dad1de368d7f993a15c8c05ecc"
build_style="cmake"
configure_args+=" -DBUILD_SHARED_LIBS=ON"
configure_args+=" -DFMT_DOC=OFF"
configure_args+=" -DFMT_TEST=OFF"

post_install() {
  vlicense LICENSE.rst LICENSE
}

fmt-devel_package() {
  depends="fmt-${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/cmake
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
  }
}

