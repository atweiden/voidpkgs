maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="liburcu"
version=0.10.1
revision=1
short_desc="LGPLv2.1 userspace RCU (read-copy-update) library"
homepage="https://liburcu.org"
license="LGPL-2.1"
distfiles="https://lttng.org/files/urcu/userspace-rcu-$version.tar.bz2"
checksum="9c09220be4435dc27fcd22d291707b94b97f159e0c442fbcd60c168f8f79eb06"
wrksrc="userspace-rcu-$version"
build_style="gnu-configure"
configure_args="--disable-static"

liburcu-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
    vmove usr/share/doc
  }
}

