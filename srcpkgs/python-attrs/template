maintainer="nox"
pkgname="python-attrs"
version=21.2.0
revision=1
short_desc="Attributes without boilerplate (Python2)"
depends="python"
checkdepends+=" python-hypothesis"
checkdepends+=" python-pytest"
checkdepends+=" python-zope.interface"
checkdepends+=" python3-hypothesis"
checkdepends+=" python3-pytest"
checkdepends+=" python3-six"
checkdepends+=" python3-zope.interface"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="https://attrs.readthedocs.io/"
license="MIT"
distfiles="$PYPI_SITE/a/attrs/${pkgname#*-}-$version.tar.gz"
checksum="ef6aaac3ca6cd92904cdd0d83f629a15f18053ec84e6432106f7a4d04ae4f5fb"
wrksrc="${pkgname#*-}-$version"
build_style="python-module"

do_check() {
  PYTHONPATH="$(cd build-2.7/lib* && pwd)" python2 -m pytest
  PYTHONPATH="$(cd "build-$py3_ver"/lib* && pwd)" python3 -m pytest
}

post_install() {
  vlicense LICENSE
}

python3-attrs_package() {
  depends="python3"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
    vlicense LICENSE
  }
}

