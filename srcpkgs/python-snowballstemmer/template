wrksrc="snowballstemmer-$version"
build_style="python-module"
pycompile_module="snowballstemmer"

python3-snowballstemmer_package() {
  noarch="yes"
  depends="python3"
  pycompile_module="snowballstemmer"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
  }
}

