maintainer="nox"
pkgname="progress"
version=0.15
revision=1
short_desc="Tool for showing the progress of cp, rm, dd and more"
makedepends="ncurses-devel"
homepage="https://github.com/Xfennec/progress"
license="GPL-3.0-or-later"
distfiles="https://github.com/Xfennec/progress/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="1ed0ac65a912ef1aa605d524eaddaacae92079cf71182096a7c65cbc61687d1b"

do_build() {
  $CC \
    $CFLAGS \
    -D_FILE_OFFSET_BITS=64 \
    progress.c \
    sizes.c \
    hlist.c \
    -o progress \
    $LDFLAGS \
    -lncurses \
    -lm
}

do_install() {
  vbin progress
  vman progress.1
}

