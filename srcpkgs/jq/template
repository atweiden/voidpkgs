maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="jq"
version=1.6
revision=1
short_desc="Command-line JSON processor"
makedepends="oniguruma-devel"
checkdepends="valgrind"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
homepage="http://stedolan.github.io/jq/"
license="MIT"
distfiles="https://github.com/stedolan/jq/releases/download/$pkgname-$version/$pkgname-$version.tar.gz"
checksum="70e822e3e7542736424d0afb33584f568b5e3a9bc4cdb16c14da678640b20756"
build_style="gnu-configure"

pre_configure() {
  autoreconf -fi
  echo "echo $version" >scripts/version
}

post_install() {
  vlicense COPYING
  rm -rf "$DESTDIR/usr/share/doc/$pkgname"
}

jq-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so*"
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
