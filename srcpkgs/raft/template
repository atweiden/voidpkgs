maintainer="nox"
pkgname="raft"
version=0.9.17
revision=1
short_desc="C implementation of the Raft consensus protocol"
makedepends="libuv-devel"
hostmakedepends+=" autoconf"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" pkg-config"
homepage="https://github.com/canonical/raft"
license="custom:LGPL-3.0-only-linking-exception"
distfiles="https://github.com/canonical/raft/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="2ee6b40cc316bb0ca4172b491dbfac30abfcc72fb43dfc385c20f584ca439b2a"
build_style="gnu-configure"
configure_args="--enable-example=no"

pre_configure() {
  autoreconf -i
}

post_install() {
  vlicense LICENSE
}

raft-devel_package() {
  unset depends
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

