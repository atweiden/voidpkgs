maintainer="nox"
pkgname="raft"
version=0.11.2
revision=1
short_desc="C implementation of the Raft consensus protocol"
makedepends+=" liblz4-devel"
makedepends+=" libuv-devel"
hostmakedepends+=" autoconf"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" pkg-config"
homepage="https://github.com/canonical/raft"
license="custom:LGPL-3.0-only-linking-exception"
distfiles="https://github.com/canonical/raft/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="c89fd6a6fa3c9e6d670b74e389b2d028dfd39d1eec2b18661fae73a9bfd6b89d"
build_style="gnu-configure"
configure_args="--enable-example=no"
make_check="ci-skip"

pre_configure() {
  autoreconf -i
}

post_install() {
  vlicense LICENSE
}

raft-devel_package() {
  unset depends
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

