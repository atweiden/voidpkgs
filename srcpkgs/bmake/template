maintainer="nox"
pkgname="bmake"
version=20230622
revision=1
short_desc="Portable version of the NetBSD make build tool"
homepage="https://www.crufty.net/help/sjg/bmake.html"
license="BSD-3-Clause"
distfiles="https://www.crufty.net/ftp/pub/sjg/bmake-$version.tar.gz"
checksum="b404c99d60289d78362d0ba0468f541d8a9b4215befee2fbe5750534849cec00"
python_version=3

CFLAGS="-D_LARGE_FILE_SOURCE=1 -D_FILE_OFFSET_BITS=64"

do_configure() {
  vsed \
    -i \
    -e 's/op_test() {/& return 0;/' \
    boot-strap
  vsed \
    -i \
    -e '1s,:,#!/bin/sh,g' \
    install-sh
  if [[ -n "$CROSS_BUILD" ]]; then
    mkdir -p bmake-host
    cd bmake-host
    # build a native bmake for installation
    unset AR
    unset CC
    unset CFLAGS
    unset LD
    unset LDFLAGS
    ../boot-strap \
      op="build"
    cp linux*-*/bmake .
  fi
}

do_build() {
  local _args
  mkdir -p bmake-build
  cd bmake-build
  if [[ -n "$CROSS_BUILD" ]]; then
    _args="--host=$XBPS_CROSS_TRIPLET"
  fi
  ../boot-strap \
    $_args \
    --prefix="/usr" \
    op="build"
}

do_install() {
  cd bmake-build
  if [[ -n "$CROSS_BUILD" ]]; then
    vsed \
      -i \
      -e "s,^BMAKE=$,BMAKE=$wrksrc/bmake-host/bmake," \
      ../boot-strap
  fi
  ../boot-strap \
    --prefix="/usr" \
    --install-destdir="$DESTDIR" \
    op="install"
  rm -rf "$DESTDIR/usr/share/man/cat1"
  vman ../bmake.1

  sed -n '/#/q;p' ../make.c > LICENSE
  vlicense LICENSE
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
