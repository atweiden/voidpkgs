maintainer="nox"
pkgname="bmake"
version=20220330
revision=1
short_desc="Portable version of the NetBSD make build tool"
homepage="https://www.crufty.net/help/sjg/bmake.html"
license="BSD-3-Clause"
distfiles="https://www.crufty.net/ftp/pub/sjg/bmake-$version.tar.gz"
checksum="4b46d95b6ae4b3311ba805ff7d5a19b9e37ac0e86880e296e2111f565b545092"
create_wrksrc="yes"
python_version=3

do_configure() {
  cd bmake
  vsed \
    -i \
    -e 's/op_test() {/& return 0;/' \
    boot-strap
  vsed \
    -i \
    -e '1s,:,#!/bin/sh,g' \
    install-sh
  if [[ -n "$CROSS_BUILD" ]]; then
    mkdir -p bmake-host
    cd bmake-host
    # build a native bmake for installation
    unset AR
    unset CC
    unset CFLAGS
    unset LD
    unset LDFLAGS
    ../boot-strap \
      op="build"
    cp linux*-*/bmake .
  fi
}

do_build() {
  local _args
  mkdir -p bmake/bmake-build
  cd bmake/bmake-build
  if [[ -n "$CROSS_BUILD" ]]; then
    _args="--host=$XBPS_CROSS_TRIPLET"
  fi
  ../boot-strap \
    $_args \
    --prefix="/usr" \
    op="build"
}

do_install() {
  cd bmake/bmake-build
  if [[ -n "$CROSS_BUILD" ]]; then
    vsed \
      -i \
      -e "s,^BMAKE=$,BMAKE=$wrksrc/bmake/bmake-host/bmake," \
      ../boot-strap
  fi
  ../boot-strap \
    --prefix="/usr" \
    --install-destdir="$DESTDIR" \
    op="install"
  rm -rf "$DESTDIR/usr/share/man/cat1"
  vman ../bmake.1

  sed -n '/#/q;p' ../make.c > LICENSE
  vlicense LICENSE
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
