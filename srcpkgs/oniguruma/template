maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="oniguruma"
version=6.9.1
revision=1
short_desc="A multi-charset regular expressions library"
homepage="https://github.com/kkos/oniguruma"
license="BSD-2-Clause"
distfiles="https://github.com/kkos/oniguruma/releases/download/v$version/onig-$version.tar.gz>$pkgname-$version.tar.gz"
checksum="c7c3feb7be45a5cc9f2dec239b4a317a422e6ffea299cf91ffab1b926633ea12"
wrksrc="onig-$version"
build_style="gnu-configure"

post_install() {
  vlicense COPYING
}

oniguruma-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/bin/onig-config
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

oniguruma-doc_package() {
  noarch="yes"
  short_desc+=" - documentation"
  pkg_install() {
    vmkdir "usr/share/doc/$sourcepkg"
    vcopy "doc/*" "usr/share/doc/$sourcepkg"
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
