# skip cli tests: fail to find executable
make_check_args="-- --skip cli::direnv::exec::tests"

post_install() {
  vlicense LICENSE
  vman man/man1/rtx.1
  vdoc README.md
  vcompletion completions/rtx.bash bash rtx
  vcompletion completions/rtx.fish fish rtx
  vcompletion completions/_rtx zsh rtx
}

