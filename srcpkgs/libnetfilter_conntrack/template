maintainer="nox"
pkgname="libnetfilter_conntrack"
version=1.0.7
revision=1
short_desc="A userspace library providing an API to the in-kernel connection tracking state table"
makedepends+=" libmnl-devel"
makedepends+=" libnfnetlink-devel"
hostmakedepends="pkg-config"
homepage="http://www.netfilter.org/projects/libnetfilter_conntrack/"
license="GPL-2"
distfiles="http://www.netfilter.org/projects/libnetfilter_conntrack/files/$pkgname-$version.tar.bz2"
checksum="33685351e29dff93cc21f5344b6e628e41e32b9f9e567f4bec0478eb41f989b6"
build_style="gnu-configure"

pre_configure() {
  sed \
    -i \
    -e 's/u_int\([0-9]*\)_t/uint\1_t/' \
    $(find -name '*.[ch]')
}

libnetfilter_conntrack-devel_package() {
  depends+=" $sourcepkg>=${version}_$revision"
  depends+=" libnfnetlink-devel"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

