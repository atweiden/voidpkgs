maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="tzdata"
version=2018i
revision=1
short_desc="Time zone and daylight-saving time data"
noarch="yes"
hostmakedepends="tzutils"
homepage="http://www.iana.org/time-zones"
license="Public Domain"
distfiles="http://www.iana.org/time-zones/repository/releases/$pkgname$version.tar.gz>$pkgname-$version.tar.gz"
checksum="82c45ef84ca3bc01d0a4a397ba8adeb8f7f199c6550740587c6ac5a7108c00d9"
wrksrc="$pkgname"
create_wrksrc="yes"

do_install() {
  local timezones
  timezones+=" africa"
  timezones+=" antarctica"
  timezones+=" asia"
  timezones+=" australasia"
  timezones+=" backward"
  timezones+=" etcetera"
  timezones+=" europe"
  timezones+=" factory"
  timezones+=" northamerica"
  timezones+=" pacificnew"
  timezones+=" southamerica"
  timezones+=" systemv"
  zic -y ./yearistype -d "$DESTDIR/usr/share/zoneinfo" $timezones
  zic -y ./yearistype -d "$DESTDIR/usr/share/zoneinfo/posix" $timezones
  zic -y ./yearistype -d "$DESTDIR/usr/share/zoneinfo/right" -L leapseconds $timezones
  zic -y ./yearistype -d "$DESTDIR/usr/share/zoneinfo" -p America/New_York
  install -m 444 -t "$DESTDIR/usr/share/zoneinfo" iso3166.tab zone1970.tab zone.tab
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
