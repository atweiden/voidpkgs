maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="tzdata"
version=2018e
revision=1
short_desc="Time zone and daylight-saving time data"
noarch="yes"
hostmakedepends="tzutils"
homepage="http://www.iana.org/time-zones"
license="Public Domain"
distfiles="http://www.iana.org/time-zones/repository/releases/tzdata$version.tar.gz"
checksum="6b288e5926841a4cb490909fe822d85c36ae75538ad69baf20da9628b63b692e"
wrksrc="tzdata"
create_wrksrc="yes"

do_install() {
  local timezones+=" africa"
  local timezones+=" antarctica"
  local timezones+=" asia"
  local timezones+=" australasia"
  local timezones+=" backward"
  local timezones+=" etcetera"
  local timezones+=" europe"
  local timezones+=" factory"
  local timezones+=" northamerica"
  local timezones+=" pacificnew"
  local timezones+=" southamerica"
  local timezones+=" systemv"
  zic -y ./yearistype -d "$DESTDIR/usr/share/zoneinfo" $timezones
  zic -y ./yearistype -d "$DESTDIR/usr/share/zoneinfo/posix" $timezones
  zic -y ./yearistype -d "$DESTDIR/usr/share/zoneinfo/right" -L leapseconds $timezones
  zic -y ./yearistype -d "$DESTDIR/usr/share/zoneinfo" -p America/New_York
  install -m 444 -t "$DESTDIR/usr/share/zoneinfo" iso3166.tab zone1970.tab zone.tab
}

# vim: set filetype=sh foldmethod=marker foldlevel=0:
