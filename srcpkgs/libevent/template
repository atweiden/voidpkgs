maintainer="nox"
pkgname="libevent"
version=2.1.11
revision=2
python_version=3
short_desc="Abstract asynchronous event notification library"
makedepends="libressl-devel"
homepage="http://libevent.org/"
license="BSD-3-Clause"
distfiles="https://github.com/libevent/libevent/releases/download/release-$version-stable/$pkgname-$version-stable.tar.gz"
checksum="a65bac6202ea8c5609fd5c7e480e6d25de467ea1917c08290c521752f147283d"
wrksrc="$pkgname-$version-stable"
build_style="gnu-configure"

post_install() {
  vlicense LICENSE
}

libevent-devel_package() {
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/bin
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

