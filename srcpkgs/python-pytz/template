maintainer="nox"
pkgname="python-pytz"
version=2020.4
revision=1
short_desc="Python2 timezone library"
depends+=" python"
depends+=" tzdata"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="https://pythonhosted.org/pytz/"
license="MIT"
distfiles="$PYPI_SITE/p/pytz/${pkgname#*-}-$version.tar.gz"
checksum="3e6b7dd2d1e0a59084bcee14a17af60c5c562cdc16d828e8eba2e683d3a7e268"
wrksrc="${pkgname#*-}-$version"
build_style="python-module"

post_install() {
  vlicense LICENSE.txt LICENSE
  # use system tz database
  for py_sitelib in "$py2_sitelib" \
                    "$py3_sitelib"; do
    rm -rf "$DESTDIR/$py_sitelib/pytz/zoneinfo"
    ln -sf /usr/share/zoneinfo "$DESTDIR/$py_sitelib/pytz/zoneinfo"
  done
}

python3-pytz_package() {
  unset depends
  depends+=" python3"
  depends+=" tzdata"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
    vlicense LICENSE.txt LICENSE
  }
}

