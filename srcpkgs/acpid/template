maintainer="nox"
pkgname="acpid"
version=2.0.33
revision=2
short_desc="ACPI Daemon (acpid) With Netlink Support"
license="GPL-2.0-or-later"
homepage="https://sourceforge.net/projects/acpid2/"
distfiles="$SOURCEFORGE_SITE/acpid2/$pkgname-$version.tar.xz"
checksum="0856f71b3eb34a1b663d0a8e6363dfcbc519e63d847330498898658e2972dbe8"
conf_files+=" /etc/acpi/events/anything"
conf_files+=" /etc/acpi/handler.sh"
build_style="gnu-configure"

post_install() {
  vinstall "$FILESDIR/handler.sh" 755 etc/acpi
  vinstall "$FILESDIR/anything" 644 etc/acpi/events
  vsv acpid
}

