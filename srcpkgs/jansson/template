maintainer="nox"
pkgname="jansson"
version=2.12
revision=1
short_desc="Library for encoding, decoding and manipulating JSON data"
homepage="http://www.digip.org/jansson/"
license="MIT"
distfiles="http://www.digip.org/jansson/releases/$pkgname-$version.tar.bz2"
checksum="645d72cc5dbebd4df608d33988e55aa42a7661039e19a379fcbe5c79d1aee1d2"
build_style="gnu-configure"

post_install() {
  vlicense LICENSE
}

jansson-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

