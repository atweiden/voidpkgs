maintainer="nox"
pkgname="dune"
version=2.9.1
revision=1
short_desc="Composable build system for OCaml"
depends="ocaml"
makedepends="ocaml"
homepage="https://dune.build/"
license="MIT"
distfiles="https://github.com/ocaml/dune/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="493f8c95697620b1e84278dcf9b4466f63f0858b227417e87ec75d102af620c4"
build_style="gnu-makefile"
make_build_target="release"
nocross="ocaml"

post_install() {
  vmkdir usr/share
  mv "$DESTDIR/usr/man" "$DESTDIR/usr/share"
  rm -r "$DESTDIR/usr/doc"
  vlicense LICENSE.md
}

