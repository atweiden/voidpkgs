maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="skalibs"
version=2.9.0.0
revision=1
short_desc="General purpose libraries for building software from skarnet.org"
homepage="https://skarnet.org/software/skalibs/"
license="ISC"
changelog="https://skarnet.org/software/skalibs/upgrade.html"
distfiles="https://skarnet.org/software/skalibs/$pkgname-$version.tar.gz"
checksum="f5604f9e5ebb436d3a8efa16a2c4133f7bd424d9f22aa88fe7a372f0153396fb"
build_style="configure"
configure_args+=" --bindir=/usr/bin"
configure_args+=" --datadir=/usr/share/$pkgname"
configure_args+=" --dynlibdir=/usr/lib"
configure_args+=" --enable-clock"
configure_args+=" --enable-force-devr"
configure_args+=" --enable-monotonic"
configure_args+=" --enable-shared"
configure_args+=" --enable-static"
configure_args+=" --libdir=/usr/lib"
configure_args+=" --libdir=/usr/lib"

if [[ -n "$CROSS_BUILD" ]]; then
  _sysdepspkg="skaware-void-sysdeps"
  distfiles+=" https://github.com/CMB/$_sysdepspkg/archive/2.8.1.0.tar.gz"
  checksum+=" b5a56d24caeb731f9a8468fa61ab0e9ae139370609ef4acb36888e69bbe8d98d"
  configure_args+=" --with-sysdeps=../$_sysdepspkg-2.8.1.0/$XBPS_CROSS_TRIPLET"
  case "$XBPS_TARGET_MACHINE" in
    aarch64*|armv6*|armv7l*|i686|x86_64*|ppc*)
      ;;
    *)
      nocross="Missing cross sysdeps"
      ;;
  esac
fi

post_install() {
  vlicense COPYING LICENSE
}

skalibs-doc_package() {
  archs="noarch"
  short_desc+=" - documentation"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmkdir usr/share/doc/skalibs
    vcopy "doc/*" usr/share/doc/skalibs
  }
}

skalibs-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/skalibs/sysdeps
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

