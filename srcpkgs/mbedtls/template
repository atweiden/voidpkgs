maintainer="nox"
pkgname="mbedtls"
version=2.16.10
revision=1
short_desc="Portable cryptographic TLS library"
hostmakedepends+=" perl"
hostmakedepends+=" python3"
homepage="https://tls.mbed.org/"
license="Apache-2.0"
changelog="https://github.com/ARMmbed/mbedtls/raw/$pkgname-${version%.*}/ChangeLog"
distfiles="https://github.com/ARMmbed/mbedtls/archive/$pkgname-$version.tar.gz"
checksum="78c02e2d277a302454ada90274d16d80f88d761bdd4243528e4206cf7920be78"
wrksrc="$pkgname-$pkgname-$version"
build_style="cmake"
configure_args+=" -DENABLE_TESTING=1"
configure_args+=" -DUSE_SHARED_MBEDTLS_LIBRARY=1"
reverts="2.17.0_1"

pre_configure() {
  ./scripts/config.pl set MBEDTLS_THREADING_C
  ./scripts/config.pl set MBEDTLS_THREADING_PTHREAD
}

mbedtls-utils_package() {
  short_desc+=" - additional utilities"
  depends="$sourcepkg-${version}_$revision"
  pkg_install() {
    vmove usr/bin
    rm "$PKGDESTDIR/usr/bin/query_compile_time_config"
  }
}

mbedtls-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg-${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
