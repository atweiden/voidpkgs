maintainer="nox"
pkgname="xfsprogs"
version=5.6.0
revision=1
short_desc="Utilities for managing the XFS filesystem"
makedepends+=" libblkid-devel"
makedepends+=" readline-devel"
hostmakedepends+=" gettext"
hostmakedepends+=" libuuid-devel"
homepage="http://xfs.org/index.php/Main_Page"
license="LGPL-2.1-or-later"
distfiles="$KERNEL_SITE/utils/fs/xfs/xfsprogs/$pkgname-$version.tar.xz"
checksum="0aba2aac5d80d07646dde868437fc337af2c7326edadcc6d6a7c0bfd3190c1e6"
build_style="gnu-configure"
configure_args+=" --enable-lib64=no"
configure_args+=" --enable-readline=yes"

do_install() {
  make \
    DIST_ROOT="$DESTDIR" \
    PKG_ROOT_LIB_DIR="/usr/lib" \
    PKG_ROOT_SBIN_DIR="/usr/bin" \
    install \
    install-dev
  rm -rf "$DESTDIR/usr/share/doc"
}

xfsprogs-devel_package() {
  depends+=" $sourcepkg>=${version}_$revision"
  depends+=" libuuid-devel"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share/man/man3
  }
}

