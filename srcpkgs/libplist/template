maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libplist"
version=2.1.0
revision=1
short_desc="Apple Property List library"
makedepends+=" libglib-devel"
makedepends+=" libxml2-devel"
makedepends+=" python-devel"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" pkgconf"
hostmakedepends+=" python-Cython"
hostmakedepends+=" python-devel"
homepage="https://github.com/libimobiledevice/libplist"
license="LGPL-2.1-only"
distfiles="https://github.com/libimobiledevice/libplist/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="4b33f9af3f9208d54a3c3e1a8c149932513f451c98d1dd696fe42c06e30b7f03"
build_style="gnu-configure"
configure_args="--disable-static"

pre_configure() {
  sed \
    -i \
    -e 's,-L$(libdir),,g' \
    cython/Makefile.am
  export PYTHON_CPPFLAGS=" -I$XBPS_CROSS_BASE/usr/include/python2.7"
  export PYTHON_LDFLAGS=" -L$XBPS_CROSS_BASE/usr/lib -lpython2.7"
  autoreconf -fi
  sed \
    -i \
    -e "s#\$PYTHON-config#__DOES_NOT_EXIST__#" \
    configure
}

libplist++_package() {
  short_desc+=" - C++ runtime library"
  pkg_install() {
    vmove "usr/lib/libplist++.so.*"
  }
}

libplist-python_package() {
  lib32disabled="yes"
  short_desc+=" - Python bindings"
  pkg_install() {
    vmove usr/lib/python2.7
  }
}

libplist-devel_package() {
  depends+=" libplist++>=${version}_$revision"
  depends+=" libplist>=${version}_$revision"
  depends+=" libxml2-devel"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
