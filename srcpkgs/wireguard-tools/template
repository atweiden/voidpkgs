build_wrksrc="src"
build_style="gnu-makefile"
make_install_args+=" WITH_BASHCOMPLETION=yes"
make_install_args+=" WITH_WGQUICK=yes"
make_dirs="/etc/wireguard 0700 root root"

post_extract() {
  sed \
    -i \
    -e 's/^CFLAGS /override &/' \
    "$build_wrksrc/Makefile"
}

