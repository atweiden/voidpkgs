maintainer="nox"
pkgname="python-idna"
version=2.9
revision=1
short_desc="Internationalized Domain Names in Applications (IDNA) for Python2"
archs="noarch"
depends="python"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="https://github.com/kjd/idna"
license="BSD-3-Clause"
changelog="https://github.com/kjd/idna/raw/master/HISTORY.rst"
distfiles="$PYPI_SITE/i/idna/${pkgname#*-}-$version.tar.gz"
checksum="7588d1c14ae4c77d74036e8c22ff447b26d0fde8f007354fd48a7814db15b7cb"
wrksrc="${pkgname#*-}-$version"
build_style="python-module"

post_install() {
  vlicense LICENSE.rst
}

python3-idna_package() {
  archs="noarch"
  depends="python3"
  short_desc="${short_desc/Python2/Python3}"
  pkg_install() {
    vmove "usr/lib/python3*"
    vlicense LICENSE.rst
  }
}

