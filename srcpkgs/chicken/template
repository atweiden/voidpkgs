maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="chicken"
version=5.0.0
revision=1
short_desc="A practical and portable Scheme system"
# no arm support
archs+=" i686*"
archs+=" ppc64le*"
archs+=" x86_64*"
homepage="http://www.call-cc.org"
license="BSD-3-Clause"
distfiles="http://code.call-cc.org/releases/$version/$pkgname-$version.tar.gz"
checksum="a8b94bb94c5d6a4348cedd75dc334ac80924bcd9a7a7a3d6af5121e57ef66595"

do_configure() {
  make \
    -B \
    -f Makefile.linux \
    chicken-defaults.h \
    PREFIX="/usr"
}

do_build() {
  make \
    -j1 \
    C_COMPILER_OPTIMIZATION_OPTIONS="$CFLAGS" \
    LINKER_LINK_SHARED_PROGRAM_OPTIONS="$LDFLAGS" \
    PLATFORM="linux" \
    PREFIX="/usr"
}

do_install() {
  make \
    -j1 \
    C_COMPILER_OPTIMIZATION_OPTIONS="$CFLAGS" \
    DESTDIR="$DESTDIR" \
    LINKER_LINK_SHARED_PROGRAM_OPTIONS="$LDFLAGS" \
    PLATFORM="linux" \
    PREFIX="/usr" \
    install
}

post_install() {
  vlicense LICENSE
}

libchicken_package() {
  short_desc+=" - runtime library"
  pkg_install() {
    vmove "usr/lib/*.so.*"
  }
}

chicken-devel_package() {
  depends="libchicken>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
