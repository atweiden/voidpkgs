maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="chicken"
version=4.12.0
revision=2
short_desc="A practical and portable Scheme system"
# no arm support
only_for_archs="i686 i686-musl x86_64 x86_64-musl"
homepage="http://www.call-cc.org"
license="BSD"
distfiles="http://code.call-cc.org/releases/$version/$pkgname-$version.tar.gz"
checksum="605ace459bc66e8c5f82abb03d9b1c9ca36f1c2295931d244d03629a947a6989"

do_configure() {
  make \
    -B \
    -f Makefile.linux \
    chicken-defaults.h \
    PREFIX="/usr"
}

do_build() {
  make \
    -j1 \
    C_COMPILER_OPTIMIZATION_OPTIONS="$CFLAGS" \
    LINKER_LINK_SHARED_PROGRAM_OPTIONS="$LDFLAGS" \
    PLATFORM="linux" \
    PREFIX="/usr"
}

do_install() {
  make \
    -j1 \
    C_COMPILER_OPTIMIZATION_OPTIONS="$CFLAGS" \
    DESTDIR="$DESTDIR" \
    LINKER_LINK_SHARED_PROGRAM_OPTIONS="$LDFLAGS" \
    PLATFORM="linux" \
    PREFIX="/usr" \
    install
}

post_install() {
  vlicense LICENSE
}

libchicken_package() {
  short_desc+=" - runtime library"
  pkg_install() {
    vmove "usr/lib/*.so.*"
  }
}

chicken-devel_package() {
  depends="libchicken>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
