maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="http-parser"
version=2.9.0
revision=1
short_desc="HTTP request/response parser for c"
homepage="https://github.com/joyent/http-parser"
license="MIT"
distfiles="https://github.com/joyent/http-parser/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="ef26268c54c8084d17654ba2ed5140bffeffd2a040a895ffb22a6cca3f6c613f"
build_style="gnu-makefile"
make_build_target="library"

pre_install() {
  vmkdir usr/lib/pkgconfig
  vmkdir usr/include
}

post_install() {
  vlicense LICENSE-MIT
}

http-parser-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
  }
}

