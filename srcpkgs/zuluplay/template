maintainer="nox"
pkgname="zuluplay"
version=1.1
revision=1
short_desc="Zulucrypt's fork of tcplay"
makedepends+=" device-mapper-devel"
makedepends+=" libgcrypt-devel"
hostmakedepends="pkg-config"
homepage="https://github.com/mhogomchungu/zuluplay"
license="GPL-3"
distfiles="https://github.com/mhogomchungu/zuluplay/archive/$version.tar.gz>$pkgname-$version.tar.gz"
checksum="4223fea60bd470b122dac7722d726785219c0e0a886f492ab4c0699c14ffd70d"
build_style="cmake"

zuluplay-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
  }
}

