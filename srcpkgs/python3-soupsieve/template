do_check() {
  PYTHONPATH="$PWD/build/lib" python3 -m pytest
}

post_install() {
  vlicense LICENSE.md
  # remove tests outside of the namespace
  rm -rf "$DESTDIR/$py3_sitelib/tests"
}

