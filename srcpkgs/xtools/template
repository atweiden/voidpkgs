maintainer="nox"
pkgname="xtools"
version=0.64
revision=2
short_desc="Opinionated helpers for working with XBPS"
depends+=" curl"
depends+=" git"
depends+=" make"
depends+=" spdx-licenses-list"
depends+=" xtools-minimal-${version}_$revision"
homepage="http://git.vuxu.org/xtools"
license="Public Domain"
distfiles="http://git.vuxu.org/xtools/snapshot/$pkgname-$version.tar.gz"
checksum="a49140066744d4aaaf856fb40d92df26d6d3f80b2aa03da1746c513e7eab40be"
build_style="gnu-makefile"

# all xtools that can function without git installed
# (git is by far the largest dependency)
_minimal+=" xcheckrestart"
_minimal+=" xchroot"
_minimal+=" xclash"
_minimal+=" xdbg"
_minimal+=" xdiff"
_minimal+=" xdistdir"
_minimal+=" xdowngrade"
_minimal+=" xetcchanges"
_minimal+=" xgrep"
_minimal+=" xhog"
_minimal+=" xi"
_minimal+=" xilog"
_minimal+=" xls"
_minimal+=" xmandoc"
_minimal+=" xmksv"
_minimal+=" xnodev"
_minimal+=" xoptdiff"
_minimal+=" xpkg"
_minimal+=" xq"
_minimal+=" xrs"
_minimal+=" xuname"
_minimal+=" xvoidstrap"

xtools-minimal_package() {
  unset depends
  short_desc+=" - minimal subset"
  depends+=" bash"
  depends+=" findutils"
  depends+=" xbps"
  pkg_install() {
    for tool in $_minimal; do
      vmove "usr/bin/$tool"
      vmove "usr/share/man/man1/$tool.1"
    done
    vmove usr/share/man/man1/xtools.1
    vmove usr/share/zsh
  }
}

