maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="h2o"
version=2.2.5
revision=1
short_desc="Optimized HTTP server with support for HTTP/1.x and HTTP/2"
depends="perl"
makedepends+=" libressl-devel"
makedepends+=" libuv-devel"
makedepends+=" zlib-devel"
hostmakedepends="pkg-config"
homepage="https://h2o.examp1e.net/"
license="MIT"
distfiles="https://github.com/h2o/h2o/archive/v$version.tar.gz"
checksum="eafb40aa2d93b3de1af472bb046c17b2335c3e5a894462310e1822e126c97d24"
conf_files="/etc/h2o.conf"
build_style="cmake"
system_accounts="h2o"

post_install() {
  vsv h2o
  vconf "$FILESDIR/h2o.conf"
  vlicense LICENSE
}

h2o-devel_package() {
  short_desc+=" - development files"
  depends="$makedepends"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
  }
}

