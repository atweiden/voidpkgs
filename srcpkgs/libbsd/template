maintainer="nox"
pkgname="libbsd"
version=0.11.7
revision=2
short_desc="Provides useful functions commonly found on BSD system"
makedepends="libmd-devel"
homepage="https://libbsd.freedesktop.org/"
license="ISC, MIT, Beerware, BSD-2-Clause, BSD-3-Clause, BSD-4-Clause"
distfiles="https://libbsd.freedesktop.org/releases/$pkgname-$version.tar.xz"
checksum="9baa186059ebbf25c06308e9f991fda31f7183c0f24931826d83aa6abd8a0261"
build_style="gnu-configure"

post_install() {
  vlicense COPYING
}

libbsd-devel_package() {
  unset depends
  depends+=" $sourcepkg>=${version}_$revision"
  depends+=" libmd-devel"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share/man
  }
}

