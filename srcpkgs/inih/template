maintainer="nox"
pkgname="inih"
version=53
revision=1
short_desc="Simple ini file parser library"
homepage="https://github.com/benhoyt/inih"
license="BSD-3-Clause"
distfiles="https://github.com/benhoyt/inih/archive/r$version.tar.gz>$pkgname-$version.tar.gz"
checksum="01b0366fdfdf6363efc070c2f856f1afa33e7a6546548bada5456ad94a516241"
build_style="meson"
configure_args+=" -Ddistro_install=true"
configure_args+=" -Ddefault_library=shared"

post_install() {
  vlicense LICENSE.txt
}

inih-devel_package() {
  short_desc+=" - development files"
  depends="inih-${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
  }
}

