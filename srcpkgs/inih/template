maintainer="nox"
pkgname="inih"
version=52
revision=1
short_desc="Simple ini file parser library"
homepage="https://github.com/benhoyt/inih"
license="BSD-3-Clause"
distfiles="https://github.com/benhoyt/inih/archive/r$version.tar.gz"
checksum="439cff9ce9a8afc52d08772ac3e93b3cecd79c7707f871fb4534fb3a48201880"
wrksrc="inih-r$version"
build_style="meson"
configure_args+=" -Ddistro_install=true"
configure_args+=" -Ddefault_library=shared"

post_install() {
  vlicense LICENSE.txt
}

inih-devel_package() {
  short_desc+=" - development files"
  depends="inih-${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.so"
  }
}

