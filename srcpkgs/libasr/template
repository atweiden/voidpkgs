maintainer="nox"
pkgname="libasr"
version=1.0.4
revision=1
short_desc="Simple and portable asynchronous resolver library"
makedepends="libressl-devel"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
homepage="https://www.opensmtpd.org/"
license="BSD-2-Clause"
distfiles="https://github.com/OpenSMTPD/libasr/releases/download/$version/$pkgname-$version.tar.gz"
checksum="19fb6bed10d15c9775c8d008cd1130155917ae4e801c729fe85e6d88a545dab4"
build_style="gnu-configure"

if [[ "$XBPS_TARGET_LIBC" != "musl" ]]; then
  CFLAGS="-DHAVE_RES_RANDOMID"
fi

pre_configure() {
  ./bootstrap
}

post_install() {
  vlicense LICENCE
}

libasr-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

