maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libasr"
version=1.0.2
revision=4
short_desc="Simple and portable asynchronous resolver library"
makedepends="libressl-devel"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
homepage="https://www.opensmtpd.org/"
license="ISC, BSD"
distfiles="https://github.com/OpenSMTPD/libasr/archive/$pkgname-$version.tar.gz"
checksum="4ab54264206e255fd6c2de982764bb5ce7857ec8f649ad3ee45771244593b6e1"
wrksrc="$pkgname-$pkgname-$version"
build_style="gnu-configure"

case "$XBPS_TARGET_MACHINE" in
  *-musl)
    ;;
  *)
    CFLAGS+=" -DHAVE_RES_RANDOMID"
    ;;
esac

pre_configure() {
  ./bootstrap
}

post_install() {
  vlicense LICENCE
}

libasr-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

