export GOFLAGS="-trimpath"

post_install() {
  scdoc <doc/senpai.1.scd >doc/senpai.1
  scdoc <doc/senpai.5.scd >doc/senpai.5
  vman doc/senpai.1
  vman doc/senpai.5
  vlicense LICENSE
}

