maintainer="nox"
pkgname="senpai"
version=0.2.0
revision=2
short_desc="IRC client that works best with bouncers"
hostmakedepends="scdoc"
homepage="https://git.sr.ht/~taiite/senpai"
license="ISC"
distfiles="https://git.sr.ht/~taiite/senpai/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="9786fd83f3e1067549c3c88455a1f66ec66d993fe597cee334d217a5d1cf4803"
build_style="go"
go_import_path="git.sr.ht/~taiite/senpai"
go_package="./cmd/senpai"
go_build_tags+=" netgo"
go_build_tags+=" osusergo"
go_ldflags="-buildid="
if [[ "$XBPS_TARGET_LIBC" == "musl" ]]; then
  go_ldflags+=" -extldflags=-static"
  go_ldflags+=" -linkmode=external"
fi

pre_build() {
  export GOFLAGS="-trimpath"
}

post_install() {
  scdoc <doc/senpai.1.scd >doc/senpai.1
  scdoc <doc/senpai.5.scd >doc/senpai.5
  vman doc/senpai.1
  vman doc/senpai.5
  vlicense LICENSE
}

