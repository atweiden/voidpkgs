maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libtermkey"
version=0.21.1
revision=1
short_desc="Library for processing keyboard entry from terminal-based programs"
makedepends="unibilium-devel"
hostmakedepends+=" libtool"
hostmakedepends+=" perl"
hostmakedepends+=" pkgconf"
homepage="http://www.leonerd.org.uk/code/libtermkey"
license="MIT"
distfiles="http://www.leonerd.org.uk/code/libtermkey/$pkgname-$version.tar.gz"
checksum="cecbf737f35d18f433c8d7864f63c0f878af41f8bd0255a3ebb16010dc044d5f"
build_style="gnu-makefile"

do_build() {
  if [[ -n "$CROSS_BUILD" ]]; then
    cp /usr/bin/libtool .
    sed \
      -i \
      -e "s,CCLD=.*,CCLD=$CC,g;s,CC=.*,CC=$CC,g" \
      libtool
    sed \
      -i \
      -e 's,libtool,./libtool,g' \
      Makefile
  fi
  make termkey.h libtermkey.la
}

post_install() {
  vlicense LICENSE
}

libtermkey-devel_package() {
  short_desc+=" - development files"
  depends+=" $makedepends"
  depends+=" $sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/lib/pkgconfig
    vmove usr/share/man/man3
  }
}

