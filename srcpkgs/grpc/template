maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="grpc"
version=1.24.3
revision=1
_upbver="931bbecbd3230ae7f22efa5d203639facc47f719"
short_desc="High performance, open source, general RPC framework"
makedepends+=" c-ares-devel"
makedepends+=" gperftools-devel"
makedepends+=" libprotoc-devel"
makedepends+=" libressl-devel"
makedepends+=" protobuf-devel"
makedepends+=" zlib-devel"
hostmakedepends="protobuf"
homepage="https://github.com/grpc/grpc"
license="Apache-2.0"
distfiles+=" https://github.com/grpc/grpc/archive/v$version/$pkgname-$version.tar.gz"
distfiles+=" https://github.com/protocolbuffers/upb/archive/$_upbver/upb-$_upbver.tar.gz"
checksum+=" c84b3fa140fcd6cce79b3f9de6357c5733a0071e04ca4e65ba5f8d306f10f033"
checksum+=" 95150db57b51b65f3422c38953956e0f786945d842d76f8ab685fbcd93ab5caa"
build_style="gnu-makefile"
make_build_args+=" prefix=\$(DESTDIR)/usr"
make_build_args+=" AROPTS=rc"
make_build_args+=" LD=\$(CC)"
make_install_args="prefix=\$(DESTDIR)/usr"
nocross="yes"

post_extract() {
  sed \
    -i \
    -r \
    -e 's/-Werror//g;/ldconfig/d;s/ strip-(static|shared)_c(xx)? / /' \
    Makefile
  rm -rf third_party/upb
  mv "../upb-$_upbver" third_party/upb
}

post_install() {
  vlicense NOTICE.txt
}

grpc-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.so"
    vmove "usr/lib/*.a"
    vmove usr/lib/pkgconfig
  }
}

