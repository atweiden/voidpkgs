maintainer="nox"
pkgname="grpc"
version=1.26.0
revision=1
short_desc="High performance, open source, general RPC framework"
makedepends+=" c-ares-devel"
makedepends+=" gperftools-devel"
makedepends+=" libprotoc-devel"
makedepends+=" libressl-devel"
makedepends+=" protobuf-devel"
makedepends+=" zlib-devel"
hostmakedepends="protobuf"
homepage="https://github.com/grpc/grpc"
license="Apache-2.0"
distfiles="https://github.com/grpc/grpc/archive/v$version/$pkgname-$version.tar.gz"
checksum="2fcb7f1ab160d6fd3aaade64520be3e5446fc4c6fa7ba6581afdc4e26094bd81"
build_style="gnu-makefile"
make_build_args+=" prefix=\$(DESTDIR)/usr"
make_build_args+=" AROPTS=rc"
make_build_args+=" LD=\$(CC)"
make_install_args="prefix=\$(DESTDIR)/usr"
nocross="yes"

post_extract() {
  sed \
    -i \
    -r \
    -e 's/-Werror//g;/ldconfig/d;s/ strip-(static|shared)_c(xx)? / /' \
    Makefile
}

post_install() {
  vlicense NOTICE.txt
}

grpc-devel_package() {
  short_desc+=" - development files"
  depends="$sourcepkg>=${version}_$revision"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.so"
    vmove "usr/lib/*.a"
    vmove usr/lib/pkgconfig
  }
}

