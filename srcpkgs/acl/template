maintainer="nox"
pkgname="acl"
version=2.2.53
revision=1
short_desc="Access Control List filesystem support"
makedepends="attr-devel"
homepage="https://savannah.nongnu.org/projects/acl"
license="LGPL-2.1-or-later"
distfiles="$NONGNU_SITE/acl/$pkgname-$version.tar.gz"
checksum="06be9865c6f418d851ff4494e12406568353b891ffe1f596b34693c387af26c7"
build_style="gnu-configure"
configure_args+=" --libdir=/usr/lib"
configure_args+=" --libexecdir=/usr/lib"
if [[ "$XBPS_TARGET_MACHINE" == "i686" ]]; then
  unset configure_args
  configure_args+=" --libdir=/usr/lib32"
  configure_args+=" --libexecdir=/usr/lib32"
fi
bootstrap="yes"

if [[ -z "$CHROOT_READY" ]]; then
  CFLAGS+=" -I$XBPS_MASTERDIR/usr/include"
  LDFLAGS+=" -L$XBPS_MASTERDIR/usr/lib"
fi

acl-devel_package() {
  depends+=" acl>=${version}_$revision"
  depends+=" attr-devel"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove "usr/share/man/man[235]"
    vmove usr/lib/pkgconfig
    vmove usr/share/doc
  }
}

acl-progs_package() {
  short_desc+=" - utilities"
  pkg_install() {
    vmove usr/bin
    vmove usr/share
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
