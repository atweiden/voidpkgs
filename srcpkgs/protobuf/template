maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="protobuf"
version=3.6.1.1
revision=1
short_desc="Google's data interchange format"
makedepends="zlib-devel"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
hostmakedepends+=" pkg-config"
homepage="https://developers.google.com/protocol-buffers/"
license="BSD-3-Clause"
changelog="https://github.com/google/protobuf/raw/master/CHANGES.txt"
distfiles="https://github.com/google/protobuf/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="1ade182f91f0fa6c6116195def5d22270e01b9d03fe91319e4c6215022d0d24b"
build_style="gnu-configure"

CXXFLAGS="-std=c++14"

if [[ -n "$CROSS_BUILD" ]]; then
  # needs host protoc
  hostmakedepends+=" protobuf"
  configure_args+=" --with-protoc=/usr/bin/protoc"
fi

case "$XBPS_TARGET_MACHINE" in
  armv[56]*|mips*|ppc|ppc-musl)
    makedepends+=" libatomic-devel"
    LDFLAGS+=" -latomic"
    ;;
esac

pre_configure() {
  autoreconf -fi
}

post_install() {
  vlicense LICENSE
}

protobuf-devel_package() {
  depends+=" protobuf-${version}_$revision"
  depends+=" protobuf-lite-${version}_$revision"
  depends+=" zlib-devel"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

protobuf-lite_package() {
  short_desc+=" - lite version"
  pkg_install() {
    vmove "usr/lib/libprotobuf-lite.so.*"
  }
}

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
