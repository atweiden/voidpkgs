maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libsigc++"
version=2.10.1
revision=1
short_desc="Type-safe callback system for C++ programs"
hostmakedepends="m4"
homepage="https://libsigcplusplus.github.io/libsigcplusplus/"
license="LGPL-2.1-or-later"
distfiles="$GNOME_SITE/libsigc++/${version%.*}/$pkgname-$version.tar.xz"
checksum="c9a25f26178c6cbb147f9904d8c533b5a5c5111a41ac2eb781eb734eea446003"
build_style="gnu-configure"
configure_args+=" --disable-benchmark"
configure_args+=" --disable-documentation"
configure_args+=" --enable-static"

libsigc++-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove usr/lib/sigc++-2.0
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

