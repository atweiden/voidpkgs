maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libsigc++"
version=2.10.2
revision=1
short_desc="Type-safe callback system for C++ programs"
hostmakedepends="m4"
homepage="https://libsigcplusplus.github.io/libsigcplusplus/"
license="LGPL-2.1-or-later"
distfiles="$GNOME_SITE/libsigc++/${version%.*}/$pkgname-$version.tar.xz"
checksum="b1ca0253379596f9c19f070c83d362b12dfd39c0a3ea1dd813e8e21c1a097a98"
build_style="gnu-configure"
configure_args+=" --disable-benchmark"
configure_args+=" --disable-documentation"
configure_args+=" --enable-static"

libsigc++-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove usr/lib/sigc++-2.0
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
  }
}

