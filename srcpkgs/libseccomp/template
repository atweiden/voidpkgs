maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libseccomp"
version=2.4.1
revision=1
short_desc="High level interface to the Linux Kernel's seccomp filter"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
homepage="https://github.com/seccomp/libseccomp/"
license="LGPL-2.1-or-later"
distfiles="https://github.com/seccomp/libseccomp/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="36aa502c0461ae9efc6c93ec2430d6badd9bf91ecbe73806baf7b7c6f687ab4f"
build_style="gnu-configure"

post_extract() {
  case "$XBPS_TARGET_MACHINE" in
    *-musl)
      sed \
        -i \
        -e '/<linux\/prctl.h>/d' \
        src/system.h
      ;;
  esac
}

pre_configure() {
  NOCONFIGURE=1 ./autogen.sh
}

libseccomp-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share/man/man3
  }
}

