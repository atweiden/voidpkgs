maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="libseccomp"
version=2.4.2
revision=2
short_desc="High level interface to the Linux Kernel's seccomp filter"
hostmakedepends+=" automake"
hostmakedepends+=" libtool"
homepage="https://github.com/seccomp/libseccomp/"
license="LGPL-2.1-or-later"
distfiles="https://github.com/seccomp/libseccomp/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="c988dc3f6c641e12c68285afb57d69361f3bfd5b7235d067b3991bf9a57cca7e"
build_style="gnu-configure"

post_extract() {
  case "$XBPS_TARGET_MACHINE" in
    *-musl)
      sed \
        -i \
        -e '/<linux\/prctl.h>/d' \
        src/system.h
      ;;
  esac
}

pre_configure() {
  NOCONFIGURE=1 ./autogen.sh
}

libseccomp-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share/man/man3
  }
}

