maintainer="nox"
pkgname="libseccomp"
version=2.5.4
revision=1
short_desc="High level interface to the Linux Kernel's seccomp filter"
checkdepends="which"
hostmakedepends+=" automake"
hostmakedepends+=" gperf"
hostmakedepends+=" libtool"
homepage="https://github.com/seccomp/libseccomp/"
license="LGPL-2.1-or-later"
distfiles="https://github.com/seccomp/libseccomp/archive/v$version.tar.gz>$pkgname-$version.tar.gz"
checksum="96bbadb4384716272a6d2be82801dc564f7aab345febfe9b698b70fc606e3f75"
build_style="gnu-configure"

pre_configure() {
  NOCONFIGURE=1 ./autogen.sh
}

libseccomp-devel_package() {
  depends="$sourcepkg>=${version}_$revision"
  short_desc+=" - development files"
  pkg_install() {
    vmove usr/include
    vmove usr/lib/pkgconfig
    vmove "usr/lib/*.a"
    vmove "usr/lib/*.so"
    vmove usr/share/man/man3
  }
}

