# Template file for 'python-jsonrpclib-pelix'
maintainer="Andy Weidenbaum <archbaum@gmail.com>"
pkgname="python-jsonrpclib-pelix"
version=0.3.1
revision=1
short_desc="A Python JSON-RPC over HTTP that mirrors xmlrpclib syntax"
noarch="yes"
depends="python"
hostmakedepends+=" python-setuptools"
hostmakedepends+=" python3-setuptools"
homepage="https://github.com/tcalmant/jsonrpclib"
license="Apache-2.0"
distfiles="$PYPI_SITE/j/${pkgname#python-}/${pkgname#python-}-$version.tar.gz"
checksum="5417b1508d5a50ec64f6e5b88907f111155d52607b218ff3ba9a777afb2e49e3"
wrksrc="${pkgname#python-}-$version"
build_style="python-module"
pycompile_module="jsonrpclib"

post_install() {
	vlicense LICENSE.txt
	vdoc README.rst
}

python3-jsonrpclib-pelix_package() {
	short_desc="${short_desc/Python2/Python3}"
	noarch="yes"
	depends="python3"
	pycompile_module="jsonrpclib"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE.txt
		vdoc README.rst
	}
}

